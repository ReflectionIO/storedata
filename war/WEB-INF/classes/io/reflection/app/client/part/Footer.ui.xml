<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='res' type='io.reflection.app.client.res.Images' />
    <ui:style>
    @external icon-facebook-squared,icon-linkedin-squared;
    .logo {
    	font-size: 18px;
    	line-height: 18px;
    	vertical-align: middle;
    	padding-bottom: 20px;
    	display: block;
    	color: #272833;
    }
    
    .footer {
    	padding-top: 40px;
    }
    
    .footer a {
    	/* color: white; */
    	
    }
    
    .footer a:HOVER {
    	/* color: #6D69C5; */
    	
    }
    
    .social li {
    	display: inline;
    	font-size: 25px;
    }
    
    .navbar {
    	list-style: none;
    	padding: 0;
    	margin-bottom: 30px;
    }
    
    .navbar li {
    	display: inline;
    	font-size: 12px;
    	margin-right: 10px;
    }
    
    .navbar li a {
    	color: #999999;
    }
    
    .navbar li a:HOVER {
    	color: #272833;
    }
    
    .copyright {
    	font-size: 10px;
    }
    
    .social a .icon-facebook-squared {
    	color: #3B5998;
    }
    
    .social a .icon-linkedin-squared {
    	color: #4875B4;
    }
    
    .social a:HOVER .icon-facebook-squared {
    	color: #3B5998;
    }
    
    .social a:HOVER .icon-linkedin-squared {
    	color: #4875B4;
    }
    </ui:style>
    <g:HTMLPanel>
        <footer class="{style.footer}">
            <div class="container">

                <div class="row">
                    <a class="{style.logo}" href="#home">
                        <g:Image resource="{res.logo}" />&nbsp;&nbsp;Reflection
                    </a>
                </div>
                <div class="row">
                    <ul class="{style.navbar}">
                        <li>
                            <a href="#ranks">Leaderboard</a>
                        </li>
                        <li>
                            <a href="#home">Product</a>
                        </li>
                        <li>
                            <a href="#upgrade">Pricing</a>
                        </li>
                        <li>
                            <a href="#about">About Us</a>
                        </li>
                        <li>
                            <a href="#careers">Careers</a>
                        </li>
                        <li>
                            <a href="#blog">Blog</a>
                        </li>
                        <li>
                            <a href="#forum">Forum</a>
                        </li>
                        <li>
                            <a href="#terms">Terms and Conditions</a>
                        </li>
                        <li>
                            <a href="#privacy">Privacy</a>
                        </li>
                        <li>
                            <a href="#cookies">Cookies</a>
                        </li>
                    </ul>
                </div>

                <div class="row">
                    <div class="{style.copyright} pull-left">
                        &copy; Copyright
                        <span ui:field="mYear">2013</span>
                        <a href="http://www.reflection.io" target="_blank">Reflection.io</a>, All Rights Reserved
                    </div>
                    <ul class="{style.social} pull-right">
                        <li>
                            <a href="https://www.facebook.com/reflection.io" target="_blank">
                                <b class="icon-facebook-squared"></b>
                            </a>
                        </li>
                        <li>
                            <a href="http://www.linkedin.com/company/reflection-io-ltd" target="_blank">
                                <b class="icon-linkedin-squared"></b>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </footer>
    </g:HTMLPanel>
</ui:UiBinder> 