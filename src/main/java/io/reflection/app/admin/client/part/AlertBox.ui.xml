<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
    	.text {
			font-weight: bolder;
		}
    </ui:style>
    <g:HTMLPanel styleName="alert">
        <g:Button ui:field="mClose" styleName="close" />
        <g:Image ui:field="mSpinner" visible="false" />
        <span ui:field="mText" class="{style.text}"/>
        <span ui:field="mDetail" />
    </g:HTMLPanel>
</ui:UiBinder> 