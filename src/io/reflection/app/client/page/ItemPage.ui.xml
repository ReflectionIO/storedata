<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
    xmlns:c="urn:import:com.google.gwt.user.cellview.client"  xmlns:pp="urn:import:io.reflection.app.client.page.part">
    <ui:style>
    .floatRight {
    	float: right;
    }
    
    .pushDown {
    	margin-top: 20px;
    }
    
    .loading {
    	z-index: 1;
    	top: 100px;
    	text-align: center;
    	position: relative;
    	float: left;
		width: 100%;
    }
    </ui:style>
    <g:HTMLPanel>

        <div class="row">
            <pp:ItemSidePanel ui:field="mSidePanel" styleName="sidepanel col-md-2 well" />

            <div class="col-md-10" style="padding-left: 0px; padding-right: 0px;">
                <ul class="nav nav-tabs nav-justified ranks">
                    <li ui:field="mRevenueItem">
                        <g:InlineHyperlink ui:field="mRevenue">
                            Revenue
                            <i class="{style.floatRight} icon-money"></i>
                        </g:InlineHyperlink>
                    </li>
                    <li ui:field="mDownloadsItem">
                        <g:InlineHyperlink ui:field="mDownloads">
                            Downloads
                            <i class="{style.floatRight} icon-download"></i>
                        </g:InlineHyperlink>
                    </li>
                    <li ui:field="mRankingItem">
                        <g:InlineHyperlink ui:field="mRanking">
                            Ranking
                            <i class="{style.floatRight} icon-list-numbered"></i>
                        </g:InlineHyperlink>
                    </li>
                </ul>
                <div style="margin-left: 20px; margin-right: 25px; margin-top: 20px;">

                    <pp:ItemTopPanel ui:field="mTopPanel" />

                    <p:CircleProgressBar visible="false" ui:field="loader" styleName="{style.loading}" />

                    <pp:RankChart ui:field="historyChart" />

                    <c:CellTable ui:field="revenue" styleName="table table-hover table-striped {style.pushDown}"></c:CellTable>

                </div>
            </div>
        </div>
        <!-- <p:AlertBox ui:field="mAlertBox" visible="false" /> -->
    </g:HTMLPanel>
</ui:UiBinder> 