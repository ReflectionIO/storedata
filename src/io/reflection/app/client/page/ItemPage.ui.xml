<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client" xmlns:pp="urn:import:io.reflection.app.client.page.part">
	<ui:style gss="true">
	.cellTable {
		margin-top: 50px;
	}
	
	.chart {
		margin-top: 50px;
		margin-left: 20px;
	}
	
	.content {
		padding-left: 0px;
		padding-right: 0px;
		overflow-x: hidden;
	}
	
	.table {
		margin-left: 25px;
		margin-right: 25px;
		margin-top: 20px;
	}
	
	.downloads {
		border-left: 1px solid #d9dce0 !important;
		border-right: 1px solid #d9dce0 !important;
	}
	
	.a {
		background-color: orange;
	}
	</ui:style>
	<g:HTMLPanel styleName="row">
		<pp:ItemSidePanel ui:field="sidePanel" styleName="sidepanel col-md-2 well" />

		<div class="col-md-10 {style.content}">
			<ul class="nav nav-tabs nav-justified ranks">
				<li ui:field="revenueItem">
					<g:InlineHyperlink ui:field="revenueLink">
						Revenue
						<i class="icon-dollar pull-right"></i>
					</g:InlineHyperlink>
				</li>
				<li ui:field="downloadsItem">
					<g:InlineHyperlink ui:field="downloadsLink" styleName="{style.downloads}">
						Downloads
						<i class="icon-download-alt pull-right"></i>
					</g:InlineHyperlink>
				</li>
				<li ui:field="rankingItem">
					<g:InlineHyperlink ui:field="rankingLink">
						Rank
						<i class="icon-list-numbered pull-right"></i>
					</g:InlineHyperlink>
				</li>
			</ul>
			<g:HTMLPanel styleName="{style.table}">
				<pp:ItemTopPanel ui:field="topPanel" styleName="well well-sm" />
				<!-- <p:CircleProgressBar visible="false" ui:field="loader" styleName="{style.loading}" /> -->
				<p:Preloader ui:field="preloader">
					<g:HTMLPanel>
						<pp:ItemChart ui:field="historyChart" styleName="{style.chart}" />
					</g:HTMLPanel>
				</p:Preloader>

				<g:HTMLPanel styleName="{style.a}" ui:field="chartContainer"></g:HTMLPanel>

				<c:CellTable ui:field="revenueTable" styleName="table table-hover table-striped table-item {style.cellTable}"></c:CellTable>
			</g:HTMLPanel>

			<g:HTMLPanel styleName="filler-bottom col-md-12 hidden-xs hidden-sm" />
		</div>
		<!-- <p:AlertBox ui:field="mAlertBox" visible="false" /> -->
	</g:HTMLPanel>
</ui:UiBinder> 
