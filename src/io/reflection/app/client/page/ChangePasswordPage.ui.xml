<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part">
    <ui:style>
    @external form-control;
    .noteDetail {
    	font-size: smaller;
    	margin-top: 5px;
    }
    
    .form-control:focus {
    	z-index: 2;
    }
    
    .form {
    	padding-left: 25px;
    	padding-right: 25px;
    	width: 320px;
    }
    
    .button {
    	margin-top: 35px;
    }
    </ui:style>
    <g:HTMLPanel>
        <div class="row">

            <div class="sidepanel col-md-2 well">

                <h3 style="margin-bottom: 30px;">Account Settings</h3>
                <ul class="nav nav-pills nav-stacked">
                    <li>
                        <g:InlineHyperlink ui:field="mChangeDetailsLink">Personal details</g:InlineHyperlink>
                    </li>
                    <hr />
                    <li class="active">
                        <g:InlineHyperlink ui:field="mChangePasswordLink">Change password</g:InlineHyperlink>
                    </li>
                    <hr />
                </ul>
            </div>

            <div class="col-md-10">
                <g:HTMLPanel styleName="well well-sm well-title col-md-12">
                    <h5>Change password</h5>
                </g:HTMLPanel>

                <p:AlertBox ui:field="mAlertBox" visible="false" />

                <g:FormPanel ui:field="mForm" styleName="{style.form}">
                    <g:HTMLPanel>

                        <g:HTMLPanel ui:field="mPasswordGroup" styleName="form-group">
                            <label>Password</label>
                            <g:PasswordTextBox styleName="form-control input-lg" ui:field="mPassword" />
                            <g:HTMLPanel ui:field="mPasswordNote" visible="false" styleName="{style.noteDetail}" />
                        </g:HTMLPanel>

                        <g:HTMLPanel ui:field="mNewPasswordGroup" styleName="form-group">
                            <label>New Password</label>
                            <g:PasswordTextBox styleName="form-control input-lg" ui:field="mNewPassword" />
                            <label>Confirm Password</label>
                            <g:PasswordTextBox styleName="form-control input-lg" ui:field="mConfirmPassword" />
                            <g:HTMLPanel ui:field="mNewPasswordNote" visible="false" styleName="{style.noteDetail}" />
                        </g:HTMLPanel>

                        <g:Button ui:field="mChangePassword" styleName="btn btn-lg btn-primary btn-block {style.button}" text="Update" />
                    </g:HTMLPanel>
                </g:FormPanel>
            </div>
        </div>


    </g:HTMLPanel>
</ui:UiBinder> 