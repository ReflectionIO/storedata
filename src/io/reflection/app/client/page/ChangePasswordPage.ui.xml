<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part">
    <ui:style>
        @external form-control;
        .noteDetail {
        	font-size: smaller;
        	margin-top: 5px;
        }
        
        .passwordTop {
        	border-bottom-left-radius: 0;
        	border-bottom-right-radius: 0;
        	margin-bottom: -1px;
        	position: relative;
        }
        
        .passwordBottom {
        	border-top-left-radius: 0;
        	border-top-right-radius: 0;
        	position: relative;
        }
        
        .form-control:focus {
        	z-index: 2;
        }
       
	.form {
		padding-left: 25px;
		padding-right: 25px;		
		width: 320px;	
	}
	.button{margin-top: 35px;}
    </ui:style>
    <g:HTMLPanel>
		<div class="row" style="margin-right: 10px;">

			<div class="col-md-2 well"
				style="margin-top: -20px;  padding-left: 35px; padding-right: 25px;">

				<h3 style="margin-bottom: 30px;">Account Settings</h3>

				<a>Personal details</a>
				<hr />
				<a  style="color: black;">Chenge password</a>
				<hr />

			</div>

			<div class="col-md-10">
				<g:HTMLPanel styleName="well well-sm col-md-12">

					<h5>Change password</h5>

				</g:HTMLPanel>
      
        
        <p:AlertBox ui:field="mAlertBox" visible="false" />
        
        <g:FormPanel ui:field="mForm"  styleName="{style.form}">
            <g:HTMLPanel>

                <g:HTMLPanel ui:field="mPasswordGroup" styleName="form-group">
                    <label>Password</label>
                    <g:PasswordTextBox styleName="form-control input-lg" ui:field="mPassword" />
                    <g:HTMLPanel ui:field="mPasswordNote" visible="false" styleName="{style.noteDetail}" />
                </g:HTMLPanel>

                <g:HTMLPanel ui:field="mNewPasswordGroup" styleName="form-group">
                    <label>New Password</label>
                    <g:PasswordTextBox styleName="form-control input-lg {style.passwordTop}" ui:field="mNewPassword" />                    
                    <g:HTMLPanel ui:field="mNewPasswordNote" visible="false" styleName="{style.noteDetail}" />
                </g:HTMLPanel>
				
				<g:HTMLPanel styleName="form-group">
                    <label>Confirm new Password</label>
                    <g:PasswordTextBox styleName="form-control input-lg {style.passwordBottom}" ui:field="mConfirmPassword" />
                    
                </g:HTMLPanel>
				
				
                <g:Button ui:field="mChangePassword" styleName="btn btn-lg btn-primary btn-block {style.button}" text="Update" />

            </g:HTMLPanel>
        </g:FormPanel>
        
        
        
        
			</div>
		</div>
        
        
    </g:HTMLPanel>
</ui:UiBinder> 