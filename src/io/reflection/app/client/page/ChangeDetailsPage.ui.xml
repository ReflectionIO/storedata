<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part">
	<ui:style>
	.noteDetail {
		font-size: smaller;
		margin-top: 5px;
	}
	</ui:style>
	<g:HTMLPanel styleName="container"> <!-- Override container-fluid assigned in NavigationController -->
		<h2 class="text-center">Change Details</h2>

		<p:AlertBox ui:field="mAlertBox" visible="false" />

		<g:FormPanel ui:field="mForm" styleName="col-md-6 col-md-offset-3 well">
			<g:HTMLPanel styleName="col-md-10 col-md-offset-1 ">
				<g:HTMLPanel ui:field="mForenameGroup" styleName="form-group">
					<label>First name</label>
					<g:TextBox styleName="form-control input-lg" ui:field="mForename" />
					<g:HTMLPanel ui:field="mForenameNote" visible="false"
						styleName="{style.noteDetail}" />
				</g:HTMLPanel>

				<g:HTMLPanel ui:field="mSurnameGroup" styleName="form-group">
					<label>Last name</label>
					<g:TextBox styleName="form-control input-lg" ui:field="mSurname" />
					<g:HTMLPanel ui:field="mSurnameNote" visible="false"
						styleName="{style.noteDetail}" />
				</g:HTMLPanel>

				<g:HTMLPanel ui:field="mCompanyGroup" styleName="form-group">
					<label>Company</label>
					<g:TextBox styleName="form-control input-lg" ui:field="mCompany" />
					<g:HTMLPanel ui:field="mCompanyNote" visible="false"
						styleName="{style.noteDetail}" />
				</g:HTMLPanel>

				<g:HTMLPanel ui:field="mUsernameGroup" styleName="form-group">
					<label>Username</label>
					<g:TextBox styleName="form-control input-lg" ui:field="mUsername" />
					<g:HTMLPanel ui:field="mUsernameNote" visible="false"
						styleName="{style.noteDetail}" />
				</g:HTMLPanel>

				<g:Button ui:field="mChangeDetails" styleName="btn btn-lg btn-primary btn-block"
					text="Apply" />

			</g:HTMLPanel>
		</g:FormPanel>
	</g:HTMLPanel>
</ui:UiBinder> 