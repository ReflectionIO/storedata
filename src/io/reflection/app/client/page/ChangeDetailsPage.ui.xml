<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
	xmlns:pp="urn:import:io.reflection.app.client.page.part" xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
	.spaceUp {
	    padding-top: 10px;
	}
	
	.spaceLeft {
	    padding-left: 25px;
	}
	
	.section {
	    padding-bottom: 40px;
	}
	
	.titleSection {
	    padding-top: 20px;
	}
	
	.subtitleSection {
	    padding-top: 25px;
	}
	</ui:style>
	<g:HTMLPanel styleName="row">

		<pp:MyAccountSidePanel ui:field="myAccountSidePanel" />

		<div class="col-md-10">
			<g:HTMLPanel styleName="well well-sm well-title topPanel">
				<div class="pull-left;">
					<h5>Account Settings</h5>
				</div>
			</g:HTMLPanel>

			<p:AlertBox ui:field="mAlertBox" visible="false" />

			<g:HTMLPanel styleName="{style.section}">
				<h3 class="{style.spaceLeft} {style.titleSection}">Personal Details</h3>
				<g:FormPanel styleName="formEdit">
					<p:Preloader ui:field="preloaderDetails">
						<g:HTMLPanel>
							<g:HTMLPanel ui:field="mForenameGroup" styleName="form-group">
								<label>First name</label>
								<g:TextBox styleName="form-control" ui:field="mForename" />
								<g:HTMLPanel ui:field="mForenameNote" visible="false" styleName="noteDetail" />
							</g:HTMLPanel>

							<g:HTMLPanel ui:field="mSurnameGroup" styleName="form-group">
								<label>Last name</label>
								<g:TextBox styleName="form-control" ui:field="mSurname" />
								<g:HTMLPanel ui:field="mSurnameNote" visible="false" styleName="noteDetail" />
							</g:HTMLPanel>

							<g:HTMLPanel ui:field="mCompanyGroup" styleName="form-group">
								<label>Company</label>
								<g:TextBox styleName="form-control" ui:field="mCompany" />
								<g:HTMLPanel ui:field="mCompanyNote" visible="false" styleName="noteDetail" />
							</g:HTMLPanel>

							<g:HTMLPanel ui:field="mUsernameGroup" styleName="form-group">
								<label>Email</label>
								<g:TextBox styleName="form-control" ui:field="mUsername" />
								<g:HTMLPanel ui:field="mUsernameNote" visible="false" styleName="noteDetail" />
							</g:HTMLPanel>

							<g:Button ui:field="mChangeDetails" styleName="btn btn-lg btn-primary btn-block" text="Update" enabled="false" />

						</g:HTMLPanel>
					</p:Preloader>
				</g:FormPanel>
			</g:HTMLPanel>

			<span class="divider-horizontal"></span>

			<g:HTMLPanel styleName="{style.section}">
				<h3 class="{style.spaceLeft} {style.titleSection}">Change Password</h3>
				<g:FormPanel styleName="formEdit">
					<p:Preloader ui:field="preloaderPassword">
						<g:HTMLPanel>

							<g:HTMLPanel ui:field="mPasswordGroup" styleName="form-group">
								<label>Current password</label>
								<g:PasswordTextBox styleName="form-control" ui:field="mPassword" />
								<g:HTMLPanel ui:field="mPasswordNote" visible="false" styleName="noteDetail" />
							</g:HTMLPanel>

							<g:HTMLPanel ui:field="mNewPasswordGroup" styleName="form-group">
								<label>New password</label>
								<g:PasswordTextBox styleName="form-control" ui:field="mNewPassword" />
								<label class="{style.spaceUp}">Confirm new password</label>
								<g:PasswordTextBox styleName="form-control" ui:field="mConfirmPassword" />
								<g:HTMLPanel ui:field="mNewPasswordNote" visible="false" styleName="noteDetail" />
							</g:HTMLPanel>

							<g:Button ui:field="mChangePassword" styleName="btn btn-lg btn-primary btn-block" text="Update" enabled="false" />

						</g:HTMLPanel>
					</p:Preloader>
				</g:FormPanel>
			</g:HTMLPanel>

			<span class="divider-horizontal"></span>

			<g:HTMLPanel styleName="{style.spaceLeft} {style.section}">
				<h3 class="{style.titleSection}">User Access</h3>
				<g:HTMLPanel>
					<h5 class="{style.subtitleSection}">Roles</h5>
					<c:CellTable ui:field="rolesTable" styleName="table table-hover table-striped table-access" />
					<g:FormPanel styleName="formEdit">
						<p:Preloader ui:field="preloaderAddRole">
							<g:HTMLPanel>
								<g:HTMLPanel ui:field="addRolePanel">
									<g:HTMLPanel ui:field="addRoleGroup" styleName="form-group">
										<label>Add Role</label>
										<g:TextBox styleName=" form-control " ui:field="addRoleTextbox" />
										<g:HTMLPanel ui:field="addRoleNote" visible="false" styleName="noteDetail" />
									</g:HTMLPanel>
									<g:Button styleName="btn btn-lg btn-primary btn-block" ui:field="addRoleButton">Add Role</g:Button>
								</g:HTMLPanel>
							</g:HTMLPanel>
						</p:Preloader>
					</g:FormPanel>
				</g:HTMLPanel>

				<g:HTMLPanel>
					<h5 class="{style.subtitleSection}">Permissions</h5>
					<c:CellTable ui:field="permissionsTable" styleName="table table-hover table-striped table-access" />
					<g:FormPanel styleName="formEdit">
						<p:Preloader ui:field="preloaderAddPermission">
							<g:HTMLPanel>
								<g:HTMLPanel ui:field="addPermissionPanel">
									<g:HTMLPanel ui:field="addPermissionGroup" styleName="form-group">
										<label>Add Permission</label>
										<g:TextBox styleName=" form-control " ui:field="addPermissionTextbox" />
										<g:HTMLPanel ui:field="addPermissionNote" visible="false" styleName="noteDetail" />
									</g:HTMLPanel>
									<g:Button styleName="btn btn-lg btn-primary btn-block" ui:field="addPermissionButton">Add Permission</g:Button>
								</g:HTMLPanel>
							</g:HTMLPanel>
						</p:Preloader>
					</g:FormPanel>
				</g:HTMLPanel>
			</g:HTMLPanel>

			<g:HTMLPanel styleName="filler-bottom col-md-12 hidden-xs hidden-sm" />
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 