<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
	xmlns:pp="urn:import:io.reflection.app.client.page.part" xmlns:cv="urn:import:com.google.gwt.user.cellview.client" xmlns:c="urn:import:io.reflection.app.client.component">
	<ui:import field="io.reflection.app.client.res.Styles.STYLES_INSTANCE" />
	<ui:style gss="true">
	.spaceUp {
		padding-top: 10px;
	}
	
	.spaceLeft {
		padding-left: 25px;
	}
	
	.section {
		padding-bottom: 40px;
	}
	
	.titleSection {
		padding-top: 20px;
	}
	
	.subtitleSection {
		padding-top: 25px;
	}
	</ui:style>
	<g:HTMLPanel styleName="{STYLES_INSTANCE.reflectionMainStyle.gridContainer}">
		<div class="{STYLES_INSTANCE.reflectionMainStyle.grid__column} {STYLES_INSTANCE.reflectionMainStyle.grid__columnFullWidth}">
			<h2>Account Settings</h2>

			<p:AlertBox ui:field="mAlertBox" visible="false" />

			<g:HTMLPanel styleName="{style.section}">
				<h3 class="{style.spaceLeft} {style.titleSection}">Personal Details</h3>
				<g:FormPanel styleName="formEdit">
					<p:Preloader ui:field="preloaderDetails">
						<g:HTMLPanel>
							<c:FormField ui:field="mForename" labelText="First name" />

							<c:FormField ui:field="mSurname" labelText="Last name" />

							<c:FormField ui:field="mCompany" labelText="Company" />

							<c:FormField ui:field="mUsername" labelText="Email" />

							<c:FormButton ui:field="mChangeDetails" styleName="{STYLES_INSTANCE.reflectionMainStyle.refButtonFullWidth}" text="Update" enabled="false" />

						</g:HTMLPanel>
					</p:Preloader>
				</g:FormPanel>
			</g:HTMLPanel>

			<span class="divider-horizontal"></span>

			<g:HTMLPanel styleName="{style.section}">
				<h3 class="{style.spaceLeft} {style.titleSection}">Change Password</h3>
				<g:FormPanel styleName="formEdit">
					<p:Preloader ui:field="preloaderPassword">
						<g:HTMLPanel>

							<c:FormFieldPassword ui:field="mPassword" labelText="Current password" />

							<c:FormFieldPassword ui:field="mNewPassword" labelText="New password" />
							<c:FormFieldPassword ui:field="mConfirmPassword" labelText="Confirm password" />

							<c:FormButton ui:field="mChangePassword" styleName="{STYLES_INSTANCE.reflectionMainStyle.refButtonFullWidth}" text="Update" enabled="false" />

						</g:HTMLPanel>
					</p:Preloader>
				</g:FormPanel>
			</g:HTMLPanel>

			<span class="divider-horizontal"></span>

			<g:HTMLPanel styleName="{style.spaceLeft} {style.section}">
				<h3 class="{style.titleSection}">User Access</h3>
				<g:HTMLPanel>
					<h5 class="{style.subtitleSection}">Roles</h5>
					<cv:CellTable ui:field="rolesTable" styleName="{STYLES_INSTANCE.reflectionMainStyle.tableData}" />
					<g:FormPanel styleName="formEdit">
						<p:Preloader ui:field="preloaderAddRole">
							<g:HTMLPanel>
								<g:HTMLPanel ui:field="addRolePanel">
									<c:FormField ui:field="addRoleTextbox" labelText="Add Role" />
									<c:FormButton ui:field="addRoleButton" styleName="{STYLES_INSTANCE.reflectionMainStyle.refButtonFullWidth}" text="Add Role" />
								</g:HTMLPanel>
							</g:HTMLPanel>
						</p:Preloader>
					</g:FormPanel>
				</g:HTMLPanel>

				<g:HTMLPanel>
					<h5 class="{style.subtitleSection}">Permissions</h5>
					<cv:CellTable ui:field="permissionsTable" styleName="{STYLES_INSTANCE.reflectionMainStyle.tableData}" />
					<g:FormPanel styleName="formEdit">
						<p:Preloader ui:field="preloaderAddPermission">
							<g:HTMLPanel>
								<g:HTMLPanel ui:field="addPermissionPanel">
									<c:FormField ui:field="addPermissionTextbox" labelText="Add Permission" />
									<c:FormButton ui:field="addPermissionButton" styleName="{STYLES_INSTANCE.reflectionMainStyle.refButtonFullWidth}" text="Add Permission" />
								</g:HTMLPanel>
							</g:HTMLPanel>
						</p:Preloader>
					</g:FormPanel>
				</g:HTMLPanel>
			</g:HTMLPanel>

		</div>
	</g:HTMLPanel>
</ui:UiBinder> 