<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part">
    <ui:style>
    .noteDetail {
    	font-size: smaller;
    	margin-top: 5px;
    }
    
    .form {
    	padding-left: 25px;
    	padding-right: 25px;
    	width: 320px;
    }
    
    .button {
    	margin-top: 35px;
    }
    </ui:style>
    <g:HTMLPanel>
        <div class="row">

            <div class="sidepanel col-md-2 well">

                <h3 style="margin-bottom: 30px;">Account Settings</h3>
                <ul class="nav nav-pills nav-stacked">
                    <li class="active">
                        <g:InlineHyperlink ui:field="mChangeDetailsLink">Personal details</g:InlineHyperlink>
                    </li>
                    <hr />
                    <li>
                        <g:InlineHyperlink ui:field="mChangePasswordLink">Change password</g:InlineHyperlink>
                    </li>
                    <hr />
                </ul>
            </div>

            <div class="col-md-10">
                <g:HTMLPanel styleName="well well-sm well-title col-md-12">
                    <div style="float: left;">
                        <h5>Personal details</h5>
                    </div>
                </g:HTMLPanel>

                <p:AlertBox ui:field="mAlertBox" visible="false" />

                <g:FormPanel ui:field="mForm" styleName="{style.form}">
                    <g:HTMLPanel>
                        <g:HTMLPanel ui:field="mForenameGroup" styleName="form-group">
                            <label>First name</label>
                            <g:TextBox styleName="form-control input-lg" ui:field="mForename" />
                            <g:HTMLPanel ui:field="mForenameNote" visible="false" styleName="{style.noteDetail}" />
                        </g:HTMLPanel>

                        <g:HTMLPanel ui:field="mSurnameGroup" styleName="form-group">
                            <label>Last name</label>
                            <g:TextBox styleName="form-control input-lg" ui:field="mSurname" />
                            <g:HTMLPanel ui:field="mSurnameNote" visible="false" styleName="{style.noteDetail}" />
                        </g:HTMLPanel>

                        <g:HTMLPanel ui:field="mCompanyGroup" styleName="form-group">
                            <label>Company</label>
                            <g:TextBox styleName="form-control input-lg" ui:field="mCompany" />
                            <g:HTMLPanel ui:field="mCompanyNote" visible="false" styleName="{style.noteDetail}" />
                        </g:HTMLPanel>

                        <g:HTMLPanel ui:field="mUsernameGroup" styleName="form-group">
                            <label>Email</label>
                            <g:TextBox styleName="form-control input-lg" ui:field="mUsername" />
                            <g:HTMLPanel ui:field="mUsernameNote" visible="false" styleName="{style.noteDetail}" />
                        </g:HTMLPanel>

                        <g:Button ui:field="mChangeDetails" styleName="btn btn-lg btn-primary btn-block {style.button}" text="Update" />

                    </g:HTMLPanel>
                </g:FormPanel>

            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 