<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='images' type='io.reflection.app.client.res.Images' />
	<ui:style>
	.HtmlPanelStyle {
		margin-top: -20px;
		padding-top: 60px;
		padding-bottom: 40px;
	}
	</ui:style>
	<g:HTMLPanel styleName="jumbotron text-center {style.HtmlPanelStyle}"> <!-- CONTAINER-FLUID style -->

		<g:Image resource="{images.tick}" />

		<h2 style="margin-top: 60px; margin-bottom: 20px;">Thank you for your request!</h2>

		<h4>We just need to verify your details which will take a few
			moments.</h4>
		<h4>We'll send you a notification email once your account is up and
			running</h4>
		<br />
		<h4 style="margin-bottom: 100px;">
			If you have any issues please email
			<a href="mailto:beta@reflection.io">beta@reflection.io</a>
		</h4>

	</g:HTMLPanel>
</ui:UiBinder> 