<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:l="urn:import:io.reflection.app.client.part.login"
	xmlns:p="urn:import:io.reflection.app.client.part" xmlns:pp="urn:import:io.reflection.app.client.page.part">
	<ui:with field='images' type='io.reflection.app.client.res.Images' />
	<ui:style gss="true">
	.mainPanel {
	    margin-top: 20px;
	}
	
	.spaceFiller {
	    height: 100px;
	}
	
	.resetpasswordform {
	    padding: 0px;
	    margin-top: 20px;
	}
	
	.form {
	    padding: 0px;
	    margin-top: 20px;
	}
	</ui:style>
	<g:HTMLPanel styleName="container"> <!-- Override container-fluid assigned in NavigationController -->
		<p:AlertBox ui:field="mAlertBox" visible="false" />

		<g:HTMLPanel ui:field="mPanel" styleName="row">

			<div class="hidden-xs hidden-sm col-md-12 {style.spaceFiller}"></div>
			<pp:LoginRegisterPanel styleName="col-md-6 col-xs-12 {style.mainPanel}" />

			<g:HTMLPanel styleName="col-md-5 col-md-offset-1 col-xs-12">
				<p:Preloader ui:field="preloader">
					<g:HTMLPanel styleName="well {style.resetpasswordform}">

						<l:ResetPasswordForm ui:field="form" />

					</g:HTMLPanel>
				</p:Preloader>
			</g:HTMLPanel>
			<g:HTMLPanel styleName="filler-bottom col-md-12 hidden-xs hidden-sm" />
		</g:HTMLPanel>

	</g:HTMLPanel>

</ui:UiBinder> 