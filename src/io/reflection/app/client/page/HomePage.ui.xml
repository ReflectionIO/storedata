<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:import field="io.reflection.app.client.page.PageType.RegisterPageType" />
    
    <ui:with field="global" type="io.reflection.app.client.res.Styles" />
    
    <ui:style  type="io.reflection.app.client.page.HomePage.HomePageStyle">
       
    @external btn, text-muted, carousel, carousel-inner, item, carousel-control, right, left, carousel-indicators, active, glyphicon;
    .logo {
    	background: url("../images/logo.png") no-repeat center;
    	text-indent: -100000px;
    	overflow: hidden;
    }
    
    .contact .icon, .contact .glyphicon {
    	font-size: 35px;
    	color: #7e72c9;
    }
    
    .contact .text-muted {
    	font-size: 14px;
    	line-height: 16px;
    }
    
    .contact h5 {
	   display:none;
    }
    
    .custom {
    	background: #272833 url("../images/header_bg.png") fixed repeat-x bottom;
    }
    
    .custom h1,.custom h2 {
    	color: white;
    }
    
    .home h1, .home h2 {
	   font-size: 34px;
        line-height: 40px;
        font-weight: bolder;
    }
    
    .custom .text-muted {
    	color: #afb1cf;
    }
    
    .home .text-muted {
	   font-size: 16px;
        line-height: 26px;
    }
    
    .arrow a {
    	color: white;
    	font-size: 50px;
    	opacity: .5;
    }
    
    .arrow a:hover {
    	opacity: 1;
    }
    
    .centered {
    	text-align: center;
    }
    
    .moveDown {
    	margin-top: 100px;
    }
    
    .moveDownALittle {
    	margin-top: 30px;
    }
    
    .feature img {
    	height: auto;
        width: 50px;
    	opacity: .5;
    }
    
    .feature:hover img, .feature:hover img {
        opacity: 1;
    }
    
    .feature:hover h3, .feature:active h3 {
        color: #7e72c9;
    }
    
    .whiteSmoke {
    	background: whitesmoke;
    }
    
    .carousel-control.right {
    	background-image: none;
    	text-shadow: none;
    	color: #d9dce0;
    }
    
    .carousel-control.left {
    	background-image: none;
    	text-shadow: none;
    	color: #d9dce0;
    }
    
    .carousel-control.left>.glyphicon {
    	margin-left: 0px;
    }
    
    .carousel-indicators li {
    	border-color: #8587a1;
    }
    
    .carousel-indicators li.active {
    	background-color: #272833;
    }
    
    .carousel {
    	margin-bottom: 100px;
    	margin-top: 30px;
    	height: 540px;
    }
    
    .carousel-inner {
    	height: 540px;
    }
    
    .carousel-inner>.item {
    	height: 540px;
    	position: absolute;
    	width: 100%;
    }
    
    .carousel-inner>.item>img {
    	margin: 0 auto;
    	height: 540px;
    }
    
    .people li {
    	border: 2px solid #e5e5e5;
    	border-radius: 3px;
    	padding: 25px;
    	margin: 20px 0;
    	list-style: none;
    }
    
    .people li>p {
    	font-size: 14px;
    }
    
    .data {
    	background-color: #7e72c9;
    }
    
    .insideData {
    	margin-top: 100px;
    	margin-bottom: 100px;
    }
    
    .insideData h2 {
    	color: white;
    }
    
    .contactFormField label {
    	display: none;
    }
    
    .social {
    	border-top: 1px solid #d9dce0;
    }
    
    .social a {
    	color: #8587a1;
    	font-size: 32px;
    }
    
    .social a:hover {
    	color: #272833;
    }
    
    .home .btn {
    	font-size: 16px;    	
    }
    
    .btnHollow {
	   background: none;
	   border: 2px solid;
	   border-radius: 5px;
	   padding: 20px 25px;
	}
	
	.btnPurple {
        color: white;
        border-color: #7e72c9;
    }
    
    .btnPurpleLBg {
        color: #7e72c9;
        border-color: #7e72c9;
    }
    
    .btnPurpleInv {
        color: white;
        border-color: white;
    }
    
	.btnPurple:hover, .btnPurpleLBg:hover {
	   color: white;
	   background-color: #7e72c9;
	}
	
	.btnPurpleInv:hover {
       color: #7e72c9;
       background-color: white;
    }
    
	
	.hide {
	   display:none;
	   opacity:0;
	}
    </ui:style>
    <g:HTMLPanel>
        <div class="{style.home}">
            <div ui:field="firstPage" class="jumbotron {style.custom}">
                <div class="container {style.centered} {style.moveDownALittle}">
                    <h1 class="{style.logo}">Reflection</h1>
                    <div class="row {style.moveDownALittle}">
                        <h2 class="{style.hide}" ui:field="homeHeading">Powerful market intelligence for the global app market.</h2>
                        <p class="text-muted {style.moveDownALittle} {style.hide}" ui:field="homeDescription">Make smarter business decisions. Access revenue, download and rank data for any app in the store.</p>
                        <g:InlineHyperlink ui:field="requestInvite" targetHistoryToken="{RegisterPageType.asTargetHistoryToken}" text="Request Invite" styleName="btn {style.btnPurple} {style.btnHollow} {style.moveDownALittle} {style.hide}" />
                        <div class="{style.arrow} {style.moveDown}">
                            <g:Anchor ui:field="gotoFeatures" styleName="{global.reflection.smooth} {style.hide}">
                                <spans class="icon-angle-down" />
                            </g:Anchor>
                        </div>
                    </div>
                </div>
            </div>

            <div class="{style.centered} container {style.moveDown}" ui:field="features">
                <div class="row">
                    <h2>Features</h2>
                    <p class="text-muted {style.moveDownALittle}">We're launching soon with detailed revenue, rank and download data for apps on the iPhone and iPad stores.</p>
                </div>

                <div class="row {style.moveDown}">
                    <div class="col-sm-4 {global.reflection.smooth} {style.feature}">
                        <img src="../images/statistical_128.png" alt="Revenue feature" />
                        <h3>Revenue &amp; Download Data</h3>
                        <p class="text-muted">Analyse historical revenue, download and rank information for any app to base your business decisions on.</p>
                    </div>

                    <div class="col-sm-4 {global.reflection.smooth} {style.feature}">
                        <img src="../images/global_128.png" alt="Leaderboard feature" />
                        <h3>Global App Leaderboard</h3>
                        <p class="text-muted">View revenue and download data for the Top 400 apps in any country, in any category, at any time.</p>
                    </div>

                    <div class="col-sm-4 {global.reflection.smooth} {style.feature}">
                        <img src="../images/historical_128.png" alt="Model feature" />
                        <h3>Powerful Statistical Model</h3>
                        <p class="text-muted">We have created an algorithm that statistically paints a very accurate picture of the stores based on public rank and
                            private
                            download and
                            revenue
                            data.</p>
                    </div>

                </div>
                <div class="row">
                    <div class="col-sm-4 col-sm {global.reflection.smooth} {style.feature}">
                        <img src="../images/stores_128.png" alt="Stores feature" />
                        <h3>Supported Stores</h3>
                        <p class="text-muted">We will launch with the iPhone and iPad stores and will then work hard to add all
                            major stores starting with Google Play.</p>
                    </div>

                    <div class="col-sm-4 {global.reflection.smooth} {style.feature}">
                        <img src="../images/search_128.png" alt="Search feature" />
                        <h3>Comprehensive Search</h3>
                        <p class="text-muted">Search for any app to see its revenue, download and rank history for any
                            country and date range.</p>
                    </div>

                    <div class="col-sm-4 {global.reflection.smooth} {style.feature}">
                        <img src="../images/beautiful_128.png" alt="Functional feature" />
                        <h3>Beautiful &amp; Functional</h3>
                        <p class="text-muted">Access meaningful market intelligence wherever you are on any device through our
                            easy to use web app.</p>
                    </div>
                </div>
            </div>

            <div class="container-fluid  {style.whiteSmoke} {style.moveDown}">
                <div class="{style.centered} container {style.moveDown}">
                    <div class="row">
                        <div class="col-sm-6 col-sm-offset-3">
                            <h2>Make Smarter Decisions</h2>

                            <p class="text-muted {style.moveDownALittle}">Analyse daily revenue, downloads and rank for the Top 400 apps in any country &amp; category. Make smart business,
                                marketing
                                and
                                development
                                decisions
                                by
                                comparing the performance of similar apps.</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="carousel">
                            <!-- Indicators -->
                            <ol class="carousel-indicators" ui:field="carouselIndicators">
                                <li class="active"></li>
                                <li class=""></li>
                                <li class=""></li>
                            </ol>
                            <div class="carousel-inner" ui:field="carouselContainer">
                                <div class="item active">
                                    <img src="../images/leaderboard.png" alt="Leaderboard" />
                                </div>
                                <div class="item">
                                    <img src="../images/revenue_history.png" alt="Revenue History" />
                                </div>
                                <div class="item">
                                    <img src="../images/download_history.png" alt="Download History" />
                                </div>
                            </div>
                            <g:Anchor styleName="left carousel-control" ui:field="carouselLeft">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                            </g:Anchor>
                            <g:Anchor styleName="right carousel-control" ui:field="carouselRight">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                            </g:Anchor>
                        </div>
                    </div>
                </div>

            </div>
            <div class="container {style.moveDown}">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>About Us</h2>

                        <p class="text-muted {style.moveDownALittle}">We’re a core team of talented engineers and designers with over 35 years of combined experience in the web and mobile space.</p>

                        <p class="text-muted">We were tired of how expensive and cumbersome it was to get up to date and accurate information about apps and the app market
                            so we
                            decided
                            to
                            create
                            a
                            better service ourselves.</p>

                        <h3>Work with Reflection</h3>


                        <p class="text-muted">Our small and passionate start-up is growing. If you're a self-starter, would love to be part of a growing start-up and have
                            what
                            it takes
                            to
                            get
                            things done, we’d like to hear from you.</p>

                        <g:Button ui:field="workWithUs" styleName="{style.moveDownALittle} btn {style.btnPurpleLBg} {style.btnHollow}" text="Work With Us" />

                    </div>
                    <ul class="col-sm-6 {style.people}">
                        <li>
                            <h5>William Shakour</h5>
                            <p class="text-muted">Originally from Sudan, William has written code for a large variety of devices and platforms - ranging from phones to
                                servers
                                and
                                everything
                                in-between. When he is not
                                making sense of app data he loves to write mobile games.</p>
                        </li>
                        <li>
                            <h5>Gustaf Leksell</h5>
                            <p class="text-muted">Before founding Reflection, Gustaf led Business Development for Games at BBC Worldwide. He has lived and worked in Seoul,
                                Shanghai and
                                Austin
                                where he designed &amp;
                                produced successful mobile and online games.</p>
                        </li>
                        <li>
                            <h5>Chi Dire</h5>
                            <p class="text-muted">Chi has more than 20 years experience coding apps and services for small to global brands. With more than 600 apps across
                                his
                                devices,
                                he
                                thought
                                it was time to
                                try and make sense of it all.</p>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="{style.centered} container-fluid {style.moveDown} {style.data}">
                <div class="row {style.insideData}">
                    <h2>Need data for reports or articles? Reference us and get it for free.</h2>

                    <g:Button ui:field="getInTouch" styleName="btn {style.btnHollow} {style.btnPurpleInv} {style.moveDownALittle}" text="Get In Touch" />
                </div>
            </div>
            <div class="{style.centered} container {style.moveDown}">

                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <h2>Contact us</h2>

                        <p class="text-muted {style.moveDownALittle}">
                            If you have any inquiries please get in touch using the form below, or send an email to
                            <strong>hello at reflection.io</strong>
                        </p>
                    </div>
                </div>

                <div class="row {style.moveDownALittle}">
                    <g:FormPanel>
                        <g:HTMLPanel styleName="col-sm-6 col-sm-offset-3">

                            <g:HTMLPanel ui:field="nameGroup" styleName="form-group {style.contactFormField}">
                                <label>First name</label>
                                <g:TextBox styleName="form-control" ui:field="name" />
                                <g:HTMLPanel ui:field="nameNote" visible="false" styleName="noteDetail" />
                            </g:HTMLPanel>

                            <g:HTMLPanel ui:field="emailGroup" styleName="form-group {style.contactFormField}">
                                <label>Email</label>
                                <g:TextBox styleName="form-control" ui:field="email" />
                                <g:HTMLPanel ui:field="emailNote" visible="false" styleName="noteDetail" />
                            </g:HTMLPanel>

                            <g:HTMLPanel ui:field="messageGroup" styleName="form-group {style.contactFormField}">
                                <label>Message</label>
                                <g:TextArea styleName="form-control" ui:field="message" visibleLines="4" />
                                <g:HTMLPanel ui:field="messageNote" visible="false" styleName="noteDetail" />
                            </g:HTMLPanel>

                            <g:Button ui:field="submit" styleName="btn {style.btnHollow} {style.btnPurpleLBg} btn-block {style.moveDownALittle}">
                                Submit
                            </g:Button>

                        </g:HTMLPanel>
                    </g:FormPanel>
                </div>
                <div class="row {style.moveDownALittle}">
                    <div class="col-sm-6 col-sm-offset-3">
                        <div class="col-sm-4 {style.contact}">
                            <span class="glyphicon glyphicon-envelope" />
                            <h5>Mail</h5>
                            <p class="text-muted">hello at reflection.io</p>
                            <p class="text-muted">careers at reflection.io</p>
                        </div>
                        <div class="col-sm-4 {style.contact}">
                            <span class="glyphicon glyphicon-map-marker" />
                            <h5>Location</h5>
                            <p class="text-muted">79 Wardour Street</p>
                            <p class="text-muted">London, W1D 6QB</p>
                        </div>
                        <div class="col-sm-4 {style.contact}">
                            <span class="glyphicon glyphicon-earphone" />
                            <h5>Contact</h5>
                            <p class="text-muted">+44 (0) 20 7851 8645</p>
                        </div>
                    </div>
                </div>
                <div class="row {style.moveDown}">
                    <div class="col-sm-6 col-sm-offset-3 {style.social}">
                        <div class="col-sm-2 col-sm-offset-4 {style.moveDownALittle}">
                            <a href="https://www.facebook.com/reflection.io" target="_blank">
                                <span class="icon-facebook" />
                            </a>
                        </div>
                        <div class="col-sm-2 {style.moveDownALittle}">
                            <a href="http://www.linkedin.com/company/reflection-io-ltd" target="_blank">
                                <span class="icon-linkedin" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 