<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part.text">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel styleName="row blog-container">
			<g:HTMLPanel styleName="col-sm-10 col-sm-offset-1">
				<h2>Add Post</h2>

				<g:FormPanel ui:field="form">
					<g:HTMLPanel>
						<g:HTMLPanel ui:field="titleGroup" styleName="form-group">
							<label>Title</label>
							<g:TextBox styleName="form-control" ui:field="title" />
							<g:HTMLPanel styleName="noteDetail" ui:field="titleNote" visible="false" />
						</g:HTMLPanel>

						<g:HTMLPanel>
							<g:CheckBox ui:field="visible">Visible without direct link</g:CheckBox>
						</g:HTMLPanel>

						<g:HTMLPanel>
							<g:CheckBox ui:field="commentsEnabled">
								Enable
								<a href="http://disqus.com" target="_blank">disqus.com</a>
								comments
							</g:CheckBox>
						</g:HTMLPanel>

						<g:HTMLPanel ui:field="descriptionGroup" styleName="form-group">
							<label>Description</label>
							<p:RichTextToolbar ui:field="descriptionToolbar" />
							<g:RichTextArea ui:field="descriptionText" styleName="form-control text-area" />
							<g:HTMLPanel styleName="noteDetail" ui:field="descriptionNote" visible="false" />
						</g:HTMLPanel>

						<g:HTMLPanel ui:field="contentGroup" styleName="form-group">
							<label>Content</label>
							<p:RichTextToolbar ui:field="contentToolbar" />
							<g:RichTextArea ui:field="contentText" styleName="form-control text-area" />
							<g:HTMLPanel styleName="noteDetail" ui:field="contentNote" visible="false" />
						</g:HTMLPanel>

						<g:HTMLPanel ui:field="tagsGroup" styleName="form-group">
							<label>Tags</label>
							<g:TextBox styleName="form-control" ui:field="tags" />
							<g:HTMLPanel styleName="noteDetail" ui:field="tagsNote" visible="false" />
						</g:HTMLPanel>

						<g:HTMLPanel>
							<g:CheckBox ui:field="publish">Publish on submit</g:CheckBox>
						</g:HTMLPanel>

						<g:Button ui:field="submit" styleName="btn btn-lg btn-primary col-sm-4 col-sm-offset-4">
							Submit
						</g:Button>

					</g:HTMLPanel>

				</g:FormPanel>
			</g:HTMLPanel>
			<g:HTMLPanel styleName="filler-bottom col-md-12 hidden-xs hidden-sm" />
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 