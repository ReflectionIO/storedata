<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:p="urn:import:io.reflection.app.client.part">

	<ui:import field="io.reflection.app.client.page.PageType.BlogEditPostPageType" />
	<ui:import field="io.reflection.app.client.page.PageType.BlogPostsPageType" />
	<ui:style>
	.toolbar {
	    margin-top: 10px;
	    margin-bottom: 30px;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel styleName="row">
			<g:HTMLPanel styleName="col-sm-10 col-sm-offset-1">
				<h2>Blog Admin</h2>

				<g:HTMLPanel styleName="btn-group {style.toolbar}">
					<g:InlineHyperlink styleName="btn btn-default" text="Add Post" targetHistoryToken="{BlogEditPostPageType.asTargetHistoryToken}/new" />
					<g:InlineHyperlink styleName="btn btn-default " text="Go to Blog" targetHistoryToken="{BlogPostsPageType.asTargetHistoryToken}" />
				</g:HTMLPanel>

				<c:CellTable ui:field="posts" styleName="table table-hover table-striped" />

				<p:SimplePager styleName="text-center" ui:field="simplePager" rangeLimited="true" visible="false" />
				<g:HTMLPanel styleName="filler-bottom col-md-12 hidden-xs hidden-sm" />
			</g:HTMLPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 