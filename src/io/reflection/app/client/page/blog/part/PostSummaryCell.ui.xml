<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
    <ui:with field="link" type="java.lang.String" />
    <ui:with field="title" type="java.lang.String" />
    <ui:with field="description" type="java.lang.String" />
    <ui:with field="author" type="java.lang.String" />
    <ui:with field="published" type="java.lang.String" />

    <ui:style>
    .smaller {
    	font-size: smaller;
    }
    </ui:style>

    <div>
        <h3>
            <a href="{link}">
                <ui:text from="{title}" />
            </a>
        </h3>
        <p class="text-muted {style.smaller}">
            Posted on
            <span>
                <ui:text from="{published}" />
            </span>
            by
            <span>
                <ui:text from="{author}" />
            </span>
        </p>
        <p>
            <ui:text from="{description}" />
        </p>

        <a href="{link}">Read More</a>

    </div>
</ui:UiBinder>