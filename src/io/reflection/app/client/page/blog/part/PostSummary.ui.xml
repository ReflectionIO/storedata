<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
    .smaller {
   		font-size: smaller; 	
    }
    </ui:style>
    <g:HTMLPanel>
        <div>
            <h3>
                <g:InlineHyperlink ui:field="title"></g:InlineHyperlink>
            </h3>
            <p class="text-muted {style.smaller}">
                Posted on
                <span ui:field="date"></span>
                by
                <span ui:field="author"></span>
            </p>
            <br />
            <p ui:field="description"></p>
            <br />
            <p>
                <g:InlineHyperlink ui:field="readMore">Read More</g:InlineHyperlink>
            </p>
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 