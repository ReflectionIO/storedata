<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.page.blog.part">
    <ui:style>
    .smaller {
    	font-size: smaller;
    }
    </ui:style>
    <g:HTMLPanel>
        <h3>
            <g:InlineHyperlink ui:field="title" />
        </h3>
        <p class="text-muted {style.smaller}">
            Posted on
            <span ui:field="date"></span>
            by
            <span ui:field="author"></span>
        </p>
        <p ui:field="description"></p>
        
        <g:InlineHyperlink ui:field="readMore">Read More</g:InlineHyperlink>

        <!-- <g:HTMLPanel ui:field="tags" /> -->

    </g:HTMLPanel>
</ui:UiBinder> 