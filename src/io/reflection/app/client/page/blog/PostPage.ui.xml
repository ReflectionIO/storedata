<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
    .smaller {
    	font-size: smaller;
    }
    
    .blog {
    	font-size: 12pt;
    }
    
    .gap {
    	margin-top: 20px;
    	margin-bottom: 20px;
    }
    </ui:style>
    <g:HTMLPanel>
        <div class="container {style.blog}">
            <h2 ui:field="title"></h2>

            <p class="text-muted {style.smaller}">
                Posted on
                <span ui:field="date"></span>
                by
                <span ui:field="author"></span>
            </p>

            <div ui:field="content" />

            <g:HTMLPanel ui:field="tags" styleName="{style.gap}" />

            <div id="disqus_thread" />

        </div>

    </g:HTMLPanel>

</ui:UiBinder> 