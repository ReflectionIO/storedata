<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
    xmlns:b="urn:import:io.reflection.app.client.page.blog.part">
    <ui:style>
    .blogcontainer {
        margin-top: 100px;
    }
    
    .title {
        margin-top: 0px;
        margin-bottom: 15px;
    }
    
    .gap {
        margin-top: 20px;
        margin-bottom: 50px;
    }
    
    .info {
        font-size: 13px;
        margin-bottom: 30px;
    }
    
    .post {
        max-width: 800px;
    }
    
    .bold {
        font-weight: 700;
    }
    </ui:style>
    <g:HTMLPanel>
        <g:HTMLPanel styleName="row {style.blogcontainer}">

            <b:BlogSidePanel styleName="col-sm-3" />

            <g:HTMLPanel styleName="col-sm-8 {style.post}">
                <p:Preloader ui:field="preloader">
                    <g:HTMLPanel>
                        <h1 ui:field="title" class="{style.title}"></h1>

                        <p class="{style.info}">
                            <span class="{style.bold}">
                                By
                                <span ui:field="author" />
                            </span>
                            <span ui:field="date" />
                        </p>

                        <p ui:field="content" />

                        <g:HTMLPanel ui:field="tags"
                            styleName="{style.gap}" />

                        <div id="disqus_thread" />
                    </g:HTMLPanel>
                </p:Preloader>
            </g:HTMLPanel>
        </g:HTMLPanel>


    </g:HTMLPanel>

</ui:UiBinder> 