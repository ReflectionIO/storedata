<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client" xmlns:b="urn:import:io.reflection.app.client.page.blog.part">
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel styleName="row blog-container">

			<b:BlogSidePanel ui:field="blogSidePanel" styleName="col-sm-3" />

			<g:HTMLPanel styleName="col-sm-8 posts-panel">
				<h1 class="blog-title">The Reflection Blog</h1>
				<p:Preloader ui:field="preloader">
					<g:HTMLPanel>
						<c:CellList ui:field="posts" styleName="post-list" />
						<p:PageSizePager ui:field="pager" visible="false" />
					</g:HTMLPanel>
				</p:Preloader>
				<g:HTMLPanel styleName="filler-bottom col-md-12 hidden-xs hidden-sm" />
			</g:HTMLPanel>

		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 