<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client" xmlns:b="urn:import:io.reflection.app.client.page.blog.part">
	<ui:import field="io.reflection.app.client.res.Styles.STYLES_INSTANCE" />
	<ui:style gss="true">
	
	</ui:style>
	<g:HTMLPanel styleName="{STYLES_INSTANCE.reflectionMainStyle.gridContainer}">
		<div class="{STYLES_INSTANCE.reflectionMainStyle.grid__column} {STYLES_INSTANCE.reflectionMainStyle.grid__columnFullWidth}">

			<b:BlogSidePanel ui:field="blogSidePanel" />

			<h1 class="blog-title">The Reflection Blog</h1>
			<p:Preloader ui:field="preloader">
				<g:HTMLPanel>
					<c:CellList ui:field="posts" />
					<p:SimplePager ui:field="simplePager" rangeLimited="true" visible="false" />
				</g:HTMLPanel>
			</p:Preloader>

		</div>
	</g:HTMLPanel>
</ui:UiBinder> 