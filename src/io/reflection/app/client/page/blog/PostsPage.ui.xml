<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
    xmlns:c="urn:import:com.google.gwt.user.cellview.client" xmlns:b="urn:import:io.reflection.app.client.page.blog.part">
    <ui:style>
    .blogcontainer {
        margin-top: 100px;
    }
    
    .title {
        margin-top: 0px;
        margin-bottom: 50px;
    }
    
    .postsPanel {
        max-width: 800px;
    }
    
    .postsList {
        min-height: 100px;
    }
    </ui:style>
    <g:HTMLPanel>
        <g:HTMLPanel styleName="row {style.blogcontainer}">

            <b:BlogSidePanel ui:field="blogSidePanel"
                styleName="col-sm-3" />

            <g:HTMLPanel styleName="col-sm-8 {style.postsPanel}">
                <h1 class="{style.title}">The Reflection Blog</h1>
                <p:Preloader ui:field="preloader">
                    <g:HTMLPanel>
                        <c:CellList ui:field="posts"
                            styleName="{style.postsList}" />
                        <p:PageSizePager ui:field="pager" />
                    </g:HTMLPanel>
                </p:Preloader>
            </g:HTMLPanel>

        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder> 