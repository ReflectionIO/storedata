<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
	xmlns:l="urn:import:io.reflection.app.client.part.login">
	<ui:style>
	.noteDetail {
		font-size: smaller;
		margin-top: 5px;
	}
	
	.other_options {
		padding: 0;
		margin: 0;
	}
	
	.other_options li {
		list-style: none;
	}
	
	.panelPart {
		margin-top: 80px;
	}
	</ui:style>
	<g:HTMLPanel styleName="container">  <!-- Override container-fluid assigned in NavigationController -->

		<p:AlertBox ui:field="mAlertBox" visible="false" />

		<div class="row">


			<l:LoginForm ui:field="mLoginForm"
				styleName="col-sm-6 col-sm-offset-3 {style.panelPart}" />




			<l:WelcomePanel ui:field="mWelcomePanel" styleName="col-md-12 {style.panelPart}"
				visible="false" />


		</div>



	</g:HTMLPanel>
</ui:UiBinder> 