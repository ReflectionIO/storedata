<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
	xmlns:l="urn:import:io.reflection.app.client.part.login" xmlns:pp="urn:import:io.reflection.app.client.page.part">

	<ui:import field="io.reflection.app.client.res.Styles.STYLES_INSTANCE" />


	<ui:style gss="true">
	
	</ui:style>

	<g:HTMLPanel tag="section"
		styleName="{STYLES_INSTANCE.reflectionMainStyle.gridContainer} {STYLES_INSTANCE.reflectionMainStyle.horizontalCentreContent} {STYLES_INSTANCE.reflectionMainStyle.accountAccessContent}">

		<div class="{STYLES_INSTANCE.reflectionMainStyle.fullScreenIntro}">
			<div class="{STYLES_INSTANCE.reflectionMainStyle.loginContent}">
				<blockquote
					class="{STYLES_INSTANCE.reflectionMainStyle.blockquoteLarge} {STYLES_INSTANCE.reflectionMainStyle.blockquoteOnPurple} {STYLES_INSTANCE.reflectionMainStyle.blockquoteLogin}">
					<p>We see our customers as invited guests to a party, and we are the hosts. It's our job every day to make every important aspect of the customer
						experience a little bit better.</p>
					<footer>
						<cite>
							<span>Jeff Bezos</span>
							Founder, Amazon
						</cite>
					</footer>
				</blockquote>
				<blockquote
					class="{STYLES_INSTANCE.reflectionMainStyle.blockquoteLarge} {STYLES_INSTANCE.reflectionMainStyle.blockquoteOnPurple} {STYLES_INSTANCE.reflectionMainStyle.blockquoteResetPassword}">
					<p>The advantage of a bad memory is that one enjoys several times the same good things for the first time.</p>
					<footer>
						<cite>
							<span>Friedrich Nietzsche</span>
							Philologist
						</cite>
					</footer>
				</blockquote>
			</div>
		</div>
		<div class="{STYLES_INSTANCE.reflectionMainStyle.accountFormContainer}">
			<ul class="{STYLES_INSTANCE.reflectionMainStyle.tabsContainer}">
				<li
					class="{STYLES_INSTANCE.reflectionMainStyle.grid__column} {STYLES_INSTANCE.reflectionMainStyle.grid__columnOneHalf} {STYLES_INSTANCE.reflectionMainStyle.tabs__tab}">
					<div class="{STYLES_INSTANCE.reflectionMainStyle.tabAnimateActive}"></div>
					<g:InlineHyperlink ui:field="register" styleName="{STYLES_INSTANCE.reflectionMainStyle.tabs__link}">
						<span>Apply now</span>
					</g:InlineHyperlink>
				</li>
				<li
					class="{STYLES_INSTANCE.reflectionMainStyle.grid__column} {STYLES_INSTANCE.reflectionMainStyle.grid__columnOneHalf} {STYLES_INSTANCE.reflectionMainStyle.tabs__tab} {STYLES_INSTANCE.reflectionMainStyle.isActive}">
					<div class="{STYLES_INSTANCE.reflectionMainStyle.tabAnimateActive}"></div>
					<g:InlineHyperlink ui:field="login" styleName="{STYLES_INSTANCE.reflectionMainStyle.tabs__link}">
						<span>Log In</span>
					</g:InlineHyperlink>
				</li>
			</ul>
			<ul class="{STYLES_INSTANCE.reflectionMainStyle.tabs__contentContainer}">
				<li id="tab-content-login" class="{STYLES_INSTANCE.reflectionMainStyle.tabs__content} {STYLES_INSTANCE.reflectionMainStyle.tabs__contentIsShowing}">
					<l:LoginForm ui:field="loginForm" styleName="{STYLES_INSTANCE.reflectionMainStyle.formsMidTheme}" />
				</li>
			</ul>
		</div>




		<g:HTMLPanel ui:field="mDefaultLogin">
		</g:HTMLPanel>
		<!-- <l:WelcomePanel ui:field="mWelcomePanel" styleName="col-md-12 {style.panel}" visible="false" /> -->



	</g:HTMLPanel>
</ui:UiBinder> 