<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
    xmlns:l="urn:import:io.reflection.app.client.part.login" xmlns:pp="urn:import:io.reflection.app.client.page.part">

    <!-- <ui:import field="io.reflection.app.client.page.PageType.RegisterPageType" /> -->
    <ui:import field="io.reflection.app.client.page.PageType.LoginPageType" />

    <ui:style type="io.reflection.app.client.page.LoginPage.Style">
    .noteDetail {
    	font-size: smaller;
    	margin-top: 5px;
    }
    
    .other_options {
    	padding: 0;
    	margin: 0;
    }
    
    .other_options li {
    	list-style: none;
    }
    
    .panel {
    	margin-top: 80px;
    }
    
    .mainPanel {
    	margin-top: 120px;
    }
    
    .form {
    	padding: 0px;
    	margin-top: 120px;
    }
    </ui:style>
    <g:HTMLPanel styleName="container">
        <p:AlertBox ui:field="mAlertBox" visible="false" />
        <div class="row">
            <g:HTMLPanel ui:field="mDefaultLogin">
                <pp:LoginRegisterPanel styleName="col-md-6 col-xs-12 {style.mainPanel}" />
                <g:HTMLPanel styleName="col-md-5 col-md-offset-1 col-xs-12 well {style.form}">
                    <ul class="nav nav-tabs nav-justified loginregister">
                        <li ui:field="registerItem">
                            <g:InlineHyperlink ui:field="register" />
                        </li>
                        <li ui:field="loginItem" class="active">
                            <g:InlineHyperlink ui:field="login">Log in</g:InlineHyperlink>
                        </li>
                    </ul>
                    <l:LoginForm ui:field="mLoginForm" />
                </g:HTMLPanel>
            </g:HTMLPanel>
            <l:WelcomePanel ui:field="mWelcomePanel" styleName="col-md-12 {style.panel}" visible="false" />
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 