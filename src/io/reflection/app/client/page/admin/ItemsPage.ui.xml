<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:style type="io.reflection.app.client.page.admin.ItemsPage.ItemsPageStyle">
	.toolbar {
		padding-top: 10px;
		padding-bottom: 10px;
	}
	
	.toolbarItem {
		display: inline-block;
		padding-right: 30px;
	}
	
	.green {
		color: green;
	}
	
	.silver {
		color: silver;
	}
	</ui:style>
	<g:HTMLPanel styleName="row">

		<g:HTMLPanel styleName="col-sm-10 col-sm-offset-1">
			<h2>Items</h2>

			<g:HTMLPanel styleName="form-inline {style.toolbar}">

				<g:HTMLPanel styleName="{style.toolbarItem}">
					<g:TextBox ui:field="queryTextBox" styleName="form-control" />
				</g:HTMLPanel>

			</g:HTMLPanel>

			<c:CellTable ui:field="items" styleName="table table-hover table-striped" />

			<p:SimplePager styleName="text-center" ui:field="simplePager" />

			<g:HTMLPanel styleName="filler-bottom col-md-12 hidden-xs hidden-sm" />
		</g:HTMLPanel>

	</g:HTMLPanel>
</ui:UiBinder> 