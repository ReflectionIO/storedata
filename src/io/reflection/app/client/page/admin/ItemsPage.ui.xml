<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
	xmlns:c="urn:import:com.google.gwt.user.cellview.client">
	<ui:import field="io.reflection.app.client.res.Styles.STYLES_INSTANCE" />
	<ui:style gss="true" type="io.reflection.app.client.page.admin.ItemsPage.ItemsPageStyle">
	.toolbar {
		padding-top: 10px;
		padding-bottom: 10px;
	}
	
	.toolbarItem {
		display: inline-block;
		padding-right: 30px;
	}
	
	.green {
		color: green;
	}
	
	.silver {
		color: silver;
	}
	</ui:style>
	<g:HTMLPanel styleName="{STYLES_INSTANCE.reflectionMainStyle.gridContainer}">
		<div class="{STYLES_INSTANCE.reflectionMainStyle.grid__column} {STYLES_INSTANCE.reflectionMainStyle.grid__columnFullWidth}">
			<h2>Items</h2>

			<g:HTMLPanel styleName="form-inline {style.toolbar}">

				<g:HTMLPanel styleName="{style.toolbarItem}">
					<g:TextBox ui:field="queryTextBox" styleName="form-control" />
				</g:HTMLPanel>

			</g:HTMLPanel>

			<c:CellTable ui:field="items" styleName="{STYLES_INSTANCE.reflectionMainStyle.tableData}" />

			<p:SimplePager styleName="text-center" ui:field="simplePager" />
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 