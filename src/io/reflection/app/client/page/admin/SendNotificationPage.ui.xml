<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
	xmlns:pt="urn:import:io.reflection.app.client.part.text">
	<ui:style>
	.backLink {
		margin-top: 20px;
		margin-bottom: 20px;
		margin-left: 25px;
		display: inline-block;
	}
	</ui:style>
	<g:HTMLPanel styleName="row">

		<g:HTMLPanel styleName="col-sm-10 col-sm-offset-1">
			<h2>Send Notification</h2>

			<p:AlertBox ui:field="alert" visible="false" canDismiss="false" loading="false" />

			<p:Preloader ui:field="preloader">
				<g:HTMLPanel ui:field="eventGroup" styleName="form-group">
					<label>Event</label>
					<g:SuggestBox styleName="form-control" ui:field="eventSuggestBox" />
					<g:HTMLPanel styleName="text-muted small">Enter an event code or id</g:HTMLPanel>
					<g:HTMLPanel styleName="noteDetail" ui:field="eventNote" visible="false" />
				</g:HTMLPanel>

				<g:HTMLPanel ui:field="userGroup" styleName="form-group">
					<label>User</label>
					<g:SuggestBox styleName="form-control" ui:field="userSuggestBox" />
					<g:HTMLPanel styleName="text-muted small">Enter part of the user's name or email address</g:HTMLPanel>
					<g:HTMLPanel styleName="noteDetail" ui:field="userNote" visible="false" />
				</g:HTMLPanel>

				<g:HTMLPanel ui:field="fromGroup" styleName="form-group">
					<label>From</label>
					<g:ListBox styleName="form-control" ui:field="fromListBox" />
					<g:HTMLPanel styleName="noteDetail" ui:field="fromNote" visible="false" />
				</g:HTMLPanel>

				<g:HTMLPanel ui:field="subjectGroup" styleName="form-group">
					<label>Subject</label>
					<g:TextBox styleName="form-control" ui:field="subjectTextBox" />
					<g:HTMLPanel styleName="noteDetail" ui:field="subjectNote" visible="false" />
				</g:HTMLPanel>

				<g:HTMLPanel ui:field="bodyGroup" styleName="form-group">
					<label>Body</label>
					<pt:MarkdownEditor ui:field="bodyEditor" />
					<g:HTMLPanel styleName="noteDetail" ui:field="bodyNote" visible="false" />
				</g:HTMLPanel>

				<g:HTMLPanel styleName="formEdit">
					<g:Button ui:field="buttonSend" styleName="btn btn-lg btn-primary btn-block" text="Send notification" />
				</g:HTMLPanel>
			</p:Preloader>
		</g:HTMLPanel>
		<g:HTMLPanel styleName="filler-bottom col-md-12 hidden-xs hidden-sm" />
	</g:HTMLPanel>
</ui:UiBinder> 