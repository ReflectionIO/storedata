<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
	xmlns:cv="urn:import:com.google.gwt.user.cellview.client" xmlns:c="urn:import:io.reflection.app.client.component" xmlns:hc="urn:import:io.reflection.app.client.highcharts">
	<ui:import field="io.reflection.app.client.res.Styles.STYLES_INSTANCE" />
	<ui:style gss="true">
	.pullDown {
		margin-top: 60px;
	}
	</ui:style>
	<g:HTMLPanel styleName="{STYLES_INSTANCE.reflectionMainStyle.gridContainer}">
		<div class="{STYLES_INSTANCE.reflectionMainStyle.grid__column} {STYLES_INSTANCE.reflectionMainStyle.grid__columnFullWidth}">
			<h3 class="{STYLES_INSTANCE.reflectionMainStyle.headingStyleHeadingThree}">Calibration Summary</h3>

			<p:Breadcrumbs ui:field="breadcrumbs" path="..." />

			<h3 ui:field="title">${title}</h3>
			<p ui:field="description">${description}</p>

			<h4>Data</h4>
			<hc:Chart ui:field="chart"></hc:Chart>

			<g:CheckBox ui:field="showMisses" checked="false" enabled="false" text="Show misses" />
			<g:CheckBox ui:field="showTop" checked="false" enabled="false" text="Show top" />
			<g:CheckBox ui:field="showTail" checked="false" enabled="false" text="Show tail" />

			<div class="{style.pullDown}">
				<div class="{STYLES_INSTANCE.reflectionMainStyle.grid__column} {STYLES_INSTANCE.reflectionMainStyle.grid__columnOneHalf}">
					<h4>Hits</h4>
					<cv:CellList ui:field="hitsCellList" styleName="{STYLES_INSTANCE.reflectionMainStyle.tableData}" />
				</div>
				<div class="{STYLES_INSTANCE.reflectionMainStyle.grid__column} {STYLES_INSTANCE.reflectionMainStyle.grid__columnOneHalf}">
					<h4>Misses</h4>
					<cv:CellList ui:field="missesCellList" styleName="{STYLES_INSTANCE.reflectionMainStyle.tableData}" />
				</div>
			</div>
		</div>

	</g:HTMLPanel>
</ui:UiBinder> 
