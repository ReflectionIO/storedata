<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
    xmlns:c="urn:import:com.google.gwt.user.cellview.client">
    <ui:style>
    .toolbar_spacing {
    	padding-top: 10px;
    	padding-bottom: 10px;
    }
    
    .filler {
    	height: 40px;
    }
    </ui:style>
    <g:HTMLPanel styleName="row"> <!-- CONTAINER-FLUID style -->

        <g:FormPanel styleName="col-md-2 well sidepanel">
            <g:HTMLPanel>

                <h2>
                    Feed Browser
                </h2>
                <h5 class="text-muted">12-hourly feeds</h5>

                <g:HTMLPanel styleName="form-group">
                    <label>Overview</label>
                    <g:ListBox styleName="form-control"
                        ui:field="mListType">
                        <g:item value="all">All</g:item>
                        <g:item value="paid">Paid</g:item>
                        <g:item value="free">Free</g:item>
                        <g:item value="grossing">Grossing</g:item>
                    </g:ListBox>
                </g:HTMLPanel>

                <g:HTMLPanel styleName="form-group">
                    <label>Country</label>
                    <g:ListBox styleName="form-control"
                        ui:field="mCountry">
                    </g:ListBox>
                </g:HTMLPanel>

                <g:HTMLPanel styleName="form-group">
                    <label>App Store</label>
                    <g:ListBox styleName="form-control"
                        ui:field="mAppStore">
                    </g:ListBox>
                </g:HTMLPanel>

                <g:HTMLPanel styleName="form-group">
                    <label>Category</label>
                    <g:ListBox styleName="form-control"
                        ui:field="category">
                        <g:item value="24">All</g:item>
                        <g:item value="19">Book</g:item>
                        <g:item value="1"> Business</g:item>
                        <g:item value="22">Catalogs</g:item>
                        <g:item value="18">Education</g:item>
                        <g:item value="17">Entertainment</g:item>
                        <g:item value="16">Finance</g:item>
                        <g:item value="23">Food &amp; Drink</g:item>
                        <g:item value="15">Games</g:item>
                        <g:item value="14">Health &amp; Fitness</g:item>
                        <g:item value="13">Lifestyle</g:item>
                        <g:item value="20">Medical</g:item>
                        <g:item value="12">Music</g:item>
                        <g:item value="11">Navigation</g:item>
                        <g:item value="10">News</g:item>
                        <g:item value="21">Newsstand</g:item>
                        <g:item value="9"> Photo &amp; Video</g:item>
                        <g:item value="8"> Productivity</g:item>
                        <g:item value="7"> Reference</g:item>
                        <g:item value="6"> Social Networking</g:item>
                        <g:item value="5"> Sports</g:item>
                        <g:item value="4"> Travel</g:item>
                        <g:item value="3"> Utilities</g:item>
                        <g:item value="2"> Weather</g:item>
                    </g:ListBox>
                </g:HTMLPanel>

            </g:HTMLPanel>
        </g:FormPanel>

        <g:HTMLPanel styleName="col-md-10">

            <p:Breadcrumbs ui:field="mBreadcrumbs" path="..."
                styleName="topPanel" />

            <c:CellTable ui:field="mFeeds"
                styleName="table table-hover table-striped" />

            <p:SimplePager styleName="text-center"
                ui:field="mPager" rangeLimited="true" />
            <g:HTMLPanel styleName="{style.filler} col-md-12 hidden-xs hidden-sm" />
        </g:HTMLPanel>


    </g:HTMLPanel>
</ui:UiBinder> 