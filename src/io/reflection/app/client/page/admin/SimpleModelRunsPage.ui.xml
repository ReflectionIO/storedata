<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:p="urn:import:io.reflection.app.client.part">
	<ui:style gss="true">
	.pageTitle {
		padding-bottom: 30px;
	}
	
	.content {
		margin-top: 30px;
	}
	</ui:style>
	<g:HTMLPanel styleName="row">

		<g:HTMLPanel styleName="col-md-2 well sidepanel">
			<h3 class="{style.pageTitle}">Simple Model Run</h3>

			<g:HTMLPanel styleName="form-group">
				<label>List Type</label>
				<g:ListBox styleName="form-control" ui:field="listType">
					<g:item value="all">All</g:item>
					<g:item value="paid">Paid</g:item>
					<g:item value="free">Free</g:item>
					<g:item value="grossing">Grossing</g:item>
				</g:ListBox>
			</g:HTMLPanel>

			<g:HTMLPanel styleName="form-group">
				<label>Date</label>
				<p:DateSelector ui:field="dateSelector" />
			</g:HTMLPanel>

			<g:HTMLPanel styleName="form-group">
				<label>Country</label>
				<g:ListBox styleName="form-control" ui:field="country">
				</g:ListBox>
			</g:HTMLPanel>

			<g:HTMLPanel styleName="form-group">
				<label>App Store</label>
				<g:ListBox styleName="form-control" ui:field="appStore">
				</g:ListBox>
			</g:HTMLPanel>

			<g:HTMLPanel styleName="form-group">
				<label>Category</label>
				<g:ListBox styleName="form-control" ui:field="category">
				</g:ListBox>
			</g:HTMLPanel>

		</g:HTMLPanel>

		<g:HTMLPanel styleName="col-md-10 {style.content}">
			<c:CellTable ui:field="simpleModelRunTable" styleName="table table-hover table-striped" />

			<p:SimplePager styleName="text-center" ui:field="simplePager" rangeLimited="true" />

		</g:HTMLPanel>

		<g:HTMLPanel styleName="filler-bottom col-md-12 hidden-xs hidden-sm" />

	</g:HTMLPanel>
</ui:UiBinder> 