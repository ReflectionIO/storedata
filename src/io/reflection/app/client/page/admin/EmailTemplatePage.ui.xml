<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:p="urn:import:io.reflection.app.client.part" xmlns:pt="urn:import:io.reflection.app.client.part.text">
	<ui:import field="io.reflection.app.client.page.PageType.EmailTemplatesPageType" />
	<ui:style>
	.backLink {
	    margin-top: 20px;
	    margin-bottom: 20px;
	    margin-left: 25px;
	    display: inline-block;
	}
	
	.addCodeButtons {
	    margin-top: 10px;
	    margin-bottom: 20px;
	}
	</ui:style>
	<g:HTMLPanel>
		<div class="row">
			<g:HTMLPanel styleName="col-sm-10 col-sm-offset-1">
				<h2>Email Templates</h2>

				<g:HTMLPanel ui:field="templateTablePanel">
					<c:CellTable ui:field="emailTemplates" styleName="table table-hover table-striped" />
					<p:SimplePager styleName="text-center" ui:field="simplePager" rangeLimited="true" visible="false" />
				</g:HTMLPanel>

				<p:Preloader ui:field="preloader">
					<g:HTMLPanel ui:field="editTemplatePanel" visible="false">
						<g:InlineHyperlink styleName="{style.backLink}" targetHistoryToken="{EmailTemplatesPageType.asTargetHistoryToken}">&#8592;
							Back to email templates</g:InlineHyperlink>
						<g:HTMLPanel styleName="form-group">
							<label>From</label>
							<g:TextBox styleName="form-control" ui:field="fromTextBox" width="320px" />
						</g:HTMLPanel>
						<g:HTMLPanel styleName="form-group">
							<label>Subject</label>
							<g:TextBox styleName="form-control" ui:field="subjectTextBox" />
						</g:HTMLPanel>
						<pt:MarkdownEditor ui:field="templateHtmlEditor" visible="false" />
						<g:TextArea ui:field="templatePlainTextEditor" styleName="form-control" width="100%" height="200px" visible="false" />
						<g:HTMLPanel styleName="{style.addCodeButtons}">
							<g:Button ui:field="addForenameBtn" styleName="btn btn-sm btn-default">Add forename</g:Button>
							<g:Button ui:field="addSurnameBtn" styleName="btn btn-sm btn-default">Add surname</g:Button>
							<g:Button ui:field="addUsernameBtn" styleName="btn btn-sm btn-default">Add username</g:Button>
							<g:Button ui:field="addCompanyBtn" styleName="btn btn-sm btn-default">Add company</g:Button>
							<g:Button ui:field="addLinkBtn" styleName="btn btn-sm btn-default">Add link</g:Button>
						</g:HTMLPanel>
						<g:HTMLPanel styleName="form-group">
							<label>Format</label>
							<g:ListBox ui:field="formatListBox" styleName="form-control" width="320px">
								<g:item value='plainText'>
									Plain text
								</g:item>
								<g:item value='html'>
									HTML
								</g:item>
							</g:ListBox>
						</g:HTMLPanel>
						<g:HTMLPanel styleName="formEdit">
							<g:Button ui:field="buttonUpdate" styleName="btn btn-lg btn-primary btn-block" text="Save changes" />
						</g:HTMLPanel>
					</g:HTMLPanel>
				</p:Preloader>

			</g:HTMLPanel>
			<g:HTMLPanel styleName="filler-bottom col-md-12 hidden-xs hidden-sm" />
		</div>

	</g:HTMLPanel>
</ui:UiBinder> 