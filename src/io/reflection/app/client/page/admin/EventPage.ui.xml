<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:p="urn:import:io.reflection.app.client.part" xmlns:pt="urn:import:io.reflection.app.client.part.text">
	<ui:import field="io.reflection.app.client.page.PageType.EventsPageType" />
	<ui:style>
	.backLink {
		margin-top: 20px;
		margin-bottom: 20px;
		margin-left: 25px;
		display: inline-block;
	}
	
	.addCodeButtons {
		margin-top: 10px;
		margin-bottom: 20px;
	}
	</ui:style>
	<g:HTMLPanel styleName="row">
		<g:HTMLPanel styleName="col-sm-10 col-sm-offset-1">
			<h2>Events</h2>

			<g:HTMLPanel ui:field="eventTablePanel">
				<c:CellTable ui:field="events" styleName="table table-hover table-striped" />
				<p:SimplePager styleName="text-center" ui:field="simplePager" rangeLimited="true" visible="false" />
			</g:HTMLPanel>

			<p:Preloader ui:field="preloader">
				<g:HTMLPanel ui:field="editEventPanel" visible="false">
					<g:InlineHyperlink styleName="{style.backLink}" targetHistoryToken="{EventsPageType.asTargetHistoryToken}">&#8592;
						Back to Events</g:InlineHyperlink>

					<g:HTMLPanel ui:field="codeGroup" styleName="form-group">
						<label>Code</label>
						<g:TextBox styleName="form-control" ui:field="codeTextBox" />
						<g:HTMLPanel styleName="noteDetail" ui:field="codeNote" visible="false" />
					</g:HTMLPanel>

					<g:HTMLPanel ui:field="nameGroup" styleName="form-group">
						<label>Name</label>
						<g:TextBox styleName="form-control" ui:field="nameTextBox" />
						<g:HTMLPanel styleName="noteDetail" ui:field="nameNote" visible="false" />
					</g:HTMLPanel>

					<g:HTMLPanel ui:field="descriptionGroup" styleName="form-group">
						<label>Description</label>
						<g:TextBox styleName="form-control" ui:field="descriptionTextBox" />
						<g:HTMLPanel styleName="noteDetail" ui:field="descriptionNote" visible="false" />
					</g:HTMLPanel>

					<g:HTMLPanel ui:field="subjectGroup" styleName="form-group">
						<label>Subject</label>
						<g:TextBox styleName="form-control" ui:field="subjectTextBox" />
						<g:HTMLPanel styleName="noteDetail" ui:field="subjectNote" visible="false" />
					</g:HTMLPanel>
					<g:HTMLPanel ui:field="shortBodyGroup" styleName="form-group">
						<label>Short body</label>
						<g:TextArea ui:field="shortBodyTextArea" styleName="form-control" width="100%" height="200px" />
						<g:HTMLPanel styleName="noteDetail" ui:field="shortBodyNote" visible="false" />
					</g:HTMLPanel>

					<g:HTMLPanel ui:field="longBodyGroup" styleName="form-group">
						<label>Long body</label>
						<pt:MarkdownEditor ui:field="longBodyEditor" />
						<g:HTMLPanel styleName="noteDetail" ui:field="longBodyNote" visible="false" />
					</g:HTMLPanel>

					<g:HTMLPanel styleName="{style.addCodeButtons}">
						<g:Button ui:field="addForenameBtn" styleName="btn btn-sm btn-default">Add forename</g:Button>
						<g:Button ui:field="addSurnameBtn" styleName="btn btn-sm btn-default">Add surname</g:Button>
						<g:Button ui:field="addUsernameBtn" styleName="btn btn-sm btn-default">Add username</g:Button>
						<g:Button ui:field="addCompanyBtn" styleName="btn btn-sm btn-default">Add company</g:Button>
						<g:Button ui:field="addLinkBtn" styleName="btn btn-sm btn-default">Add link</g:Button>
					</g:HTMLPanel>

					<g:HTMLPanel ui:field="priorityGroup" styleName="form-group">
						<label>Priority</label>
						<g:ListBox styleName="form-control" ui:field="priorityListBox" />
						<g:HTMLPanel styleName="noteDetail" ui:field="priorityNote" visible="false" />
					</g:HTMLPanel>

					<g:HTMLPanel styleName="formEdit">
						<g:Button ui:field="buttonUpdate" styleName="btn btn-lg btn-primary btn-block" text="Save changes" />
					</g:HTMLPanel>
				</g:HTMLPanel>
			</p:Preloader>

		</g:HTMLPanel>
		<g:HTMLPanel styleName="filler-bottom col-md-12 hidden-xs hidden-sm" />
	</g:HTMLPanel>
</ui:UiBinder> 