<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:p="urn:import:io.reflection.app.client.part">

	<ui:import field="io.reflection.app.client.page.PageType.RegisterPageType" />

	<ui:style>
	.toolbar-spacing {
		padding-top: 10px;
		padding-bottom: 10px;
	}
	
	.add-user {
		display: inline-block;
	}
	
	.search-box {
		display: inline-block;
		padding-left: 30px;
	}
	</ui:style>
	<g:HTMLPanel>
		<div class="row">
			<g:HTMLPanel styleName="col-sm-10 col-sm-offset-1">
				<h2>Users</h2>

				<p:Preloader ui:field="preloader">
					<g:HTMLPanel>


						<g:HTMLPanel styleName="form-inline {style.toolbar-spacing}">

							<g:HTMLPanel styleName="{style.add-user}">
								<g:InlineHyperlink styleName="btn btn-default" text="Add user" ui:field="addUser" targetHistoryToken="{RegisterPageType.asTargetHistoryToken}" />
							</g:HTMLPanel>

							<g:HTMLPanel styleName="{style.search-box}">
								<g:TextBox ui:field="queryTextBox" styleName="form-control" />
							</g:HTMLPanel>

						</g:HTMLPanel>

						<c:CellTable ui:field="usersTable" styleName="table table-hover table-striped" />

						<p:SimplePager styleName="text-center" ui:field="simplePager" />
					</g:HTMLPanel>
				</p:Preloader>
				<g:HTMLPanel styleName="filler-bottom col-md-12 hidden-xs hidden-sm" />
			</g:HTMLPanel>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 