<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
    xmlns:p="urn:import:io.reflection.app.client.part">
    <ui:style>
        .toolbar_spacing {
        padding-top: 10px;
        padding-bottom: 10px;
        }
    </ui:style>
    <g:HTMLPanel>
        <div class="container">
            <h2>Users</h2>

            <g:HTMLPanel styleName="btn-group {style.toolbar_spacing}">
                <g:InlineHyperlink styleName="btn btn-default disabled" text="Assign password" ui:field="mAssignPassword" />
                <g:InlineHyperlink styleName="btn btn-default disabled" text="Make admin" ui:field="mMakeAdmin" />
                <g:InlineHyperlink styleName="btn btn-default disabled" text="Change details" ui:field="mChangeDetails" />
            </g:HTMLPanel>

            <g:HTMLPanel styleName="btn-group {style.toolbar_spacing}">
                <g:InlineHyperlink styleName="btn btn-default disabled" text="Add to Beta" ui:field="addToBeta" />
            </g:HTMLPanel>

            <c:CellTable ui:field="mUsers" styleName="table table-hover table-striped" />

            <p:SimplePager ui:field="mPager" />
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 