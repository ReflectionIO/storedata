<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:cv="urn:import:com.google.gwt.user.cellview.client"
	xmlns:p="urn:import:io.reflection.app.client.part" xmlns:c="urn:import:io.reflection.app.client.component">

	<ui:import field="io.reflection.app.client.page.PageType.RegisterPageType" />

	<ui:import field="io.reflection.app.client.res.Styles.STYLES_INSTANCE" />
	<ui:style gss="true">
	
	</ui:style>
	<g:HTMLPanel styleName="{STYLES_INSTANCE.reflectionMainStyle.gridContainer}">
		<div class="{STYLES_INSTANCE.reflectionMainStyle.grid__column} {STYLES_INSTANCE.reflectionMainStyle.grid__columnFullWidth}">
			<h2>Users</h2>

			<g:HTMLPanel>
				<g:InlineHyperlink styleName="btn btn-default" text="Add user" targetHistoryToken="{RegisterPageType.asTargetHistoryToken}" />

				<g:Button styleName="btn btn-default" text="Delete test users" ui:field="deleteTestUsers" />

				<c:FormField ui:field="queryTextBox"></c:FormField>

			</g:HTMLPanel>

			<cv:CellTable ui:field="usersTable" styleName="{STYLES_INSTANCE.reflectionMainStyle.tableData}" />

			<p:SimplePager styleName="text-center" ui:field="simplePager" />

		</div>

		<c:PopupDialog ui:field="deleteUserDialog" styleName="{STYLES_INSTANCE.reflectionMainStyle.popupContent} {STYLES_INSTANCE.reflectionMainStyle.popupContentDeleteAccount}">
			<g:HTMLPanel>
				<h2 class="{STYLES_INSTANCE.reflectionMainStyle.headingStyleHeadingFive} {STYLES_INSTANCE.reflectionMainStyle.popupContentAccount__heading}">Are you sure you want to delete this user?</h2>
				<div class="{STYLES_INSTANCE.reflectionMainStyle.buttonsContainer}">
					<g:Button ui:field="cancelDelete" styleName="{STYLES_INSTANCE.reflectionMainStyle.refButtonFunctionSmall}">No, keep it</g:Button>
					<c:FormButton ui:field="confirmDelete" styleName="{STYLES_INSTANCE.reflectionMainStyle.refButtonCtaSmall}">Yes, delete user</c:FormButton>
				</div>
				<g:Anchor ui:field="closeDeleteDialog" href="#" styleName="{STYLES_INSTANCE.reflectionMainStyle.popupClose}">
					<span class="{STYLES_INSTANCE.reflectionMainStyle.refIconAfter} {STYLES_INSTANCE.reflectionMainStyle.refIconAfterClose}">Close</span>
				</g:Anchor>
			</g:HTMLPanel>
		</c:PopupDialog>

	</g:HTMLPanel>
</ui:UiBinder> 