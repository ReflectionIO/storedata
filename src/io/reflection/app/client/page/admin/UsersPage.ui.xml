<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
    xmlns:p="urn:import:io.reflection.app.client.part">

    <ui:import field="io.reflection.app.client.page.PageType.RegisterPageType" />

    <ui:style>
    .toolbar_spacing {
        padding-top: 10px;
        padding-bottom: 10px;
    }
    .filler {
    	height: 40px;
    }
    </ui:style>
    <g:HTMLPanel>
        <div class="container">
            <h2>Users</h2>

            <p:Preloader ui:field="preloader">
                <g:HTMLPanel>

                    <g:HTMLPanel styleName="btn-group {style.toolbar_spacing}">
                        <g:InlineHyperlink styleName="btn btn-default"
                            text="Add user" ui:field="addUser"
                            targetHistoryToken="{RegisterPageType.asTargetHistoryToken}" />
                    </g:HTMLPanel>

                    <c:CellTable ui:field="mUsers"
                        styleName="table table-hover table-striped" />

                    <p:SimplePager styleName="text-center"
                        ui:field="mPager" />
                </g:HTMLPanel>
            </p:Preloader>
            <g:HTMLPanel styleName="{style.filler} col-md-12 hidden-xs hidden-sm" />
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 