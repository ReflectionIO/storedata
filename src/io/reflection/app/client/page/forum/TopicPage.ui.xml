<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:p="urn:import:io.reflection.app.client.part.text" xmlns:a="urn:import:io.reflection.app.client.part" xmlns:pp="urn:import:io.reflection.app.client.page.forum.part">
	<ui:import field="io.reflection.app.client.page.PageType.ForumTopicPageType" />

	<ui:style>
	@external quoting;
	.textArea {
		height: 200px;
	}
	
	.quoting {
		background: red;
	}
	
	.margins {
		margin-top: 10px;
		margin-bottom: 10px;
	}
	
	.filler {
		height: 40px;
	}
	
	.header2 {
		margin-top: 0px;
		margin-bottom: 0px;
	}
	
	.toolbar_spacing {
		padding-top: 10px;
		margin-top: 30px;
		padding-bottom: 10px;
	}
	</ui:style>
	<g:HTMLPanel styleName="row">
		<pp:ForumSummarySidePanel ui:field="forumSummarySidePanel" styleName="sidepanel col-md-2 well" />

		<div class="col-md-10">
			<g:HTMLPanel styleName="well {style.toolbar_spacing}">
				<div class="row">
					<h3 class="col-sm-2 {style.header2}" ui:field="forumTitle"></h3>
					<g:Button ui:field="replyLink" styleName="btn btn-primary col-sm-2 pull-right">
						Post Reply
						<span class="icon-plus"></span>
					</g:Button>
				</div>
			</g:HTMLPanel>

			<h2 ui:field="topicTitle"></h2>
			<ul ui:field="notes" class="text-muted" />

			<div class="row">
				<div class="col-sm-10 col-sm-offset-2 btn-group">
					<g:HTMLPanel ui:field="adminButtons" />
				</div>
			</div>

			<c:CellList ui:field="messagesCellList" styleName="{style.margins}" />

			<a:SimplePager ui:field="pager" styleName="text-center" />

			<g:FormPanel styleName="col-sm-10 col-sm-offset-1" ui:field="replyForm">
				<g:HTMLPanel>
					<g:HTMLPanel ui:field="replyGroup" styleName="form-group">
						<label>Content</label>
						<!-- <p:RichTextToolbar ui:field="contentToolbar" /> <g:RichTextArea ui:field="contentText" styleName="form-control {style.textArea}" /> -->
						<p:BlikiEditor ui:field="replyText" />
						<g:HTMLPanel styleName="noteDetail" ui:field="replyNote" visible="false" />
					</g:HTMLPanel>

					<g:Button ui:field="post" styleName="btn btn-lg btn-primary col-sm-4 col-sm-offset-4">
						Post
					</g:Button>

					<g:HTMLPanel styleName="{style.filler} col-md-12 hidden-xs hidden-sm" />

				</g:HTMLPanel>
			</g:FormPanel>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 