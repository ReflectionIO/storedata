<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part.text"
	xmlns:pp="urn:import:io.reflection.app.client.page.forum.part">
	<ui:style>
	.textArea {
		height: 200px;
	}
	.filler {
        height: 40px;
    }
    
    .toolbarSpacing {
        padding-top: 10px;
        margin-top: 30px;
        padding-bottom: 10px;
    }
    
    .indentHeader {
	   margin-left: 55px;
    }
    
    .indentHeader2 {
       margin-left: 35px;
    }
    
    .forumControl {
	   background: linear-gradient(#f6f7f9, #eeeff1);
	}
	</ui:style>
	<g:HTMLPanel styleName="row">
		<pp:ForumSummarySidePanel ui:field="forumSummarySidePanel" styleName="sidepanel col-md-2 well" />
		<div class="col-md-10">
        <div class="row">
            <g:HTMLPanel styleName="well {style.toolbarSpacing}">
                <div class="row">
                    <h3 class='{style.indentHeader2}'>Add New Topic</h3>
                </div>
            </g:HTMLPanel>
        <h2 class="{style.indentHeader}">Add a new Topic</h2>
			<g:FormPanel styleName="form">
            
				<g:HTMLPanel>
					<g:HTMLPanel ui:field="titleGroup" styleName="form-group">
						<label>Title</label>
						<g:TextBox styleName="form-control" ui:field="title" />
						<g:HTMLPanel styleName="noteDetail" ui:field="titleNote" visible="false" />
					</g:HTMLPanel>
                    
					<g:HTMLPanel styleName="form-group">
						<label>Forum</label>
						<g:ListBox addStyleNames="form-control {style.forumControl}" ui:field="forums">
						</g:ListBox>
					</g:HTMLPanel>

					<g:HTMLPanel ui:field="contentGroup" styleName="form-group">
						<label>Content</label>
						<p:MarkdownEditor ui:field="contentText" />
						<g:HTMLPanel styleName="noteDetail" ui:field="contentNote" visible="false" />
					</g:HTMLPanel>

					<g:HTMLPanel ui:field="tagsGroup" styleName="form-group">
						<label>Tags</label>
						<g:TextBox styleName="form-control" ui:field="tags" />
						<g:HTMLPanel styleName="noteDetail" ui:field="tagsNote" visible="false" />
					</g:HTMLPanel>

					<g:Button ui:field="submit" styleName="btn  btn-primary">
						Post New Topic
					</g:Button>
				</g:HTMLPanel>
			</g:FormPanel>
			<g:HTMLPanel styleName="{style.filler} col-md-12 hidden-xs hidden-sm" />
            </div>
            <div class="col-md-12">
            </div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 