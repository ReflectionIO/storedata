<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
    xmlns:p="urn:import:io.reflection.app.client.part.text" xmlns:a="urn:import:io.reflection.app.client.part">
    <ui:style>
	/* Add CSS here. See the GWT docs on UI Binder for more details */
	.important {
		font-weight: bold;
	}
	.textArea {
    	height: 200px;
    }
	</ui:style>
	<g:HTMLPanel>
	 <g:FormPanel styleName="col-sm-10 col-sm-offset-2" ui:field="editForm">
                <g:HTMLPanel>

                    <g:HTMLPanel ui:field="editGroup" styleName="form-group">
                        <label>Edit</label>
                        <p:RichTextToolbar ui:field="editToolbar" />
                        <g:RichTextArea ui:field="editText" styleName="form-control {style.textArea}" />
                        <g:HTMLPanel styleName="noteDetail" ui:field="editNote" visible="false" />
                    </g:HTMLPanel>

                    <g:Button ui:field="submit" styleName="btn btn-lg btn-primary col-sm-4 col-sm-offset-4">
                        Submit
                    </g:Button>

                </g:HTMLPanel>
            </g:FormPanel>
	</g:HTMLPanel>
</ui:UiBinder> 