<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:p="urn:import:io.reflection.app.client.part" xmlns:pp="urn:import:io.reflection.app.client.page.forum.part">
	<ui:import field="io.reflection.app.client.page.PageType.ForumTopicPageType" />

	<ui:style>
	
	.toolbar_spacing {
		padding-top: 10px;
		margin-top: 30px;
		padding-bottom: 10px;
	}
	
	.filler {
		height: 40px;
	}
	
	.header2 {
		margin-top: 0px;
		margin-bottom: 0px;
	}
	
	</ui:style>
	<g:HTMLPanel styleName="row">
		<pp:ForumSummarySidePanel ui:field="forumSummarySidePanel" styleName="sidepanel col-md-2 well" />

		<div class="col-sm-9">
			<g:HTMLPanel styleName="well {style.toolbar_spacing}">
				<div class="row">
					<h3 class="col-sm-8 {style.header2}" ui:field="titleText"></h3>
					<g:InlineHyperlink styleName="btn btn-primary col-sm-2 pull-right" targetHistoryToken="{ForumTopicPageType.asTargetHistoryToken}/new">
						New Topic
						<span class="icon-plus"></span>
					</g:InlineHyperlink>
				</div>
			</g:HTMLPanel>

			<c:CellTable styleName="table table-hover table-striped" ui:field="topics" />

			<p:NumberedPager styleName="text-center" ui:field="pager"></p:NumberedPager>
			<g:HTMLPanel styleName="{style.filler} col-md-12 hidden-xs hidden-sm" />
		</div>

	</g:HTMLPanel>
</ui:UiBinder> 