<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
	xmlns:p="urn:import:io.reflection.app.client.part" xmlns:pp="urn:import:io.reflection.app.client.page.forum.part">
	<ui:import field="io.reflection.app.client.page.PageType.ForumTopicPageType" />

	<ui:style gss="true">
	.toolbar_spacing {
	    padding-top: 10px;
	    margin-top: 30px;
	    padding-bottom: 10px;
	}
	
	.margins {
	    margin-top: 60px;
	    margin-bottom: 10px;
	}
	
	.header2 {
	    margin-top: 7px;
	    margin-bottom: 0px;
	}
	
	.buttonWidth {
	    width: 150px;
	}
	
	</ui:style>
	<g:HTMLPanel styleName="row">
		<pp:ForumSummarySidePanel ui:field="forumSummarySidePanel" styleName="sidepanel col-md-2 well" />

		<div class="col-sm-10">
			<g:HTMLPanel styleName="well {style.toolbar_spacing}">
				<div class="row">
					<h5 class="col-sm-8 {style.header2}" ui:field="titleText"></h5>
					<g:Button ui:field="newTopicButton" styleName="btn btn-primary col-sm-2 pull-right {style.buttonWidth}">
						New Topic
						<span class="icon-plus"></span>
					</g:Button>
				</div>
			</g:HTMLPanel>

			<c:CellTable styleName="table table-hover table-striped" ui:field="topics" />

			<p:NumberedPager styleName="{style.margins}" ui:field="pager"></p:NumberedPager>
			<g:HTMLPanel styleName="filler-bottom col-md-12 hidden-xs hidden-sm" />
		</div>

	</g:HTMLPanel>
</ui:UiBinder> 