<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
    xmlns:g="urn:import:com.google.gwt.user.client.ui" 
    xmlns:c="urn:import:com.google.gwt.user.cellview.client"
    xmlns:p="urn:import:io.reflection.app.client.part"
    xmlns:pp="urn:import:io.reflection.app.client.page.forum.part">
    <ui:import field="io.reflection.app.client.page.PageType.ForumTopicPageType" />

    <ui:style>
    .toolbar_spacing {
    	padding-top: 10px;
    	padding-bottom: 10px;
    }

    .filler {
        height: 40px;
    }
    </ui:style>
	<g:HTMLPanel styleName="row">
		<pp:ForumSummarySidePanel ui:field="forumSummarySidePanel"
			styleName="sidepanel col-md-2 well" />

		<div class="col-sm-9">
			<g:HTMLPanel styleName="btn-group {style.toolbar_spacing}">
				<g:InlineHyperlink styleName="btn btn-default"
					text="Add Topic" targetHistoryToken="{ForumTopicPageType.asTargetHistoryToken}/new" />
			</g:HTMLPanel>

			<c:CellTable styleName="table table-hover table-striped"
				ui:field="topics" />

			<p:SimplePager styleName="text-center" ui:field="pager"></p:SimplePager>
			<g:HTMLPanel styleName="{style.filler} col-md-12 hidden-xs hidden-sm" />
		</div>

	</g:HTMLPanel>
</ui:UiBinder> 