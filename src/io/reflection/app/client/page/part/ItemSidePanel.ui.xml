<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='images' type='io.reflection.app.client.res.Images' />
	<ui:import field="io.reflection.app.client.res.Styles.STYLES_INSTANCE" />
	<ui:style gss="true">
	.moreMargin {
		margin-right: 0.2em;
	}
	
	.creator {
		padding-bottom: 15px;
		font-weight: 400;
	}
	
	.price {
		font-weight: 700;
		font-size: 12px;
	}
	
	.imgWrapper {
		max-width: 75px;
		max-height: 75px;
	}
	</ui:style>
	<g:HTMLPanel>

		<g:Image ui:field="image" styleName="img-rounded {style.imgWrapper}" />

		<h1 ui:field="title" class="{STYLES_INSTANCE.reflectionMainStyle.headingStyleHeadingThree}">App Leaderboard</h1>

		<h6 ui:field="creatorName" class="{style.creator} text-muted"></h6>

		<p ui:field="price" class="{style.price}"></p>
		<g:Image resource="{images.spinner}" ui:field="spinnerLoader" visible="false" />

		<a target="_blank" ui:field="viewInStore">
			View in the
			<span ui:field="storeName">
				Appstore
			</span>
		</a>


	</g:HTMLPanel>

</ui:UiBinder> 