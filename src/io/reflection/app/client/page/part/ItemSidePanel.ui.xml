<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.moreMargin {
		margin-right: 0.2em;
	}
	
	.creator {
		padding-bottom: 15px;
		font-weight: 400;
	}
	
	.price {
		font-weight: 700;
		font-size: 12px;
		margin-bottom: 15px;
	}
	
	.store{
		padding-top: 22px; 
	}
	
	.hideOverflow {
		overflow: hidden;
	}
	
	.imgWrapper {
		max-width: 75px;
		max-height: 75px;
	}
	</ui:style>
