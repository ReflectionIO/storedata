<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
    .box {
    	height: 72px;
    	width: 142px;
    	background-color: #272833;
    	margin: 0px;
    	border-top: solid 5px #736fb3;
    	overflow: hidden;
    	border-radius: 2px;
    	-webkit-border-radius: 2px;
    	-moz-border-radius: 2px;
    }
    
    .box:after {
    	top: 100%;
    	left: 50%;
    	border: solid transparent;
    	content: " ";
    	height: 0;
    	width: 0;
    	position: absolute;
    	pointer-events: none;
    	border-top-color: #272833;
    	border-width: 10px;
    	margin-left: -10px;
    }
    
    .date {
    	color: #a5a6b6;
    	font-size: 12px;
    	text-align: left;
    	margin: 0px;
    	padding: 12px 12px 0px 12px;
    }
    
    .detail {
    	font-size: 16px;
    	text-align: left;
    	color: #FFFFFF;
    	margin: 0px;
    	padding: 0px 12px;
    }
    </ui:style>
    <g:HTMLPanel styleName="{style.box}">
        <g:HTMLPanel ui:field="date" styleName="{style.date}" />
        <g:HTMLPanel ui:field="detail" styleName="{style.detail}" />
    </g:HTMLPanel>
</ui:UiBinder> 