<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='images' type='io.reflection.app.client.res.charts.Images' />
    <ui:style>
    .box {
        position: relative;
        height: 74px;
        width: 116px;
        background-color: transparent;
        margin: 0px;
        overflow: hidden;
    }
    
    .imgBackground {
        position: absolute;
        top: 0;
        left: 0;
    }
    
    .date {
        color: #a5a6b6;
        font-size: 12px;
        position: absolute;
        top: 10px;
        left: 10px;
    }
    
    .detail {
        font-size: 14px;
        text-align: left;
        color: #FFFFFF;
        position: absolute;
        top: 30px;
        left: 10px;
    }
    </ui:style>
    <g:HTMLPanel styleName="{style.box}">
        <g:Image resource="{images.popup}" styleName="{style.imgBackground}" />
        <g:HTMLPanel ui:field="date" styleName="{style.date}" />
        <g:HTMLPanel ui:field="detail" styleName="{style.detail}" />
    </g:HTMLPanel>
</ui:UiBinder> 