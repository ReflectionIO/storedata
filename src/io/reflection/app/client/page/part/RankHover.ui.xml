<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style gss="true">
    .box {
        height: 60px;
        width: 116px;
        background-color: #272833;
        margin: 0px;
        border-top: solid 5px #736fb3;
        overflow: hidden;
        border-radius: 2px;
        -webkit-border-radius: 2px;
        -moz-border-radius: 2px;
    }
    
    .title {
        color: #a5a6b6;
        font-size: 12px;
        text-align: center;
        margin: 0px;
        padding: 8px 8px 4px 8px;
    }
    
    .detail {
        font-size: 14px;
        text-align: center;
        color: #FFFFFF;
        margin: 0px;
        padding: 0px 8px;
    }
    </ui:style>
    <g:HTMLPanel styleName="{style.box}">
        <g:HTMLPanel ui:field="title" styleName="{style.title}" />
        <g:HTMLPanel ui:field="detail" styleName="{style.detail}" />
    </g:HTMLPanel>
</ui:UiBinder> 