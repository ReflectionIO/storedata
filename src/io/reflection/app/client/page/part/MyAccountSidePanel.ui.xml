<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
    .pageTitle {
    	padding-bottom: 30px;
    }
    </ui:style>
    <g:HTMLPanel styleName="sidepanel col-md-2 well">
        <h3>My Account</h3>

        <h6 ui:field="creatorName" class="{style.pageTitle} text-muted"></h6>
        <ul class="nav nav-pills nav-stacked">
            <li ui:field="myAppsListItem">
                <g:InlineHyperlink ui:field="myAppsLink" text="My Apps" />
            </li>
            <hr />
            <li ui:field="linkedAccountsListItem">
                <g:InlineHyperlink ui:field="linkedAccountsLink" text="Linked Accounts" />
            </li>
            <hr />
            <li ui:field="personalDetailsListItem">
                <g:InlineHyperlink ui:field="personalDetailsLink" text="Personal Details" />
            </li>
            <hr />
            <li ui:field="changePasswordListItem">
                <g:InlineHyperlink ui:field="changePasswordLink" text="Change Password" />
            </li>
        </ul>
    </g:HTMLPanel>
</ui:UiBinder> 