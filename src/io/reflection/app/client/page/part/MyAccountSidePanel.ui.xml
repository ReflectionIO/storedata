<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style gss="true">
	.creator {
	    padding-bottom: 30px;
	    font-size: 18px;
	    font-weight: 400;
	}
	
	.horDivider {
	    margin-top: 20px !important;
	    margin-bottom: 20px !important;
	}
	</ui:style>
	<g:HTMLPanel styleName="sidepanel col-md-2 well">
		<h3>My Account</h3>

		<h6 ui:field="creatorName" class="{style.creator} text-muted"></h6>
		<ul class="nav nav-pills nav-stacked">
			<li ui:field="myAppsListItem">
				<g:InlineHyperlink ui:field="myAppsLink" text="My Apps" />
			</li>
			<li class="divider-horizontal {style.horDivider}" />
			<li ui:field="linkedAccountsListItem">
				<g:InlineHyperlink ui:field="linkedAccountsLink" text="Linked Accounts" />
			</li>
			<li class="divider-horizontal {style.horDivider}" />
			<li ui:field="accountSettingsListItem">
				<g:InlineHyperlink ui:field="accountSettingsLink" text="Account Settings" />
			</li>
			<li class="divider-horizontal {style.horDivider}" />
			<li ui:field="notificationsListItem">
                <g:InlineHyperlink ui:field="notificationsLink" text="Notifications" />
            </li>
            <li class="divider-horizontal {style.horDivider}" />
		</ul>
	</g:HTMLPanel>
</ui:UiBinder> 