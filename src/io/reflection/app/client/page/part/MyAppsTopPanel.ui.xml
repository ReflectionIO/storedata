<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:c="urn:import:io.reflection.app.client.component">
	<ui:import field="io.reflection.app.client.res.Styles.STYLES_INSTANCE" />
	<ui:style gss="true">
	.title {
		width: 100px;
		position: relative;
		float: left;
		padding-left: 15px;
	}
	
	.filters {
		position: relative;
		padding-right: 4px;
	}
	
	.store {
		display: inline-block;
		width: 15px;
	}
	
	.country {
		display: inline-block;
		width: 15px;
	}
	
	.dateSel {
		display: inline-block;
		width: 15px;
	}
	</ui:style>
	<g:HTMLPanel tag="form">

		<c:DateSelector ui:field="dateSelector" />

		<c:Selector ui:field="accountName" overlay="true" labelText="Account Name" />

		<c:Selector ui:field="category" overlay="true" alignRight="" labelText="Category" styleName="{STYLES_INSTANCE.reflectionMainStyle.categorySelect}" />

		<c:Selector ui:field="appStore" overlay="true" alignCenter="" labelText="App Store" styleName="{STYLES_INSTANCE.reflectionMainStyle.storeSelect}" />

		<c:Selector ui:field="country" overlay="true" labelText="Country" styleName="{STYLES_INSTANCE.reflectionMainStyle.countrySelect}" />


	</g:HTMLPanel>
</ui:UiBinder> 