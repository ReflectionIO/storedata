<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
    xmlns:p="urn:import:io.reflection.app.client.part">
    <ui:style>
    
    .pageHeading {
    	margin-left: 30px;
    	margin-right: 50px;
    }
    
    .inlineTable {
    	display: inline-table !important;
    }
    </ui:style>
    <g:HTMLPanel styleName="well well-sm">

        <g:FormPanel styleName="form-inline">
            <g:HTMLPanel styleName="row">

                <div class="form-group col-md-1" style="{style.pageHeading}">
                    <h5>Overview</h5>
                </div>

                <div class="form-group col-md-11 text-right">

                    <div class="form-group">
                        <g:ListBox styleName="form-control" ui:field="accountName" />
                    </div>

                    <div class="form-group">
                        <g:ListBox styleName="form-control" ui:field="appStore" />
                    </div>

                    <div class="form-group">
                        <g:ListBox styleName="form-control" ui:field="country" />
                    </div>

                    <div class="form-group {style.inlineTable}">
                        <div class="input-group">
                            <p:DateRangeBox styleName="form-control" ui:field="dateRangeBox" />

                            <span class="input-group-addon">
                                <i class="icon-calendar"></i>
                            </span>
                        </div>
                    </div>
                </div>
            </g:HTMLPanel>
        </g:FormPanel>



    </g:HTMLPanel>
</ui:UiBinder> 