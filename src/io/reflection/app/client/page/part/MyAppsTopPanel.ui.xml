<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:p="urn:import:io.reflection.app.client.part" xmlns:c="urn:import:io.reflection.app.client.component">
	<ui:import field="io.reflection.app.client.res.Styles.STYLES_INSTANCE" />
	<ui:style gss="true">
	.title {
		width: 100px;
		position: relative;
		float: left;
		padding-left: 15px;
	}
	
	.filters {
		position: relative;
		padding-right: 4px;
	}
	
	.store {
		display: inline-block;
		width: 15px;
	}
	
	.country {
		display: inline-block;
		width: 15px;
	}
	
	.dateSel {
		display: inline-block;
		width: 15px;
	}
	</ui:style>
	<g:HTMLPanel tag="form">

		<p:DateSelector ui:field="dateSelector" />

		<div class="{STYLES_INSTANCE.reflectionMainStyle.filtersGroupOther}">

			<c:FormFieldSelect ui:field="accountName" labelText="Account Name"></c:FormFieldSelect>

			<c:FormFieldSelect ui:field="country" labelText="Country"></c:FormFieldSelect>

			<c:FormFieldSelect ui:field="appStore" labelText="App Store"></c:FormFieldSelect>

		</div>

	</g:HTMLPanel>
</ui:UiBinder> 