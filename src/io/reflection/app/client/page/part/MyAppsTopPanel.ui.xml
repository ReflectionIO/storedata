<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
    xmlns:p="urn:import:io.reflection.app.client.part">
    <ui:style>
    .radioButtons {
    	display: inline-block;
    	margin-left: 4px;
    }
    
    .radioButton {
    	margin-left: 4px;
    	font-size: 1.2em;
    }
    
    .radioButton label {
    	margin-left: 3px;
    }
    
    .pageHeading {
    	margin-left: 30px;
    	margin-right: 50px;
    }
    </ui:style>
    <g:HTMLPanel styleName="well well-sm">

        <g:FormPanel styleName="form-inline ">
            <g:HTMLPanel>

                <div class="form-group col-sm-2" style="{style.pageHeading}">
                    <h5>Overview</h5>
                </div>

                <div class="form-group">
                    <g:ListBox styleName="form-control" ui:field="appStore" />
                </div>

                <div class="form-group">
                    <g:ListBox styleName="form-control" ui:field="country" />
                </div>

                <div class="form-group col-sm-2">
                    <div class="input-group ">
                        <p:DateRangeBox styleName="form-control" ui:field="dateRangeBox" />

                        <span class="input-group-addon">
                            <i class="icon-calendar"></i>
                        </span>
                    </div>
                </div>

            </g:HTMLPanel>
        </g:FormPanel>



    </g:HTMLPanel>
</ui:UiBinder> 