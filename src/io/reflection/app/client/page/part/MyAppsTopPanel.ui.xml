<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
    xmlns:p="urn:import:io.reflection.app.client.part">
    <ui:style>
    .title {
    	width: 100px;
    	position: relative;
    	float: left;
    	padding-left: 15px;
    }
    
    .filters {
    	position: relative;
    	padding-right: 15px;
    }
    
    .leftSpace {
    	margin-left: 10px;
    	margin-bottom: 5px;
    }
    
    </ui:style>
    <g:HTMLPanel styleName="well well-sm">
        <g:HTMLPanel styleName="row">

            <div class="{style.title}">
                <h5>My Apps</h5>
            </div>
            <g:FormPanel styleName="form-inline">
                <g:HTMLPanel styleName="text-right pull-right {style.filters}">
                
                    <div class="form-group {style.leftSpace}">
                        <g:ListBox styleName="form-control" ui:field="accountName" />
                    </div>

                    <div class="form-group {style.leftSpace}">
                        <g:ListBox styleName="form-control" ui:field="appStore" />
                    </div>

                    <div class="form-group {style.leftSpace}">
                        <g:ListBox styleName="form-control" ui:field="country" />
                    </div>

                    <div class="form-group {style.leftSpace}">
                        <p:DateSelector ui:field="dateSelector" />
                    </div>
                    
                </g:HTMLPanel>
            </g:FormPanel>
        
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder> 