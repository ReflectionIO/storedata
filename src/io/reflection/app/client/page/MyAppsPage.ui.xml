<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:p="urn:import:io.reflection.app.client.part" xmlns:cell="urn:import:com.google.gwt.user.cellview.client" xmlns:pp="urn:import:io.reflection.app.client.page.part">

	<ui:import field="io.reflection.app.client.res.Styles.STYLES_INSTANCE" />

	<ui:style gss="true" type="io.reflection.app.client.page.MyAppsPage.MyAppsPageStyle">
	.red {
		color: red;
	}
	
	.green {
		color: green;
	}
	
	.silver {
		color: silver;
	}
	</ui:style>
	<g:HTMLPanel styleName="{STYLES_INSTANCE.reflectionMainStyle.gridContainer} {STYLES_INSTANCE.reflectionMainStyle.pageLeaderboard}">

		<div class="{STYLES_INSTANCE.reflectionMainStyle.grid__column} {STYLES_INSTANCE.reflectionMainStyle.grid__columnOneHalf}">
			<h1 class="{STYLES_INSTANCE.reflectionMainStyle.headingStyleHeadingThree}">My Apps</h1>
		</div>
		<div class="{STYLES_INSTANCE.reflectionMainStyle.grid__column} {STYLES_INSTANCE.reflectionMainStyle.pageFunctions}">
			<form class="{STYLES_INSTANCE.reflectionMainStyle.inlineSearchForm}">
				<div class="{STYLES_INSTANCE.reflectionMainStyle.searchFieldNoLabel}">
					<input type="text" autocomplete="off" name="search" placeholder="Find an app" />
					<input
						class="{STYLES_INSTANCE.reflectionMainStyle.refButton} {STYLES_INSTANCE.reflectionMainStyle.searchButtonMobile} {STYLES_INSTANCE.reflectionMainStyle.isHighlighted}"
						type="submit" value="a" />
				</div>
			</form>
			<button class="{STYLES_INSTANCE.reflectionMainStyle.refButtonFunctionSmall} {STYLES_INSTANCE.reflectionMainStyle.pageFunctionButton}">
				<span class="{STYLES_INSTANCE.reflectionMainStyle.refIconBefore} {STYLES_INSTANCE.reflectionMainStyle.refIconBeforeCloud}">Download</span>
			</button>
		</div>

		<div
			class="{STYLES_INSTANCE.reflectionMainStyle.grid__column} {STYLES_INSTANCE.reflectionMainStyle.grid__columnFullWidth} {STYLES_INSTANCE.reflectionMainStyle.filtersContainer} {STYLES_INSTANCE.reflectionMainStyle.filterContainerMyApps}">
			<pp:MyAppsTopPanel ui:field="myAppsTopPanel" styleName="{STYLES_INSTANCE.reflectionMainStyle.formsMidTheme}" />
		</div>

		<g:HTMLPanel styleName="{STYLES_INSTANCE.reflectionMainStyle.grid__row}">
			<cell:CellTable ui:field="appsTable" styleName="{STYLES_INSTANCE.reflectionMainStyle.tableData} {STYLES_INSTANCE.reflectionMainStyle.tableMyApps}" />
			<p:SimplePager ui:field="simplePager" styleName="text-center" visible="false" />
		</g:HTMLPanel>

		<p:BackToTop />

	</g:HTMLPanel>
</ui:UiBinder> 