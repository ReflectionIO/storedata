<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
	xmlns:cell="urn:import:com.google.gwt.user.cellview.client" xmlns:c="urn:import:io.reflection.app.client.component">

	<ui:import field="io.reflection.app.client.res.Styles.STYLES_INSTANCE" />

	<ui:style gss="true">
	
	</ui:style>
	<g:HTMLPanel styleName="{STYLES_INSTANCE.reflectionMainStyle.gridContainer} {STYLES_INSTANCE.reflectionMainStyle.pageMyApps}">

		<div class="{STYLES_INSTANCE.reflectionMainStyle.grid__column} {STYLES_INSTANCE.reflectionMainStyle.grid__columnOneHalf}">
			<h1 class="{STYLES_INSTANCE.reflectionMainStyle.headingStyleHeadingThree} {STYLES_INSTANCE.reflectionMainStyle.pageTitle}">My Apps</h1>
		</div>
		<div
			class="{STYLES_INSTANCE.reflectionMainStyle.grid__column} {STYLES_INSTANCE.reflectionMainStyle.pageFunctions} {STYLES_INSTANCE.reflectionMainStyle.overflowVisible}">
			<form class="{STYLES_INSTANCE.reflectionMainStyle.overflowVisible}">

				<c:Selector ui:field="accountName" overlay="true" alignRight="" labelText="Account Name" dropdownTitle="Select an account" />

			</form>
		</div>

		<div
			class="{STYLES_INSTANCE.reflectionMainStyle.grid__column} {STYLES_INSTANCE.reflectionMainStyle.grid__columnFullWidth} {STYLES_INSTANCE.reflectionMainStyle.filtersContainer} {STYLES_INSTANCE.reflectionMainStyle.filterContainerMyApps}">
			<form class="{STYLES_INSTANCE.reflectionMainStyle.formsMidTheme}">
				<c:DateSelector ui:field="dateSelector" />

				<c:Selector ui:field="category" overlay="true" alignRight="" labelText="Category" dropdownTitle="Select a category"
					styleName="{STYLES_INSTANCE.reflectionMainStyle.categorySelect}" />

				<c:Selector ui:field="appStore" overlay="true" alignCenter="" labelText="App Store" dropdownTitle="Select a store"
					styleName="{STYLES_INSTANCE.reflectionMainStyle.storeSelect}" />

				<c:Selector ui:field="country" overlay="true" labelText="Country" dropdownTitle="Select a country" styleName="{STYLES_INSTANCE.reflectionMainStyle.countrySelect}" />
			</form>
		</div>

		<g:HTMLPanel styleName="{STYLES_INSTANCE.reflectionMainStyle.grid__row}">
			<g:HTMLPanel styleName="{STYLES_INSTANCE.reflectionMainStyle.tableWrapper}">
				<g:HTMLPanel styleName="{STYLES_INSTANCE.reflectionMainStyle.scrollable}">
					<cell:CellTable ui:field="appsTableDesktop"
						styleName="{STYLES_INSTANCE.reflectionMainStyle.tableData} {STYLES_INSTANCE.reflectionMainStyle.tableMyApps} {STYLES_INSTANCE.reflectionMainStyle.responsive}" />
				</g:HTMLPanel>
				<g:HTMLPanel styleName="{STYLES_INSTANCE.reflectionMainStyle.pinned}">
					<cell:CellTable ui:field="appsTableMobile" styleName="{STYLES_INSTANCE.reflectionMainStyle.tableData} {STYLES_INSTANCE.reflectionMainStyle.tableMyApps}" />
				</g:HTMLPanel>
			</g:HTMLPanel>
			<!-- <p:SimplePager ui:field="simplePager" visible="false" /> -->
		</g:HTMLPanel>

		<g:Button ui:field="viewAllBtn" visible="false"
			styleName="{STYLES_INSTANCE.reflectionMainStyle.refButtonFunctionSmall} {STYLES_INSTANCE.reflectionMainStyle.refButtonFunctionSmallWithIcon}">
			<span ui:field="viewAllSpan" class="{STYLES_INSTANCE.reflectionMainStyle.refIconBefore} {STYLES_INSTANCE.reflectionMainStyle.refIconBeforeMyApps}">View all Apps</span>
		</g:Button>

	</g:HTMLPanel>
</ui:UiBinder> 