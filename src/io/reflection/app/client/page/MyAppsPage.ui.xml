<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
    xmlns:p="urn:import:io.reflection.app.client.part" xmlns:cell="urn:import:com.google.gwt.user.cellview.client">
    <ui:style>
    .pageTitle {
    	padding-bottom: 30px;
    }
    </ui:style>
    <g:HTMLPanel>
        <div class="row">

            <div class="sidepanel col-md-2 well">

                <h3>My Apps</h3>

                <h6 ui:field="mCreatorName" class="{style.pageTitle} text-muted">Creator</h6>
                <ul class="nav nav-pills nav-stacked">
                    <li class="active">
                        <g:InlineHyperlink ui:field="mMyAppsLink">Overview</g:InlineHyperlink>
                    </li>
                    <hr />
                    <li>
                        <g:InlineHyperlink ui:field="mLinkedAccountsLink">Linked Accounts</g:InlineHyperlink>
                    </li>
                    <hr />
                </ul>
            </div>

            <div class="col-md-10">

                <div class="col-md-12 well well-sm well-title">

                    <div style="float: left;">

                        <h5>Overview</h5>
                    </div>

                    <div style="float: right;">


                        <g:ListBox ui:field="appStore">
                        </g:ListBox>


                        <g:ListBox ui:field="country">
                        </g:ListBox>

                        <d:DateBox ui:field="dateBox" />
                        <span>
                            <i class="icon-calendar"></i>
                        </span>

                        <div style="margin-left: 7px; margin-right: 10px; display: inline-block;">
                            <g:RadioButton ui:field="rangeDay" name="dailydata" checked="true">Day</g:RadioButton>
                            <g:RadioButton ui:field="rangeWeek" name="dailydata">Week</g:RadioButton>
                            <g:RadioButton ui:field="rangeMonth" name="dailydata">Month</g:RadioButton>
                        </div>

                    </div>

                </div>

                <div class="col-md-12">
                    <cell:CellTable ui:field="appsTable" styleName="table table-hover table-striped" />
                </div>


            </div>






        </div>
    </g:HTMLPanel>
</ui:UiBinder> 