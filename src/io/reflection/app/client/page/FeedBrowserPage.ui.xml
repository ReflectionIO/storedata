<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
    xmlns:c="urn:import:com.google.gwt.user.cellview.client">
    <ui:style>
    .toolbar_spacing {
    	padding-top: 10px;
    	padding-bottom: 10px;
    }
    .HtmlPanelStyle {
		margin-top: -20px;
	}
    </ui:style>
    <g:HTMLPanel> <!-- CONTAINER-FLUID style -->
            <div class="row" style="margin-right: 10px;">

                <g:FormPanel styleName="col-md-2 well {style.HtmlPanelStyle}">
                    <g:HTMLPanel>

                        <h2>
                            Feed Browser
                            <small>12-hourly feeds</small>
                        </h2>

                        <g:HTMLPanel styleName="form-group">
                            <label>Overview</label>
                            <g:ListBox styleName="form-control" ui:field="mListType">
                                <g:item value="all">All</g:item>
                                <g:item value="paid">Paid</g:item>
                                <g:item value="free">Free</g:item>
                                <g:item value="grossing">Grossing</g:item>
                            </g:ListBox>
                        </g:HTMLPanel>

                        <g:HTMLPanel styleName="form-group">
                            <label>Country</label>
                            <g:ListBox styleName="form-control" ui:field="mCountry">
                                <g:item value="us">United States</g:item>
                                <g:item value="gb">United Kingdom</g:item>
                                <g:item value="cn">China</g:item>
                                <g:item value="de">Germany</g:item>
                                <g:item value="fr">France</g:item>
                            </g:ListBox>
                        </g:HTMLPanel>

                        <g:HTMLPanel styleName="form-group">
                            <label>App Store</label>
                            <g:ListBox styleName="form-control" ui:field="mAppStore">
                                <g:item value="iph">iPhone</g:item>
                                <g:item value="ipa">iPad</g:item>
                            </g:ListBox>
                        </g:HTMLPanel>

                    </g:HTMLPanel>
                </g:FormPanel>

                <g:HTMLPanel styleName="col-md-10">

                    <p:Breadcrumbs ui:field="mBreadcrumbs" path="..." />

                    <g:HTMLPanel styleName="btn-group {style.toolbar_spacing}">
                        <g:Button styleName="btn btn-default disabled" text="Ingest" ui:field="mIngest" />
                        <g:Button styleName="btn btn-default disabled" text="Model" ui:field="mModel" />
                        <g:Button styleName="btn btn-default disabled" text="Predict" ui:field="mPredict" />
                    </g:HTMLPanel>

                    <c:CellTable ui:field="mFeeds" styleName="table table-hover table-striped" />

                    <p:SimplePager ui:field="mPager" rangeLimited="true" />

                </g:HTMLPanel>


            </div>



    </g:HTMLPanel>
</ui:UiBinder> 