<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:l="urn:import:io.reflection.app.client.part.login"
    xmlns:p="urn:import:io.reflection.app.client.part">
    <ui:with field='images' type='io.reflection.app.client.res.Images' />
    <ui:style>
    .mainPanel {
    	margin-top: 120px;
    }
    
    .form {
    	padding: 0px;
    	margin-top: 120px;
    }
    
    .resetPanel {
    	padding-left: 55px;
    	padding-right: 55px;
    	margin-top: 30px;
    	margin-bottom: 30px;
    }
    </ui:style>
    <g:HTMLPanel styleName="container"> <!-- Override container-fluid assigned in NavigationController -->
        <p:AlertBox ui:field="mAlertBox" visible="false" />

        <g:HTMLPanel ui:field="mPanel" styleName="row">

            <p:LoginRegisterPanel styleName="col-md-6 {style.mainPanel}" />

            <g:HTMLPanel styleName="col-md-5 col-md-offset-1 well {style.form}">

                <l:ForgotPasswordForm ui:field="form" />

                <g:HTMLPanel ui:field="reminder" styleName="{style.resetPanel} text-center" visible="false">
                    <g:Image resource="{images.emailSent}" />
                    <h4 style="margin-top: 40px; margin-bottom: 40px;">Reminder on it's way</h4>
                    <p>We've sent a reminder email to the address you specified, it should be with you in a few moments</p>
                    <g:InlineHyperlink targetHistoryToken="login">Return to Log In</g:InlineHyperlink>
                </g:HTMLPanel>
            </g:HTMLPanel>

        </g:HTMLPanel>

    </g:HTMLPanel>

</ui:UiBinder> 