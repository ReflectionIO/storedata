<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:l="urn:import:io.reflection.app.client.part.login"
    xmlns:p="urn:import:io.reflection.app.client.part" xmlns:pp="urn:import:io.reflection.app.client.page.part">

    <ui:import field="io.reflection.app.client.page.PageType.LoginPageType" />

    <ui:with field='images' type='io.reflection.app.client.res.Images' />

    <ui:style>
    .mainPanel {
        margin-top: 20px;
    }
    
    .resetPanel {
        margin: 0px;
        padding: 85px 50px 40px 50px;
    }
    
    .spaceFiller {
        height: 100px;
    }
    
    .forgotpasswordform {
        padding: 0px;
        margin-top: 20px;
    }
    
    .tryAgain {
        padding-top: 115px;
    }
    
    .title {
        margin-top: 35px;
        margin-bottom: 15px;
    }
    </ui:style>
    <g:HTMLPanel styleName="container"> <!-- Override container-fluid assigned in NavigationController -->
        <p:AlertBox ui:field="mAlertBox" visible="false" />

        <g:HTMLPanel ui:field="mPanel" styleName="row">
            <div class="hidden-xs hidden-sm col-md-12 {style.spaceFiller}"></div>
            <pp:LoginRegisterPanel styleName="col-md-6 col-xs-12 {style.mainPanel}" />

            <g:HTMLPanel styleName="col-md-5 col-md-offset-1 col-xs-12">
                <p:Preloader ui:field="preloader">                
                    <g:HTMLPanel styleName="well {style.forgotpasswordform}">
                        <l:ForgotPasswordForm ui:field="form" />

                        <g:HTMLPanel ui:field="reminder" styleName="{style.resetPanel} text-center"
                            visible="false">
                            <g:Image resource="{images.emailSent}" />
                            <h4 class="{style.title}">Reset email on it's way</h4>
                            <p>We've sent a password reset email to the address you
                                specified, it
                                should be with you in a moment</p>
                            <div class="text-center {style.tryAgain}">
                                <g:InlineHyperlink ui:field="tryAgainLink">Try
                                    Logging in Again</g:InlineHyperlink>
                            </div>
                        </g:HTMLPanel>
                    </g:HTMLPanel>
                </p:Preloader>
            </g:HTMLPanel>

        </g:HTMLPanel>

    </g:HTMLPanel>

</ui:UiBinder> 