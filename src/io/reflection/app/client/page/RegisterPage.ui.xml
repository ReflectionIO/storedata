<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
	xmlns:r="urn:import:io.reflection.app.client.part.register">
	<ui:with field='images' type='io.reflection.app.client.res.Images' />
	<ui:style>
	.marginTopForm {
		margin-top: 80px;
	}
	
	.marginTop40 {
		margin-top: 40px;
	}
	
	.marginBottom40 {
		margin-bottom: 40px;
	}
	
	.image1 {
		width: 75px;
	}
	
	.image2 {
		width: 60px;
		margin-left: 5px;
	}
	</ui:style>
	<g:HTMLPanel styleName="container"> <!-- Override container-fluid assigned in NavigationController -->
		<p:AlertBox ui:field="mAlertBox" visible="false" />
		<g:HTMLPanel ui:field="mPanel" styleName="row col-md-12">
			<div class="col-md-6" style="margin-top: 130px;">
				<h1>Powerful market intelligence for the global development
					community</h1>
				<p style="margin-top: 40px; margin-bottom: 40px">
					Reflection is currently in Private Beta. We have invited
					a select
					group of developers and publishers to get a first hand
					look.
				</p>
				<g:Image resource="{images.alarmClock}" styleName="col-md-2 text-center {style.image1}" />
				<h3 class="col-md-offset-2">Benefits of getting in early</h3>
				<p class="col-md-offset-2">
					Ability to request any additional feature based on our
					data, such as forecasting and trends.
				</p>
				<p class="col-md-offset-2">
					Revenue and dawnload intelligence as well as any premium
					features
					for free.
				</p>

				<g:Image resource="{images.clipboard}"
					styleName="col-md-2 {style.marginTop40} {style.image2}" />
				<h3 class="col-md-offset-2" style="margin-top: 40px">What we need</h3>
				<p class="col-md-offset-2">
					Linking your store account so we can expand our dataset
					<br />
					Input on current &amp; future product features
				</p>

			</div>

			<r:RegisterForm ui:field="mRegisterForm"
				styleName="col-md-5 col-md-offset-1 {style.marginTopForm}" />

			<r:ThankYouRegisterPanel ui:field="mThankYouRegisterPanel"
				styleName="col-md-5 col-md-offset-1 {style.marginTopForm}" visible="false" />


		</g:HTMLPanel>


	</g:HTMLPanel>
</ui:UiBinder> 