<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
    xmlns:r="urn:import:io.reflection.app.client.part.register" xmlns:pp="urn:import:io.reflection.app.client.page.part">

    <ui:import field="io.reflection.app.client.page.PageType.RegisterPageType" />
    <ui:import field="io.reflection.app.client.page.PageType.LoginPageType" />

    <ui:with field='images' type='io.reflection.app.client.res.Images' />
    <ui:style type="io.reflection.app.client.page.RegisterPage.Style">
    .mainPanel {
    	margin-top: 20px;
    }
    
    .registerform {
    	padding: 0px;
    	margin-top: 20px;
    }
    
    .spaceFiller {
    	height: 100px;
    }
    
    .inviteRegisterTab {
    	background-color: #fafafa;
    	font-weight: 600;
    	height: 65px;
    	font-size: 18px;
    	padding-top: 35px;
    	border-radius: 0px;
    	border: 0px;
    	outline: 0;
    	text-align: center;
    	color: #0e0e1f;
    }
    .filler {
    	height: 40px;
    }
    </ui:style>
    <g:HTMLPanel styleName="container">
        <p:AlertBox ui:field="mAlertBox" visible="false" />
        <g:HTMLPanel styleName="row">
            <div class="hidden-xs hidden-sm col-md-12 {style.spaceFiller}"></div>

            <div class="col-md-6 col-xs-12 {style.mainPanel}">
                <pp:LoginRegisterPanel ui:field="loginRegisterPanel" />
                <pp:InviteRegisterPanel ui:field="inviteRegisterPanel" visible="false" />
            </div>
            <g:HTMLPanel styleName="col-md-5 col-md-offset-1 col-xs-12">

                <p:Preloader ui:field="preloader">
                    <g:HTMLPanel styleName="well {style.registerform}">
                        <g:HTMLPanel ui:field="loginRegisterTabs">
                            <ul class="nav nav-tabs nav-justified loginregister">
                                <li ui:field="registerItem" class="active pull-left">
                                    <g:InlineHyperlink ui:field="register" targetHistoryToken="{RegisterPageType.asTargetHistoryToken}" />
                                </li>
                                <li ui:field="loginItem" class="pull-right">
                                    <g:InlineHyperlink ui:field="login">Log in</g:InlineHyperlink>
                                </li>
                            </ul>
                        </g:HTMLPanel>
                        <g:HTMLPanel ui:field="inviteRegisterTabs">
                            <ul class="nav nav-tabs nav-justified register">
                                <li class="{style.inviteRegisterTab}">
                                    Create Password and Register
                                </li>
                            </ul>
                        </g:HTMLPanel>
                        <r:RegisterForm ui:field="mRegisterForm" />
                        <r:ThankYouRegisterPanel ui:field="mThankYouRegisterPanel" visible="false" />
                    </g:HTMLPanel>
                </p:Preloader>
                
            </g:HTMLPanel>
            <g:HTMLPanel styleName="{style.filler} col-md-12 hidden-xs hidden-sm" />
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder> 