<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part"
	xmlns:r="urn:import:io.reflection.app.client.part.register">
	<ui:with field='images' type='io.reflection.app.client.res.Images' />
	<ui:style>
	.panel {
		margin-top: 120px;
		width: 430px;
		padding: 0px;
	}
	
	.thankYou {
		margin-top: 120px;
	}
	
	.mainPanel {
		margin-top: 120px;
	}
	
	.marginTop40 {
		margin-top: 40px;
	}
	
	.marginBottom40 {
		margin-bottom: 40px;
	}
	
	.image1 {
		width: 75px;
	}
	
	.image2 {
		width: 60px;
		margin-left: 5px;
	}
	</ui:style>
	<g:HTMLPanel styleName="container"> <!-- Override container-fluid assigned in NavigationController -->
		<p:AlertBox ui:field="mAlertBox" visible="false" />
		<g:HTMLPanel ui:field="mPanel" styleName="row">

			<p:LoginRegisterPanel styleName="col-md-6 {style.mainPanel}" />

			<r:RegisterForm ui:field="mRegisterForm"
				styleName="col-md-5 col-md-offset-1 well {style.panel}" />

			<r:ThankYouRegisterPanel ui:field="mThankYouRegisterPanel"
				styleName="col-md-5 col-md-offset-1 well {style.thankYou}" visible="false" />


		</g:HTMLPanel>


	</g:HTMLPanel>
</ui:UiBinder> 