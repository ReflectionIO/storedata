<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:import field="io.reflection.app.client.page.PageType.TermsPageType" />
    <ui:with field="res" type='io.reflection.app.client.res.Images' />
    <ui:with field='global' type='io.reflection.app.client.res.Styles' />

    <ui:style>

        .upPanel {
        height: 40px;
        margin-top: 8px;
        text-align: center;
        }

        .downPanel {
        text-align: center;
        }

        .arrow:hover {
        cursor: pointer;
        }

        .copyright{
        overflow:
        hidden;
        white-space: nowrap;
        }

        .copyright>span{
        font-size: 13px; color: #63656a;
        }

        .social{
        margin-top: 5px;
        margin-bottom: 10px;
        }

        .sideMargin {
        margin-left: 25px;
        margin-right: 25px;
        }

        .links{
		padding: 0px 0px 20px 0px;	        
        }

		.links a{
		padding: 0px 10px;	        
        }

    </ui:style>


    <g:FocusPanel styleName="{global.reflection.footer} {global.reflection.smooth}" ui:field="footer">
        <g:HTMLPanel>
            <g:HTMLPanel styleName="{style.upPanel} row">
                <div class="col-sm-1 col-xs-6 text-left">
                    <span class="{global.reflection.footerLogo}"></span>
                </div>
                <div class="col-sm-2 col-sm-offset-4 col-xs-2 col-xs-offset-4 text-center">
                    <g:Anchor ui:field="mArrow" styleName="{global.reflection.footerUpArrow}" />
                </div>
                <div class="col-sm-5 hidden-xs text-right {style.copyright}">
                    <span>
                        &copy; Copyright
                        <span ui:field="year"></span>
                        Reflection. All Rights Reserved
                    </span>
                </div>
            </g:HTMLPanel>

            <g:HTMLPanel styleName="row">
                <div ui:field="links" class="{style.links} text-center">                    
                        <g:InlineHyperlink ui:field="ranks">Leaderboard</g:InlineHyperlink>                        
                        <g:InlineHyperlink ui:field="terms" targetHistoryToken="{TermsPageType.asTargetHistoryToken}">Terms and
                            Conditions</g:InlineHyperlink>
                </div>
                <div class="{style.social} text-center">
                    <a href="https://www.facebook.com/reflection.io" target="_blank">
                        <span class="{global.reflection.footerFacebook}"></span>
                    </a>
                    <a href="http://www.linkedin.com/company/reflection-io-ltd" target="_blank" class="{style.sideMargin}">
                        <span class="{global.reflection.footerLinkedin}"></span>
                    </a>
                    <a href="https://twitter.com/reflectionio" target="_blank">
                        <span class="{global.reflection.footerTwitter}"></span>
                    </a>
                </div>
                <div class="col-xs-12 visible-xs text-center {style.copyright}">
                    <span>
                        &copy; Copyright
                        <span ui:field="yearXs"></span>
                        Reflection. All Rights Reserved
                    </span>
                </div>

            </g:HTMLPanel>
        </g:HTMLPanel>
    </g:FocusPanel>


</ui:UiBinder> 