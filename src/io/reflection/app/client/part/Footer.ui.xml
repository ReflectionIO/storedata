<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='res' type='io.reflection.app.client.res.Images' />
    <ui:style>
    .footer {
    	position: fixed;
    	width: 100%;
    	height: 165px;
    	margin-top: 40px;
    	padding-left: 25px;
    	padding-right: 25px;
    	border-top: 1px solid #d9dce0;
    	background-color: #ffffff;
    	bottom: -125px;
    	/* Fade effect */
    	-o-transition: .5s;
    	-ms-transition: .5s;
    	-moz-transition: .5s;
    	-webkit-transition: .5s;
    	transition: .5s;
    }
    
    .upPanel {
    	height: 40px;
    	padding-top: 8px;
    }
    
    .downPanel {
    	height: 125px;
    	text-align: center;
    }
    
    .logo {
    	display: block;
    	margin-left: 0px;
    	margin-right: auto;
    }
    
    .arrow {
    	display: block;
    	margin-left: auto;
    	margin-right: auto;
    }
    
    .arrow:hover {
    	cursor: pointer;
    }
    </ui:style>


    <g:HTMLPanel styleName="{style.footer}" ui:field="mFooter">
        <g:HTMLPanel styleName="{style.upPanel}">
            <div style="float: left;width:20px;">
                <g:Image resource="{res.logo}" styleName="{style.logo}" />
            </div>
            <div style="margin:0 auto;width:20px;margin-top: 7px;">
                <g:Image ui:field="mUpArrow" resource="{res.footerUpArrow}" styleName="{style.arrow}" />
                <g:Image ui:field="mDownArrow" resource="{res.footerDownArrow}" styleName="{style.arrow}" visible="false" />
            </div>
            <div style="margin-top: -12px; float: right;width:290px;">
                <span style="display: block; font-size: 13px; color: #63656a;">
                    &copy; Copyright
                    <span ui:field="mYear"></span>
                    Reflection. All Rights Reserved
                </span>
            </div>
        </g:HTMLPanel>

        <g:HTMLPanel styleName="{style.downPanel}">

            <div style="width: 100%; padding-top:20px; padding-bottom: 40px;">
                <g:InlineHyperlink targetHistoryToken="ranks">Leaderboard</g:InlineHyperlink>
                &nbsp;&nbsp;&nbsp;
                <g:InlineHyperlink targetHistoryToken="">Terms and
                    Conditions</g:InlineHyperlink>
                &nbsp;&nbsp;&nbsp;
                <g:InlineHyperlink targetHistoryToken="">Privacy
                    Policy</g:InlineHyperlink>
            </div>

            <div style="width: 100%;">

                <a href="https://www.facebook.com/reflection.io" target="_blank">
                    <g:Image resource="{res.facebook}" ui:field="mFacebook" />
                </a>
                <a href="http://www.linkedin.com/company/reflection-io-ltd" target="_blank" style="margin-left: 15px; margin-right: 15px;">
                    <g:Image resource="{res.linkedin}" ui:field="mLinkedin" />
                </a>
                <a href="https://twitter.com/ReflectiveTweet" target="_blank">
                    <g:Image resource="{res.twitter}" ui:field="mTwitter" />
                </a>

            </div>

        </g:HTMLPanel>

    </g:HTMLPanel>


</ui:UiBinder> 