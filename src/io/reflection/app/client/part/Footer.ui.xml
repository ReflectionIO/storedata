<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:import field="io.reflection.app.client.page.PageType.TermsPageType" />

    <ui:with field='global' type='io.reflection.app.client.res.Styles' />

    <ui:style>
    .footer {
    	position: fixed;
    	width: 100%;
    	margin-top: 40px;
    	padding-left: 25px;
    	padding-right: 25px;
    	border-top: 1px solid #d9dce0;
    	background-color: #ffffff;
    	z-index: 16;
    	outline: 0;
    }
    
    .upPanel {
    	height: 40px;
    	padding-top: 8px;
    }
    
    .downPanel {
    	text-align: center;
    }
    
    .logo {
    	display: block;
    	margin-left: 0px;
    	margin-right: auto;
    }
    
    .arrow {
    	margin-left: auto;
    	margin-right: auto;
    }
    
    .arrow:hover {
    	cursor: pointer;
    }
    
    .sideMargin {
    	margin-left: 25px;
    	margin-right: 25px;
    }
    </ui:style>


    <g:FocusPanel styleName="{style.footer} {global.reflection.smooth}" ui:field="footer">
        <g:HTMLPanel>
            <g:HTMLPanel styleName="{style.upPanel}">
                <div style="float: left;width:20px;">
                    <span class="{global.reflection.footerLogo}"></span>
                </div>
                <div style="margin:0 auto;width:20px;">
                    <g:Anchor ui:field="mArrow" styleName="{global.reflection.footerUpArrow} {style.arrow}" />
                </div>
                <div style="margin-top:-18px; float:right; width:290px;">
                    <span style="display: block; font-size: 13px; color: #63656a;">
                        &copy; Copyright
                        <span ui:field="mYear"></span>
                        Reflection. All Rights Reserved
                    </span>
                </div>
            </g:HTMLPanel>

            <g:HTMLPanel styleName="{style.downPanel}">

                <div ui:field="links" style="width: 100%; padding-top:20px; padding-bottom: 40px;">
                    <g:InlineHyperlink ui:field="ranks">Leaderboard</g:InlineHyperlink>

                    <g:InlineHyperlink ui:field="terms" targetHistoryToken="{TermsPageType.asTargetHistoryToken}" styleName="{style.sideMargin}">Terms and
                        Conditions</g:InlineHyperlink>

                </div>

                <div style="width: 100%;">
                    <a href="https://www.facebook.com/reflection.io" target="_blank">
                        <span class="{global.reflection.footerFacebook}"></span>
                    </a>
                    <a href="http://www.linkedin.com/company/reflection-io-ltd" target="_blank" class="{style.sideMargin}">
                        <span class="{global.reflection.footerLinkedin}"></span>
                    </a>
                    <a href="https://twitter.com/reflectionio" target="_blank">
                        <span class="{global.reflection.footerTwitter}"></span>
                    </a>

                </div>

            </g:HTMLPanel>
        </g:HTMLPanel>
    </g:FocusPanel>


</ui:UiBinder> 