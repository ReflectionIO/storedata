<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field='res' type='io.reflection.app.client.res.Images' />
    <ui:with field='styles' type='io.reflection.app.client.res.Styles' />

    <ui:style>
    .footer {
    	position: fixed;
    	width: 100%;
    	height: 165px;
    	margin-top: 40px;
    	padding-left: 25px;
    	padding-right: 25px;
    	border-top: 1px solid #d9dce0;
    	background-color: #ffffff;
    	/* Fade effect */
    	-o-transition: .3s;
    	-ms-transition: .3s;
    	-moz-transition: .3s;
    	-webkit-transition: .3s;
    	transition: .3s;
    }
    
    .upPanel {
    	height: 40px;
    	padding-top: 8px;
    }
    
    .downPanel {
    	height: 125px;
    	text-align: center;
    }
    
    .logo {
    	display: block;
    	margin-left: 0px;
    	margin-right: auto;
    }
    
    .arrow {
    	margin-left: auto;
    	margin-right: auto;
    }
    
    .arrow:hover {
    	cursor: pointer;
    }
    
    .sideMargin {
    	margin-left: 15px;
    	margin-right: 15px;
    }
    </ui:style>


    <g:HTMLPanel styleName="{style.footer}" ui:field="mFooter">
        <g:HTMLPanel styleName="{style.upPanel}">
            <div style="float: left;width:20px;">
                <span class="{styles.reflection.footerLogo}"></span>
            </div>
            <div style="margin:0 auto;width:20px;">
                <g:Anchor ui:field="mArrow" styleName="{styles.reflection.footerUpArrow} {style.arrow}" />
            </div>
            <div style="margin-top: -12px; float: right;width:290px;">
                <span style="display: block; font-size: 13px; color: #63656a;">
                    &copy; Copyright
                    <span ui:field="mYear"></span>
                    Reflection. All Rights Reserved
                </span>
            </div>
        </g:HTMLPanel>

        <g:HTMLPanel styleName="{style.downPanel}">

            <div style="width: 100%; padding-top:20px; padding-bottom: 40px;">
                <g:InlineHyperlink targetHistoryToken="ranks">Leaderboard</g:InlineHyperlink>
                &nbsp;&nbsp;&nbsp;
                <g:InlineHyperlink targetHistoryToken="" styleName="{style.sideMargin}">Terms and
                    Conditions</g:InlineHyperlink>
                &nbsp;&nbsp;&nbsp;
                <g:InlineHyperlink targetHistoryToken="">Privacy
                    Policy</g:InlineHyperlink>
            </div>

            <div style="width: 100%;">
                <a href="https://www.facebook.com/reflection.io" target="_blank">
                    <span class="{styles.reflection.footerFacebook}"></span>
                </a>
                <a href="http://www.linkedin.com/company/reflection-io-ltd" target="_blank" class="{style.sideMargin}">
                    <span class="{styles.reflection.footerLinkedin}"></span>
                </a>
                <a href="https://twitter.com/ReflectiveTweet" target="_blank">
                    <span class="{styles.reflection.footerTwitter}"></span>
                </a>

            </div>

        </g:HTMLPanel>

    </g:HTMLPanel>


</ui:UiBinder> 