<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
    .moreMargin {
    	margin-right: 0.2em;
    }
    
    .pageTitle {
    	padding-bottom: 30px;
    }
    </ui:style>
    <g:HTMLPanel styleName="well sidebar-nav col-md-3">
        <g:Image />

        <h2 ui:field="mTitle" class="{style.pageTitle}">Item</h2>

        <g:FormPanel>
            <g:HTMLPanel>

                <g:HTMLPanel styleName="form-group">
                    <label>
                        <i class="glyphicon glyphicon-folder-open {style.moreMargin}"></i>
                        App Store
                    </label>
                    <g:ListBox styleName="form-control" ui:field="mAppStore">
                        <g:item value="iph">iPhone</g:item>
                        <g:item value="ipa">iPad</g:item>
                    </g:ListBox>
                </g:HTMLPanel>

            </g:HTMLPanel>
        </g:FormPanel>
    </g:HTMLPanel>
</ui:UiBinder> 