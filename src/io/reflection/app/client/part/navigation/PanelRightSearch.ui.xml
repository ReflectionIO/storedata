	<ui:import field="io.reflection.app.client.res.Styles.STYLES_INSTANCE" />
	<ui:style>
	
	</ui:style>
	<g:HTMLPanel styleName="{STYLES_INSTANCE.reflectionMainStyle.panelRightContainer} js-search-container">

		<div ui:field="panelOverlay" class="{STYLES_INSTANCE.reflectionMainStyle.panelRight__overlay}"></div>
		<div class="{STYLES_INSTANCE.reflectionMainStyle.panelRight} {STYLES_INSTANCE.reflectionMainStyle.searchContainer}">
			<form class="{STYLES_INSTANCE.reflectionMainStyle.search__form} {STYLES_INSTANCE.reflectionMainStyle.formsDarkTheme}">
				<div class="{STYLES_INSTANCE.reflectionMainStyle.formField}">
					<g:TextBox ui:field="inputSearch"></g:TextBox>
					<label for="search">Search</label>
					<img src="images/loadingSpinner.gif" class="{STYLES_INSTANCE.reflectionMainStyle.loadingSpinnerSearchApps}" ui:field="loadingSpinner" />
				</div>
			</form>
			<div class="{STYLES_INSTANCE.reflectionMainStyle.search__resultsContainer}">
				<div class="{STYLES_INSTANCE.reflectionMainStyle.search__resultsSection} js-custom-scrollbar" data-mcs-theme="minimal-dark" ui:field="appResultsContainer">
					<h2>Apps</h2>
					<ul ui:field="appResults">
					</ul>
				</div>
				<div
					class="{STYLES_INSTANCE.reflectionMainStyle.search__resultsSection} {STYLES_INSTANCE.reflectionMainStyle.search__resultsSectionDevelopers} js-custom-scrollbar"
					data-mcs-theme="minimal-dark" ui:field="developerResultsContainer">
					<h2>Developers</h2>
					<ul ui:field="developerResults">
					</ul>
				</div>
				<div class="{STYLES_INSTANCE.reflectionMainStyle.searchResultsNoneContainer}" ui:field="noResultsContainer">
					<svg version="1.1" class="{STYLES_INSTANCE.reflectionMainStyle.svgUnhappy}" x="0px" y="0px"
