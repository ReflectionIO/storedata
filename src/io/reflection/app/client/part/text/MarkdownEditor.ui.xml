<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		/* Add CSS here. See the GWT docs on UI Binder for more details */
		.important {
		font-weight: bold;
		}
		.gwt-Frame form-control {
		}

		.toolbar {
		margin-bottom: 5px;
		}

		.marginTop {
		margin-top: 10px;
		}

	</ui:style>
	<g:HTMLPanel height="700">
		<g:TabPanel ui:field="tabLayout" width="100%">
			<g:Tab text="Edit">
				<g:HTMLPanel>
					<g:HTMLPanel addStyleNames="btn-group {style.marginTop}">
						<g:Button styleName="btn btn-default" ui:field="bold" />
						<g:Button styleName="btn btn-default" ui:field="italic" />
					</g:HTMLPanel>
					<g:TextArea addStyleNames="{style.marginTop}" ui:field="textArea" width="100%" height="200px" text="" />
				</g:HTMLPanel>
			</g:Tab>
			<g:Tab text="Preview">
				<g:Frame width="100%" height="100%" ui:field="iframe" styleName="{style.gwt-Frame} {style.marginTop}" />
			</g:Tab>
		</g:TabPanel>
	</g:HTMLPanel>
</ui:UiBinder> 