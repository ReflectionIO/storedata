<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	/* Add CSS here. See the GWT docs on UI Binder for more details */
	.important {
		font-weight: bold;
	}
	.gwt-Frame form-control {
	}
	</ui:style>
	<g:HTMLPanel height="500">
		<g:TabLayoutPanel barHeight="2" barUnit="EM" width="100%" height="300px" animationDuration="0" ui:field="tabLayout">
			<g:tab>
				<g:header>Edit</g:header>
				<g:VerticalPanel width="100%" height="100%">
					<g:TextArea ui:field="textArea" width="100%" height="100%" text="daniel is cool [[so there]] lalala"/>
				</g:VerticalPanel>
			</g:tab>
			<g:tab>
				<g:header>Preview</g:header>
				<g:VerticalPanel width="100%" height="100%">
					<g:Frame url="http://www.google.com" width="100%" height="100%" ui:field="iframe" styleName="{style.gwt-Frame}"/>
				</g:VerticalPanel>
			</g:tab>
		</g:TabLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 