<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:import field="io.reflection.app.client.page.PageType.CategoriesPageType" />
	<ui:import field="io.reflection.app.client.page.PageType.ForumPageType" />
	<ui:import field="io.reflection.app.client.page.PageType.BlogPostsPageType" />
	<ui:import field="io.reflection.app.client.page.PageType.UpgradePageType" />
	<ui:import field="io.reflection.app.client.page.PageType.FeedBrowserPageType" />
	<ui:import field="io.reflection.app.client.page.PageType.UsersPageType" />
	<ui:import field="io.reflection.app.client.page.PageType.RolesPageType" />
	<ui:import field="io.reflection.app.client.page.PageType.PermissionsPageType" />
	<ui:import field="io.reflection.app.client.page.PageType.EmailTemplatesPageType" />
	<ui:import field="io.reflection.app.client.page.PageType.BlogAdminPageType" />
	<ui:import field="io.reflection.app.client.page.PageType.RegisterPageType" />
	<ui:import field="io.reflection.app.client.page.PageType.LoginPageType" />
	<ui:import field="io.reflection.app.client.page.PageType.SearchPageType" />
	<ui:import field="io.reflection.app.client.page.PageType.HomePageType" />
	<ui:import field="io.reflection.app.client.page.PageType.ItemsPageType" />
	<ui:import field="io.reflection.app.client.page.PageType.DataAccountsPageType" />

	<ui:with field="res" type='io.reflection.app.client.res.Images' />
	<ui:with field="global" type="io.reflection.app.client.res.Styles" />

	<ui:style>
	.searchBox {
	    margin-top: 5px;
	    margin-right: 24px;
	    height: 40px;
	    background-color: #21222b;
	    padding-top: 10px;
	    padding-left: 16px;
	    padding-right: 10px;
	    color: #6b6c7c !important;
	}
	
	.searchIcon {
	    margin-left: 16px;
	}
	
	.collapseMobile {
	    padding-left: 0px;
	    padding-right: 0px;
	    border: none;
	    box-shadow: none;
	}
	
	.loginMobile {
	    margin-top: -10px;
	}
	
	.loginMobile li a {
	    padding-top: 25px;
	    padding-bottom: 15px;
	    padding-left: 30px !important;
	    padding-right: 28px !important;
	}
	
	.loginMobile li a i {
	    padding-right: 4px;
	}
	
	.brandCover {
	    position: absolute;
	    width: 225px;
	    height: 50px;
	    z-index: 15;
	}
	</ui:style>

	<g:HTMLPanel ui:field="pnlHeader" styleName="{global.reflection.header} navbar navbar-inverse navbar-fixed-top">

		<!-- Logo -->
		<div class="navbar-header">
			<g:Button ui:field="collapseButton" styleName="navbar-toggle">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</g:Button>
			<div ui:field="navbarBrandCover" class="{style.brandCover} hidden">
			</div>
			<a class="navbar-brand" href="{HomePageType.asHref}">
				<g:Image resource="{res.reflectionLogoBeta}" />
			</a>

		</div>

		<div class="{style.collapseMobile} collapse navbar-collapse " ui:field="collapsableNavBar">

			<ul class="nav navbar-nav" ui:field="navList">
				<li ui:field="ranksItem">
					<g:InlineHyperlink ui:field="ranksLink">Leaderboard</g:InlineHyperlink>
				</li>

				<!-- My Account Panel -->
				<ul class="nav navbar-nav" ui:field="myAccountList">

					<li ui:field="myAccountDropdown" class="dropdown">
						<g:Anchor styleName="dropdown-toggle" ui:field="accountButton">
							My Account
							<span class="caret headerCaret"></span>
						</g:Anchor>
						<ul class="dropdown-menu">
							<li ui:field="myAppsItem">
								<g:InlineHyperlink ui:field="myAppsLink">
									<i class="glyphicon glyphicon-th"></i>
									My Apps
								</g:InlineHyperlink>
							</li>
							<li ui:field="linkedAccountsItem">
								<g:InlineHyperlink ui:field="linkedAccountsLink">
									<i class="glyphicon glyphicon-link"></i>
									Linked Accounts
								</g:InlineHyperlink>
							</li>
							<li ui:field="accountSettingsItem">
								<g:InlineHyperlink ui:field="accountSettingsLink">
									<i class="glyphicon glyphicon-user"></i>
									Account Settings
								</g:InlineHyperlink>
							</li>
						</ul>
					</li>
				</ul>

				<li ui:field="blogItem">
					<g:InlineHyperlink targetHistoryToken="{BlogPostsPageType.asTargetHistoryToken}">Blog</g:InlineHyperlink>
				</li>

				<li ui:field="forumItem">
					<g:InlineHyperlink targetHistoryToken="{ForumPageType.asTargetHistoryToken}">Forum</g:InlineHyperlink>
				</li>

				<!-- <li ui:field="upgradeAccountItem"> <g:InlineHyperlink targetHistoryToken="{UpgradePageType.asTargetHistoryToken}" ui:field="upgradeAccountLink" text="Pricing" 
					/> </li> -->
			</ul>

			<!-- Admin panel -->
			<ul class="nav navbar-nav" ui:field="adminList">
				<li ui:field="adminDropdown" class="dropdown">
					<g:Anchor styleName="dropdown-toggle" ui:field="adminButton">
						Admin
						<span class="caret"></span>
					</g:Anchor>
					<ul class="dropdown-menu">
						<li ui:field="feedBrowserItem">
							<g:InlineHyperlink targetHistoryToken="{FeedBrowserPageType.asTargetHistoryToken}">Feed Browser</g:InlineHyperlink>
						</li>
						<li ui:field="itemsItem">
							<g:InlineHyperlink targetHistoryToken="{ItemsPageType.asTargetHistoryToken}">Items</g:InlineHyperlink>
						</li>
						<li ui:field="categoriesItem">
							<g:InlineHyperlink targetHistoryToken="{CategoriesPageType.asTargetHistoryToken}">Categories</g:InlineHyperlink>
						</li>
						<li class="divider-horizontal-header"></li>
						<li ui:field="usersItem">
							<g:InlineHyperlink targetHistoryToken="{UsersPageType.asTargetHistoryToken}">
								Users
								<span ui:field="totalUsers" class="badge">1+</span>
							</g:InlineHyperlink>
						</li>
						<li ui:field="rolesItem">
							<g:InlineHyperlink targetHistoryToken="{RolesPageType.asTargetHistoryToken}">Roles</g:InlineHyperlink>
						</li>
						<li ui:field="permissionsItem">
							<g:InlineHyperlink targetHistoryToken="{PermissionsPageType.asTargetHistoryToken}">Permissions</g:InlineHyperlink>
						</li>
						<li ui:field="dataAccountsItem">
							<g:InlineHyperlink targetHistoryToken="{DataAccountsPageType.asTargetHistoryToken}">Data accounts</g:InlineHyperlink>
						</li>
						<li class="divider-horizontal-header"></li>
						<li ui:field="emailTemplatesItem">
							<g:InlineHyperlink targetHistoryToken="{EmailTemplatesPageType.asTargetHistoryToken}">Email Templates</g:InlineHyperlink>
						</li>
						<li ui:field="blogAdminItem">
							<g:InlineHyperlink targetHistoryToken="{BlogAdminPageType.asTargetHistoryToken}">Blog</g:InlineHyperlink>
						</li>
					</ul>
				</li>
			</ul>

			<!-- Log In -->
			<ul class="nav navbar-nav navbar-right {style.loginMobile}" ui:field="login">
				<!-- <li ui:field="mRegisterItem"> <g:InlineHyperlink ui:field="mRegisterLink" targetHistoryToken="{RegisterPageType.asTargetHistoryToken}">Sign Up</g:InlineHyperlink> 
					</li> -->
				<li ui:field="loginItem">
					<g:InlineHyperlink ui:field="loginLink" targetHistoryToken="{LoginPageType.asTargetHistoryToken}">
						<i class="icon-login" />
						Log In
					</g:InlineHyperlink>
				</li>
			</ul>

			<!-- User name and Sign Out -->
			<ul class="nav navbar-nav navbar-right" ui:field="userSignOut">
				<li>
					<g:InlineHTML ui:field="userName" styleName="navbar-text" />
				</li>
				<li class="divider-vertical"></li>
				<li>
					<g:InlineHyperlink targetHistoryToken="logout">
						Sign Out
					</g:InlineHyperlink>
				</li>
			</ul>

			<ul class="nav navbar-nav navbar-right hidden-xs hidden-sm" ui:field="search">
				<li>
					<span class="navbar-text {style.searchBox}">
						Search Coming Soon
						<span class="icon-search {style.searchIcon}" />
					</span>
				</li>
			</ul>

			<!-- Feature Request <ul class="nav navbar-nav navbar-right" style="display: none;" ui:field="mFeatureRequest"> <li class="dropdown"> <g:Anchor styleName="dropdown-toggle" 
				ui:field="featureRequestButton"> <i class="glyphicon glyphicon-comment" style="margin-right: 10px"></i> Feature Requests </g:Anchor> <ul class="dropdown-menu"> <li 
				style="text-align: justify; font-size: 14px;"> Help us develop a truly groundbreaking intelligence tool. Contact us if you have feedback or if you would like to 
				see any additional feature that you feel can add value. We're here to help. </li> <hr style="height:1px; border:none; color:#363845; background-color:#363845;"></hr> 
				<li> <a href="mailto:gustaf@reflection.io" target="_blank"> <i class="glyphicon glyphicon-envelope" style="margin-right: 15px"></i> gustaf@reflection.io </a> </li> 
				<li> <a href="callto:+44 (0) 7929 635 487" target="_blank"> <i class="glyphicon glyphicon-earphone" style="margin-right: 15px"></i> +44 (0) 7929 635 487 </a> </li> 
				</ul> </li> <li class="divider-vertical"></li> </ul> -->


			<!-- <g:FormPanel styleName="navbar-form navbar-right"> <g:HTMLPanel styleName="{style.searchBox}"> <span class="form-group"> <g:TextBox styleName="form-control" 
				ui:field="mQuery" /> </span> <span> <g:InlineHyperlink styleName="btn btn-default" ui:field="mSearch" targetHistoryToken="{SearchPageType.asTargetHistoryToken}/query" 
				/> </span> </g:HTMLPanel> </g:FormPanel> -->

		</div><!--/.nav-collapse -->

	</g:HTMLPanel>
</ui:UiBinder> 