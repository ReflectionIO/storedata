    <g:HTMLPanel ui:field="pnlHeader" styleName="header navbar navbar-inverse navbar-fixed-top">

        <!-- Logo -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{HomePageType.asHref}">
                <g:Image resource="{res.reflectionLogoBeta}" />
            </a>
        </div>

        <div class="collapse navbar-collapse">

            <ul class="nav navbar-nav" ui:field="navList">
                <li ui:field="ranksItem">
                    <g:InlineHyperlink ui:field="ranksLink">Leaderboard</g:InlineHyperlink>
                </li>

                <!-- My Account Panel -->
                <ul class="nav navbar-nav" ui:field="myAccountList">

                    <li ui:field="myAccountDropdown" class="dropdown">
                        <g:Anchor styleName="dropdown-toggle" ui:field="accountButton">
                            My Account
                            <span class="caret headerCaret"></span>
                        </g:Anchor>
                        <ul class="dropdown-menu">
                            <li ui:field="myAppsItem">
                                <g:InlineHyperlink ui:field="myAppsLink">
                                    <i class="glyphicon glyphicon-th"></i>
                                    My Apps
                                </g:InlineHyperlink>
                            </li>
                            <li ui:field="linkedAccountsItem">
                                <g:InlineHyperlink ui:field="linkedAccountsLink">
                                    <i class="glyphicon glyphicon-link"></i>
                                    Linked Accounts
                                </g:InlineHyperlink>
                            </li>
                            <li ui:field="personalDetailsItem">
                                <g:InlineHyperlink ui:field="personalDetailsLink">
                                    <i class="glyphicon glyphicon-cog"></i>
                                    Personal Details
                                </g:InlineHyperlink>
                            </li>
                            <li ui:field="changePasswordItem">
                                <g:InlineHyperlink ui:field="changePasswordLink">
                                    <i class="glyphicon glyphicon-cog"></i>
                                    Change Password
                                </g:InlineHyperlink>
                            </li>
                        </ul>
                    </li>
                </ul>

                <li ui:field="blogItem">
                    <g:InlineHyperlink ui:field="blogLink" targetHistoryToken="{BlogPostsPageType.asTargetHistoryToken}">Blog</g:InlineHyperlink>
                </li>

                <li ui:field="forumItem">
                    <g:InlineHyperlink ui:field="forumLink" targetHistoryToken="{ForumPageType.asTargetHistoryToken}">Forum</g:InlineHyperlink>
                </li>

                <li ui:field="upgradeAccountItem">
                    <g:InlineHyperlink targetHistoryToken="{UpgradePageType.asTargetHistoryToken}" ui:field="upgradeAccountLink" text="Pricing" />
                </li>
            </ul>

            <!-- Admin panel -->
            <ul class="nav navbar-nav" ui:field="adminList">
                <li ui:field="adminDropdown" class="dropdown">
                    <g:Anchor styleName="dropdown-toggle" ui:field="adminButton">
                        Admin
                        <span class="caret"></span>
                    </g:Anchor>
                    <ul class="dropdown-menu">
                        <li ui:field="feedBrowserItem">
                            <g:InlineHyperlink ui:field="feedBrowserLink" targetHistoryToken="{FeedBrowserPageType.asTargetHistoryToken}">Feed Browser</g:InlineHyperlink>
                        </li>
                        <li ui:field="itemsItem">
                            <g:InlineHyperlink ui:field="itemsLink" targetHistoryToken="{ItemsPageType.asTargetHistoryToken}">Items</g:InlineHyperlink>
                        </li>
                        <li class="divider"></li>
                        <li ui:field="usersItem">
                            <g:InlineHyperlink ui:field="usersLink" targetHistoryToken="{UsersPageType.asTargetHistoryToken}">
                                Users
                                <span ui:field="totalUsers" class="badge">1+</span>
                            </g:InlineHyperlink>
                        </li>
                        <li ui:field="rolesItem">
                            <g:InlineHyperlink ui:field="rolesLink" targetHistoryToken="{RolesPageType.asTargetHistoryToken}">Roles</g:InlineHyperlink>
                        </li>
                        <li ui:field="permissionsItem">
                            <g:InlineHyperlink ui:field="permissionsLink" targetHistoryToken="{PermissionsPageType.asTargetHistoryToken}">Permissions</g:InlineHyperlink>
                        </li>
                        <li class="divider"></li>
                        <li ui:field="emailTemplatesItem">
                            <g:InlineHyperlink ui:field="emailTemplatesLink" targetHistoryToken="{EmailTemplatesPageType.asTargetHistoryToken}">Email Templates</g:InlineHyperlink>
                        </li>
                        <li ui:field="blogAdminItem">
                            <g:InlineHyperlink ui:field="blogAdminLink" targetHistoryToken="{BlogAdminPageType.asTargetHistoryToken}">Blog</g:InlineHyperlink>
                        </li>
                    </ul>
                </li>
            </ul>

            <!-- User name and Sign Out -->
            <ul class="nav navbar-nav navbar-right" ui:field="userSignOut">
                <li>
                    <g:InlineHTML ui:field="userName" styleName="navbar-text" />
                </li>
                <li class="divider-vertical"></li>
                <li>
                    <g:InlineHyperlink targetHistoryToken="logout">
                        Sign Out
                    </g:InlineHyperlink>
                </li>
            </ul>


            <ul class="nav navbar-nav navbar-right" ui:field="login">
                <!-- <li ui:field="mRegisterItem"> <g:InlineHyperlink ui:field="mRegisterLink" targetHistoryToken="{RegisterPageType.asTargetHistoryToken}">Sign Up</g:InlineHyperlink> 
                    </li> -->
                <li ui:field="loginItem">
                    <g:InlineHyperlink ui:field="loginLink" targetHistoryToken="{LoginPageType.asTargetHistoryToken}">
                        Log In
                        <b class="glyphicon glyphicon-log-in"></b>
                    </g:InlineHyperlink>
                </li>
            </ul>



