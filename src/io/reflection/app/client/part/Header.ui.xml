<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='res' type='io.reflection.app.client.res.Images' />
    <ui:style>
    @external navbar-nav;
    .header {
    	background: #272833;
    }
    
    .alignToImage {
    	vertical-align: bottom;
    }
    
    .navbar-nav>li>a.anchor {
    	padding-top: 10px;
    	padding-bottom: 10px;
    }
    
    .navbar-nav>li>a.anchor img {
    	margin-left: 5px;
    }
    </ui:style>
    <g:HTMLPanel ui:field="pnlHeader" styleName="navbar navbar-inverse navbar-fixed-top {style.header}">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="">
                    <g:Image styleName="{style.alignToImage}" resource="{res.logo}" />&nbsp;&nbsp;Reflection
                </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav" ui:field="mNavList">
                    <li ui:field="mRanksItem">
                        <g:InlineHyperlink ui:field="mRanksLink" targetHistoryToken="ranks">Leaderboard</g:InlineHyperlink>
                    </li>

                    <li ui:field="mUpgradeAccountItem">
                        <g:InlineHyperlink targetHistoryToken="upgrade" ui:field="mUpgradeAccountLink" text="Pricing" />
                    </li>
                </ul>
                <ul class="nav navbar-nav" ui:field="mAdminList">
                    <li ui:field="mAdminDropdown" class="dropdown">
                        <g:Anchor styleName="dropdown-toggle" ui:field="mAdminButton" text="Admin" />
                        <ul class="dropdown-menu">
                            <li ui:field="mFeedBrowserItem">
                                <g:InlineHyperlink ui:field="mFeedBrowserLink" targetHistoryToken="feedbrowser">Feed Browser</g:InlineHyperlink>
                            </li>
                            <li class="divider"></li>
                            <li ui:field="mUsersItem">
                                <g:InlineHyperlink ui:field="mUsersLink" targetHistoryToken="users">
                                    Users
                                    <span ui:field="mTotalUsers" class="badge">1+</span>
                                </g:InlineHyperlink>
                            </li>
                            <li class="divider"></li>
                            <li ui:field="mRolesItem">
                                <g:InlineHyperlink ui:field="mRolesLink" targetHistoryToken="roles">Roles</g:InlineHyperlink>
                            </li>
                            <li ui:field="mPermissionsItem">
                                <g:InlineHyperlink ui:field="mPermissionsLink" targetHistoryToken="permissions">Permissions</g:InlineHyperlink>
                            </li>
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right" ui:field="mAccountList">
                    <li ui:field="mRegisterItem">
                        <g:InlineHyperlink ui:field="mRegisterLink" targetHistoryToken="register">Sign Up</g:InlineHyperlink>
                    </li>
                    <li ui:field="mLoginItem">
                        <g:InlineHyperlink ui:field="mLoginLink" targetHistoryToken="login">Log In</g:InlineHyperlink>
                    </li>
                    <li ui:field="mAccountDropdown" class="dropdown">
                        <g:Anchor styleName="dropdown-toggle {style.anchor}" ui:field="mAccountButton" />
                        <ul class="dropdown-menu">
                            <li ui:field="mLinkedAccountsItem">
                                <g:InlineHyperlink ui:field="mLinkedAccountsLink" text="Linked accounts" />
                            </li>
                            <li class="divider"></li>
                            <li ui:field="mChangeDetailsItem">
                                <g:InlineHyperlink ui:field="mChangeDetailsLink" text="Change Details" />
                            </li>
                            <li ui:field="mChangePasswordItem">
                                <g:InlineHyperlink ui:field="mChangePasswordLink" text="Change Password" />
                            </li>
                            <li class="divider"></li>
                            <li ui:field="mLogoutItem">
                                <g:InlineHyperlink targetHistoryToken="logout" ui:field="mLogoutLink" text="Sign Out" />
                            </li>
                        </ul>
                    </li>
                </ul>

            </div><!--/.nav-collapse -->
        </div>
    </g:HTMLPanel>
</ui:UiBinder> 