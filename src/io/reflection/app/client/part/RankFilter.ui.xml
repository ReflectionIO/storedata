<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d="urn:import:com.google.gwt.user.datepicker.client">
    <ui:style>
    .moreMargin {
		margin-right: 0.2em;
    }
    </ui:style>
    <g:HTMLPanel styleName="well sidebar-nav col-md-3">
        <g:FormPanel>
            <g:HTMLPanel>

                <g:HTMLPanel styleName="form-group">
                    <label>
                        <i class="icon-calendar"></i>
                        Date
                    </label>
                    <!--<input type="text" id="datepicker"> -->
                    <div class="input-group">
                        <d:DateBox styleName="form-control" ui:field="mDate" />
                        <span class="input-group-addon">
                            <i class="icon-calendar"></i>
                        </span>
                    </div>
                </g:HTMLPanel>

                <!-- <g:HTMLPanel styleName="form-group"> <label>Overview</label> <g:ListBox styleName="form-control" ui:field="mListType"> <g:item value="all">All</g:item> 
                    <g:item value="paid">Paid</g:item> <g:item value="free">Free</g:item> <g:item value="grossing">Grossing</g:item> </g:ListBox> </g:HTMLPanel> -->

                <g:HTMLPanel styleName="form-group">
                    <label>
                        <i class="icon-globe"></i>
                        Country
                    </label>
                    <g:ListBox styleName="form-control" ui:field="mCountry">
                        <g:item value="us">United States</g:item>
                        <g:item value="gb">United Kingdom</g:item>
                        <g:item value="cn">China</g:item>
                        <g:item value="de">Germany</g:item>
                        <g:item value="fr">France</g:item>
                    </g:ListBox>
                </g:HTMLPanel>


                <g:HTMLPanel styleName="form-group">
                    <label>
                        <i class="glyphicon glyphicon-folder-open {style.moreMargin}"></i>
                        App Store
                    </label>
                    <g:ListBox styleName="form-control" ui:field="mAppStore">
                        <g:item value="iph">iPhone</g:item>
                        <g:item value="ipa">iPad</g:item>
                    </g:ListBox>
                </g:HTMLPanel>

                <!-- <g:HTMLPanel styleName="form-group"><label>Category</label> <g:ListBox styleName="form-control" id="category"> <g:item>All Categories</g:item> 
                    <g:item>Games</g:item> <g:item>Entertainment</g:item> <g:item>Health &amp; Fitness</g:item></g:ListBox> </g:HTMLPanel> -->
            </g:HTMLPanel>
        </g:FormPanel>
    </g:HTMLPanel>
</ui:UiBinder> 