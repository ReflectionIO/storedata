	<ui:style>
	.viewBtn {
	    height: 35px;
	    font-size: 14px;
	    margin-right: 20px;
	}
	</ui:style>

	<g:HTMLPanel>
		<g:Button ui:field="viewMoreButton" styleName="btn btn-default pull-left {style.viewBtn}" />
		<g:Button ui:field="viewLessButton" styleName="btn btn-default pull-left {style.viewBtn}" visible="false" />
		<p:BackToTop styleName="pull-right" />
	</g:HTMLPanel>

</ui:UiBinder> 