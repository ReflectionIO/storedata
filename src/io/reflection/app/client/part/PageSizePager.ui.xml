<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.client.part">
	<ui:style>
	.container {
	    display: inline-block;
	    width: 100%;
	}
	
	.viewBtn {
	    height: 35px;
	    font-size: 14px;
	    margin-right: 20px;
	}
	</ui:style>

	<g:HTMLPanel>
		<g:HTMLPanel styleName="{style.container}">
			<g:Button ui:field="viewMoreButton" styleName="btn btn-default pull-left {style.viewBtn}">View More</g:Button>
			<g:Button ui:field="viewLessButton" styleName="btn btn-default pull-left {style.viewBtn}">View Less</g:Button>
			<p:BackToTop styleName="pull-right" />
		</g:HTMLPanel>
	</g:HTMLPanel>

</ui:UiBinder> 