<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
    .moreMargin {
    	margin-right: 0.2em;
    }
    
    .pageTitle {
    	padding-bottom: 30px;
    }
    
    .hideOverflow {
		overflow: hidden;
	}
	
    </ui:style>
    <g:HTMLPanel styleName="sidebar-nav">
        <g:Image ui:field="mImage" styleName="img-rounded" />

        <h2 ui:field="mTitle" class="{style.hideOverflow}">Item</h2>

        <h3 ui:field="mCreatorName" class="{style.pageTitle} {style.hideOverflow} text-muted">By Creator</h3>

        <p ui:field="price">$0.99 + in-App purchases</p>

        <hr />

        <div class="btn-group btn-group-justified">
            <g:InlineHyperlink ui:field="mToday" styleName="btn btn-default active">
                <span class="caret"></span>
                Today
            </g:InlineHyperlink>
            <g:InlineHyperlink ui:field="mThisMonth" styleName="btn btn-default">This Month</g:InlineHyperlink>
        </div>

        <br />

        <h4>
            <i class="icon-money"></i>
            Global Revenue
        </h4>

        <p class="text-right lead">$42,672</p>

        <h4>
            <i class="icon-download"></i>
            Global Downloads
        </h4>

        <p class="text-right lead">203,786</p>

        <!-- <h4><i class="icon-star-empty"></i>Customer Rating</h4> <p>4/5<span class="pull-right"><i class="icon-star-empty"></i><i class="icon-star"></i><i class="icon-star"></i><i 
            class="icon-star"></i><i class="icon-star"></i></span></p> -->
        <hr />

        <!-- <a class="btn btn-primary col-xs-12"> More Info <i class="icon-plus"></i> </a> <br /> -->

        <a class="col-xs-12 text-center" target="_blank" ui:field="viewInStore">
            View in the
            <span ui:field="storeName">Appstore</span>
            <i class="icon-link-ext"></i>
        </a>


    </g:HTMLPanel>

</ui:UiBinder> 