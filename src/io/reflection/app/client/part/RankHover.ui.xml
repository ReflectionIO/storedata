<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
    .bold {
    	font-weight: bold;
    	font-size: 12pt;
    }
    
    .box {
        background: white;
        border-left: solid 10px #9780E4;
        padding: 10px 15px;
        -webkit-box-shadow: 0 1px 3px rgba(0,0,0,.25);
        box-shadow: 0 1px 3px rgba(0,0,0,.25);
	}
    </ui:style>
    <g:HTMLPanel styleName="{style.box} img-rounded">
        <div ui:field="date">June 17, 2013</div>
        <div ui:field="detail" class="{style.bold}">$82,193</div>
    </g:HTMLPanel>
</ui:UiBinder> 