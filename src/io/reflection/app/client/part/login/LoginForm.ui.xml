<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='images' type='io.reflection.app.client.res.Images' />
	<ui:style>
	.noteDetail {
		font-size: smaller;
		margin-top: 5px;
	}
	
	.marginTop30 {
		margin-top: 30px;
	}
	
	.marginTop20 {
		margin-top: 20px;
	}
	
	.marginBottomForm {
		margin-bottom: 30px;
	}
	
	.marginTop5 {
		margin-top: 5px;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:FormPanel ui:field="mLoginForm" styleName="well col-sm-12">

			<g:HTMLPanel styleName="{style.marginTop20}">
				<h4 class="text-center">
					Log in and get started
				</h4>

				<g:HTMLPanel styleName="col-sm-10 col-sm-offset-1 {style.marginTop20}">

					<g:HTMLPanel ui:field="mEmailGroup" styleName="form-group">
						<label>Email Address</label>
						<g:TextBox styleName="form-control  {style.marginTop5}"
							ui:field="mEmail" />
						<g:HTMLPanel styleName="{style.noteDetail}" ui:field="mEmailNote"
							visible="false" />
					</g:HTMLPanel>

					<g:HTMLPanel ui:field="mPasswordGroup" styleName="form-group">
						<label>Password</label>
						<g:PasswordTextBox styleName="form-control  {style.marginTop5}"
							ui:field="mPassword" />
						<g:HTMLPanel styleName="{style.noteDetail}" ui:field="mPasswordNote"
							visible="false" />
					</g:HTMLPanel>


					<g:CheckBox ui:field="mRememberMe" styleName="checkbox"
						text="Remember me" />


					<g:Button ui:field="mLogin"
						styleName="btn btn-lg btn-primary btn-block {style.marginBottomForm} {style.marginTop30}">
						Log In
					</g:Button>

					<h6 class="text-center" style="margin-bottom: 40px">
						I've forgotten my
						<g:InlineHyperlink ui:field="mForgotPassword"
							targetHistoryToken="login">Password</g:InlineHyperlink>
					</h6>

				</g:HTMLPanel>
			</g:HTMLPanel>
		</g:FormPanel>


		<g:FormPanel ui:field="mForgotPasswordForm" styleName="well col-sm-12"
			visible="false">

			<g:HTMLPanel styleName="{style.marginTop20}">
				<h4 class="text-center">
					Forgot your details?
				</h4>

				<p class="text-center">Enter your email address below and we'll send you a
					meninder email</p>

				<hr />

				<g:HTMLPanel styleName="col-sm-10 col-sm-offset-1 {style.marginTop20}">

					<g:HTMLPanel styleName="form-group">
						<label>Email Address</label>
						<g:TextBox ui:field="mEmailForgotPassword" styleName="form-control  {style.marginTop5}" />
						<g:HTMLPanel styleName="{style.noteDetail}" visible="false" />
					</g:HTMLPanel>

					<g:Button ui:field="mSubmitForgotPassword"
						styleName="btn btn-lg btn-primary btn-block {style.marginBottomForm} {style.marginTop30}">
						Submit
					</g:Button>

				</g:HTMLPanel>
			</g:HTMLPanel>
		</g:FormPanel>

		<g:HTMLPanel ui:field="mForgotPasswordReminder" styleName="text-center well col-sm-12"
			visible="false">
			<g:Image resource="{images.emailSent}" />
			<h4>Reminder on it's way</h4>
			<p>We've sent a reminder email to the address you specified, it
				should be with you in a few moments</p>
		</g:HTMLPanel>


	</g:HTMLPanel>
</ui:UiBinder> 