<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:io.reflection.app.client.component">

	<ui:import field="io.reflection.app.client.page.PageType.ForgotPasswordPageType" />

	<ui:import field="io.reflection.app.client.res.Styles.STYLES_INSTANCE" />

	<ui:style gss="true">
	
	</ui:style>
	<g:HTMLPanel tag="form">

		<c:TextField ui:field="emailFormField" labelText="Email" />
		<c:PasswordField ui:field="passwordFormField" labelText="Password" />

		<g:InlineHyperlink targetHistoryToken="{ForgotPasswordPageType.asTargetHistoryToken}" styleName="{STYLES_INSTANCE.reflectionMainStyle.formLink}">I've misplaced my
			password</g:InlineHyperlink>

		<div class="{STYLES_INSTANCE.reflectionMainStyle.formFieldCheckboxList}">
			<ul>
				<li>
					<c:FormCheckbox ui:field="rememberMe" label="Keep me signed in" />
				</li>
			</ul>
		</div>
		<c:FormButton ui:field="loginBtn" styleName="{STYLES_INSTANCE.reflectionMainStyle.refButtonFullWidth}" text="Log in" />
	</g:HTMLPanel>
</ui:UiBinder>
