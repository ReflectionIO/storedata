<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
    .checkbox {
    	margin-top: 15px;
    }
    
    .passwordLink {
    	font-weight: 400;
    	font-size: 14px;
    	font-family: 'Lato', sans-serif;
    	line-height: 22px;
    }
    </ui:style>
    <g:HTMLPanel>
        <g:FormPanel ui:field="mForm" styleName="form">

            <g:HTMLPanel>

                <g:HTMLPanel ui:field="mEmailGroup" styleName="form-group">
                    <label>Email Address</label>
                    <g:TextBox styleName="form-control" ui:field="mEmail" />
                    <g:HTMLPanel styleName="noteDetail" ui:field="mEmailNote" visible="false" />
                </g:HTMLPanel>

                <g:HTMLPanel ui:field="mPasswordGroup" styleName="form-group">
                    <label>Password</label>
                    <g:PasswordTextBox styleName="form-control" ui:field="mPassword" />
                    <g:HTMLPanel styleName="noteDetail" ui:field="mPasswordNote" visible="false" />
                </g:HTMLPanel>



                <g:HTMLPanel styleName="checkbox {style.checkbox}">
                    <label>
                        <g:CheckBox ui:field="mRememberMe" />
                        Remember me
                    </label>
                </g:HTMLPanel>


                <g:Button ui:field="mLogin" styleName="btn btn-lg btn-primary btn-block">
                    Log In
                </g:Button>

                <p class="text-center p-small">
                    I've forgotten my
                    <g:InlineHyperlink ui:field="mForgotPassword" styleName="{style.passwordLink}" targetHistoryToken="forgotpassword">Password</g:InlineHyperlink>
                </p>

            </g:HTMLPanel>
        </g:FormPanel>

    </g:HTMLPanel>
</ui:UiBinder> 