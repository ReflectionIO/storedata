<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:with field='images' type='io.reflection.app.client.res.Images' />
	<ui:style>
	.form {
		padding-left: 55px;
		padding-right: 55px;
	}
	
	.noteDetail {
		font-size: smaller;
		margin-top: 5px;
	}
	
	.formGroup {
		margin-bottom: 10px;
	}
	
	.marginFormControl {
		margin-top: 5px;
	}
	
	.checkbox {
		margin-top: 15px;
	}
	
	.button {
		margin-bottom: 26px;
		margin-top: 40px;
	}
	
	.marginTop50 {
		margin-top: 50px;
	}
	
	.marginTop30 {
		margin-top: 30px;
	}
	
	.marginTop20 {
		margin-top: 20px;
	}
	
	.marginTop10 {
		margin-top: 10px;
	}
	
	.marginBottomForm {
		margin-bottom: 30px;
	}
	
	.marginTop5 {
		margin-top: 5px;
	}
	
	.reminder {
		padding-top: 80px;
	}
	
	.passLink {
		font-size: 13px;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:FormPanel ui:field="mLoginForm" styleName="{style.form}">

			<g:HTMLPanel styleName="{style.marginTop20}">
				<h4 class="text-center" ui:field="mLoginTitle">
				</h4>

				<g:HTMLPanel styleName="{style.marginTop20}">

					<g:HTMLPanel ui:field="mEmailGroup" styleName="form-group {style.formGroup}">
						<label
							style="font-weight: normal; font-size: 16px; font-family: Oxygen;">Email Address</label>
						<g:TextBox styleName="form-control  {style.marginFormControl}"
							ui:field="mEmail" />
						<g:HTMLPanel styleName="{style.noteDetail}" ui:field="mEmailNote"
							visible="false" />
					</g:HTMLPanel>

					<g:HTMLPanel ui:field="mPasswordGroup" styleName="form-group {style.formGroup}">
						<label
							style="font-weight: normal; font-size: 16px; font-family: Oxygen;">Password</label>
						<g:PasswordTextBox styleName="form-control  {style.marginFormControl}"
							ui:field="mPassword" />
						<g:HTMLPanel styleName="{style.noteDetail}" ui:field="mPasswordNote"
							visible="false" />
					</g:HTMLPanel>



					<g:HTMLPanel styleName="checkbox {style.checkbox}">
						<label>
							<g:CheckBox ui:field="mRememberMe" />
							<span style="font-size: 14px">Remember me</span>
						</label>
					</g:HTMLPanel>


					<g:Button ui:field="mLogin"
						styleName="btn btn-lg btn-primary btn-block {style.button}">
						Log In
					</g:Button>

					<h6 class="text-center"
						style="margin-bottom: 40px; font-size: 13px;  font-family: Avenir;">
						I've forgotten my
						<g:InlineHyperlink ui:field="mForgotPassword"
							styleName="{style.passLink}">Password</g:InlineHyperlink>
					</h6>

				</g:HTMLPanel>
			</g:HTMLPanel>
		</g:FormPanel>


		<g:FormPanel ui:field="mForgotPasswordForm" styleName="{style.form}"
			visible="false">

			<g:HTMLPanel styleName="{style.marginTop20}">
				<h4 class="text-center" style="padding-bottom: 30px;">
					Forgot your details?
				</h4>

				<p>Enter your email address below and we'll send you a
					reminder email</p>

				<hr />

				<g:HTMLPanel styleName=" {style.marginTop10}">

					<g:HTMLPanel ui:field="mEmailForgotPasswordGroup"
						styleName="form-group">
						<label>Email Address</label>
						<g:TextBox styleName="form-control  {style.marginTop5}"
							ui:field="mEmailForgotPassword" />
						<g:HTMLPanel styleName="{style.noteDetail}" ui:field="mEmailForgotPasswordNote"
							visible="false" />
					</g:HTMLPanel>

					<g:Button ui:field="mSubmitForgotPassword"
						styleName="btn btn-lg btn-primary btn-block {style.marginBottomForm} {style.marginTop50}">
						Submit
					</g:Button>

				</g:HTMLPanel>
			</g:HTMLPanel>

		</g:FormPanel>


		<g:HTMLPanel ui:field="mForgotPasswordReminder"
			styleName="{style.form} text-center {style.reminder}"
			visible="false">
			<g:Image resource="{images.emailSent}" />
			<h4 style="margin-top: 40px; margin-bottom: 40px;">Reminder on it's way</h4>
			<p>We've sent a reminder email to the address you specified, it
				should
				be with you in a few moments</p>
		</g:HTMLPanel>



	</g:HTMLPanel>
</ui:UiBinder> 