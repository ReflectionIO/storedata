<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
    .form {
    	padding-left: 55px;
    	padding-right: 55px;
    }
    
    .noteDetail {
    	font-size: smaller;
    	margin-top: 5px;
    }
    
    .formGroup {
    	margin-bottom: 10px;
    }
    
    .marginFormControl {
    	margin-top: 5px;
    }
    
    .checkbox {
    	margin-top: 15px;
    }
    
    .button {
    	margin-bottom: 26px;
    	margin-top: 40px;
    }
    
    .marginTop50 {
    	margin-top: 50px;
    }
    
    .marginTop30 {
    	margin-top: 30px;
    }
    
    .marginTop20 {
    	margin-top: 20px;
    }
    
    .marginTop10 {
    	margin-top: 10px;
    }
    
    .marginBottomForm {
    	margin-bottom: 30px;
    }
    
    .marginTop5 {
    	margin-top: 5px;
    }
    
    .reminder {
    	padding-top: 80px;
    }
    
    .passLink {
    	font-size: 13px;
    }
    </ui:style>
    <g:HTMLPanel>
        <g:FormPanel ui:field="mForm" styleName="{style.form}">

            <g:HTMLPanel styleName="{style.marginTop20}">

                <g:HTMLPanel ui:field="mEmailGroup" styleName="form-group {style.formGroup}">
                    <label style="font-weight: normal; font-size: 16px; font-family: Oxygen;">Email Address</label>
                    <g:TextBox styleName="form-control  {style.marginFormControl}" ui:field="mEmail" />
                    <g:HTMLPanel styleName="{style.noteDetail}" ui:field="mEmailNote" visible="false" />
                </g:HTMLPanel>

                <g:HTMLPanel ui:field="mPasswordGroup" styleName="form-group {style.formGroup}">
                    <label style="font-weight: normal; font-size: 16px; font-family: Oxygen;">Password</label>
                    <g:PasswordTextBox styleName="form-control  {style.marginFormControl}" ui:field="mPassword" />
                    <g:HTMLPanel styleName="{style.noteDetail}" ui:field="mPasswordNote" visible="false" />
                </g:HTMLPanel>



                <g:HTMLPanel styleName="checkbox {style.checkbox}">
                    <label>
                        <g:CheckBox ui:field="mRememberMe" />
                        <span style="font-size: 14px">Remember me</span>
                    </label>
                </g:HTMLPanel>


                <g:Button ui:field="mLogin" styleName="btn btn-lg btn-primary btn-block {style.button}">
                    Log In
                </g:Button>

                <div class="text-center" style="margin-bottom: 40px; font-size: 13px;  font-family: Avenir;">
                    I've forgotten my
                    <g:InlineHyperlink ui:field="mForgotPassword" styleName="{style.passLink}" targetHistoryToken="forgotpassword">Password</g:InlineHyperlink>
                </div>

            </g:HTMLPanel>
        </g:FormPanel>

    </g:HTMLPanel>
</ui:UiBinder> 