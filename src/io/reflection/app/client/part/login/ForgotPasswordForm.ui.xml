<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='images' type='io.reflection.app.client.res.Images' />
    <ui:style>
    .form {
    	padding-left: 55px;
    	padding-right: 55px;
    }
    
    .marginTop20 {
    	margin-top: 20px;
    }
    
    .marginTop5 {
    	margin-top: 5px;
    }
    
    .marginTop10 {
    	margin-top: 10px;
    }
    
    .noteDetail {
    	font-size: smaller;
    	margin-top: 5px;
    }
    
    .marginBottomForm {
    	margin-bottom: 30px;
    }
    
    .marginTop50 {
    	margin-top: 50px;
    }
    </ui:style>
    <g:HTMLPanel>
        <g:FormPanel ui:field="mForm" styleName="{style.form}" visible="false">

            <g:HTMLPanel styleName="{style.marginTop20}">
                <h4 class="text-center" style="padding-bottom: 30px;">
                    Forgot your details?
                </h4>

                <p>Enter your email address below and we'll send you a
                    reminder email</p>

                <hr />

                <g:HTMLPanel styleName="{style.marginTop10}">

                    <g:HTMLPanel ui:field="mEmailGroup" styleName="form-group">
                        <label>Email Address</label>
                        <g:TextBox styleName="form-control  {style.marginTop5}" ui:field="mEmail" />
                        <g:HTMLPanel styleName="{style.noteDetail}" ui:field="mEmailNote" visible="false" />
                    </g:HTMLPanel>

                    <g:Button ui:field="mSubmit" styleName="btn btn-lg btn-primary btn-block {style.marginBottomForm} {style.marginTop50}">
                        Submit
                    </g:Button>

                </g:HTMLPanel>
            </g:HTMLPanel>

        </g:FormPanel>

        <g:HTMLPanel ui:field="mReminder" styleName="{style.form} text-center" visible="false">
            <g:Image resource="{images.emailSent}" />
            <h4 style="margin-top: 40px; margin-bottom: 40px;">Reminder on it's way</h4>
            <p>We've sent a reminder email to the address you specified, it
                should
                be with you in a few moments</p>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder> 