<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
    
    </ui:style>
    <g:HTMLPanel>
        <g:FormPanel ui:field="mForm" styleName="form">

            <g:HTMLPanel>
                <h4 class="text-center" style="padding-bottom: 30px;">
                    Forgot your details?
                </h4>
                <p>Enter your email address below and we'll send you a
                    reset email</p>

                <hr />
                <g:HTMLPanel ui:field="mEmailGroup" styleName="form-group">
                    <label>Email Address</label>
                    <g:TextBox styleName="form-control" ui:field="mEmail" />
                    <g:HTMLPanel styleName="noteDetail" ui:field="mEmailNote" visible="false" />
                </g:HTMLPanel>

                <g:Button ui:field="mSubmit" styleName="btn btn-lg btn-primary btn-block">
                    Submit
                </g:Button>

            </g:HTMLPanel>

        </g:FormPanel>

    </g:HTMLPanel>
</ui:UiBinder> 