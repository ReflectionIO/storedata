<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:io.reflection.app.client.component">

	<ui:import field="io.reflection.app.client.res.Styles.STYLES_INSTANCE" />
	<ui:style gss="true">
	.main {
		visibility: visible !important;
		position: relative !important;
	}
	</ui:style>
	<g:HTMLPanel tag="form" styleName="{STYLES_INSTANCE.reflectionMainStyle.formsMidTheme} {STYLES_INSTANCE.reflectionMainStyle.formPasswordReset} {style.main}">

		<c:FormField ui:field="email" labelText="Email" styleName="{STYLES_INSTANCE.reflectionMainStyle.jsRotateContent}"></c:FormField>

		<p class="{STYLES_INSTANCE.reflectionMainStyle.jsFadeContent}">Fear not, we'll send an email to reset your password to the above address</p>

		<c:FormButton ui:field="submit"
			styleName="{STYLES_INSTANCE.reflectionMainStyle.refButtonFullWidth} {STYLES_INSTANCE.reflectionMainStyle.maintainAfterSubmit} {STYLES_INSTANCE.reflectionMainStyle.jsRotateContent}"
			text="Send password reset email" />

	</g:HTMLPanel>
</ui:UiBinder>


