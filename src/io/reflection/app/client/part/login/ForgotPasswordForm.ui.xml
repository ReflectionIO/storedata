<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:import field="io.reflection.app.client.page.PageType.LoginPageType" />
	<ui:style>
	.divider {
		display: block;
		margin-top: 20px;
		margin-bottom: 20px;
	}
	
	.title {
		padding-top: 20px;
		padding-bottom: 5px;
	}
	
	.tryAgain {
		padding-top: 10px;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:FormPanel ui:field="mForm" styleName="form">

			<g:HTMLPanel>
				<h4 class="text-center {style.title}">
					Forgot your details?
				</h4>
				<p class="text-center">Enter your email address below and we'll send you a
					reset
					email</p>

				<span class="divider-horizontal {style.divider}" />
				<g:HTMLPanel ui:field="mEmailGroup" styleName="form-group">
					<label>Email Address</label>
					<g:TextBox styleName="form-control" ui:field="mEmail" />
					<g:HTMLPanel styleName="noteDetail" ui:field="mEmailNote"
						visible="false" />
				</g:HTMLPanel>

				<g:Button ui:field="mSubmit" styleName="btn btn-lg btn-primary btn-block">
					Submit
					<span class="icon-right-small" />
				</g:Button>

				<div class="text-center {style.tryAgain}">
					<g:InlineHyperlink ui:field="tryAgainLink">Try
	Logging in Again</g:InlineHyperlink>
				</div>
			</g:HTMLPanel>

		</g:FormPanel>

	</g:HTMLPanel>
</ui:UiBinder> 