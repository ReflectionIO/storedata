<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:l="urn:import:io.reflection.app.client.part.login">
    <ui:with field='images' type='io.reflection.app.client.res.Images' />
    <ui:style>
    
    </ui:style>

    <g:HTMLPanel>

        <div class="col-md-6 text-center">
            <h1>Welcome to Reflection</h1>
            <p style="margin-top: 40px; margin-bottom: 70px; margin-left: 23px; margin-right: 23px;">Congratulations on becoming part of our private beta.
                Our
                goal
                is to provide the most insightful and accurate
                app intelligence
                and
                you can help us to
                achieve this.</p>

            <g:Image resource="{images.welcomeProgress}" />

            <div>
                <div class="col-md-4">
                    <h3 style="color: #6D69C5; margin-top: 30px;">
                        Step 1
                    </h3>
                    <p class="p-small" style="margin-top: 20px; padding-left: 3px; padding-right: 3px;">Sign in to your account to get started</p>
                </div>
                <div class="col-md-4">
                    <h3 style="margin-top: 30px;">
                        Step 2
                    </h3>
                    <p class="p-small" style="margin-top: 20px; padding-left: 10px; padding-right: 10px;">Link your iTunes Connect account</p>
                </div>
                <div class="col-md-4">
                    <h3 style=" margin-top: 30px;">
                        Step 3
                    </h3>
                    <p class="p-small" style="margin-top: 20px; padding-left: 10px; padding-right: 10px;">Done. Welcome to the private beta</p>
                </div>
            </div>

        </div>

        <l:LoginForm ui:field="mLoginForm" styleName="col-md-5 col-md-offset-1 well" />

    </g:HTMLPanel>

</ui:UiBinder> 