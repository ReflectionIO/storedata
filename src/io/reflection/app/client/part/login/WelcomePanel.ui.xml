<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:l="urn:import:io.reflection.app.client.part.login">
	<ui:with field='images' type='io.reflection.app.client.res.Images' />
	<ui:style>
	
	</ui:style>

	<g:HTMLPanel>

		<div class="col-md-6 text-center">
			<h2>Hello! Welcome to Reflection</h2>
			<p style="margin-top: 40px; margin-bottom: 70px">Congratulations on becoming part of our private beta.
				Our
				goal is to provide the most insightful and accurate
				app intelligence
				and you can help us to
				achieve this.</p>

			<g:Image resource="{images.welcomeProgress}" />

			<div>
				<div class="col-md-4">
					<h3 style="color: #9780E4">
						Step 1
					</h3>
					<p>Sign in with your account to get started</p>
				</div>
				<div class="col-md-4">
					<h3>
						Step 2
					</h3>
					<p>Link your iTunes Connect account</p>
				</div>
				<div class="col-md-4">
					<h3>
						Step 3
					</h3>
					<p>Done. Welcome to the private beta</p>
				</div>
			</div>

		</div>

		<l:LoginForm ui:field="mLoginForm" styleName="col-md-5 col-md-offset-1 well" />

	</g:HTMLPanel>

</ui:UiBinder> 