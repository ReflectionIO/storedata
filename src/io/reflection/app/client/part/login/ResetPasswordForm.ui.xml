<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:io.reflection.app.client.component">
	<ui:import field="io.reflection.app.client.res.Styles.STYLES_INSTANCE" />
	<ui:style gss="true">
	
	</ui:style>
	<g:HTMLPanel tag="form" styleName="{STYLES_INSTANCE.reflectionMainStyle.formsMidTheme}">

		<h4>
			Reset password?
		</h4>

		<c:FormField ui:field="resetCode" labelText="Reset Code" enabled="false"></c:FormField>

		<c:FormFieldPassword ui:field="newPassword" labelText="New Password" checkActive="true" />
		<c:FormFieldPassword ui:field="confirmPassword" labelText="Confirm New Password" />

		<c:FormButton ui:field="submit" styleName="{STYLES_INSTANCE.reflectionMainStyle.refButtonFullWidth}" text="Submit" />



	</g:HTMLPanel>

</ui:UiBinder> 