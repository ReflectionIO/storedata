<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
	.title {
	    padding-top: 20px;
	    padding-bottom: 5px;
	}
	
	.spaceUp {
	    padding-top: 10px;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:FormPanel ui:field="form" styleName="form">

			<g:HTMLPanel>

				<h4 class="text-center {style.title}">
					Reset password?
				</h4>

				<g:HTMLPanel ui:field="resetCodeGroup" styleName="form-group">
					<label>Reset Code</label>
					<g:TextBox styleName="form-control" ui:field="resetCode" enabled="false" />
				</g:HTMLPanel>

				<g:HTMLPanel ui:field="newPasswordGroup" styleName="form-group">
					<label>New Password</label>
					<g:PasswordTextBox styleName="form-control" ui:field="newPassword" />

					<label class="{style.spaceUp}">Confirm new Password</label>
					<g:PasswordTextBox styleName="form-control" ui:field="confirmPassword" />

					<g:HTMLPanel ui:field="newPasswordNote" visible="false" />
				</g:HTMLPanel>

				<g:Button ui:field="submit" styleName="btn btn-lg btn-primary btn-block">
					Submit
				</g:Button>


			</g:HTMLPanel>
		</g:FormPanel>

	</g:HTMLPanel>

</ui:UiBinder> 