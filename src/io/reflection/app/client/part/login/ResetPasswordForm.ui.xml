<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
    .form {
    	padding-left: 55px;
    	padding-right: 55px;
    }
    
    .marginTop20 {
    	margin-top: 20px;
    }
    
    .marginTop5 {
    	margin-top: 5px;
    }
    
    .marginTop10 {
    	margin-top: 10px;
    }
    
    .noteDetail {
    	font-size: smaller;
    	margin-top: 5px;
    }
    
    .marginBottomForm {
    	margin-bottom: 30px;
    }
    
    .marginTop50 {
    	margin-top: 50px;
    }
    </ui:style>
    <g:HTMLPanel>
        <g:FormPanel ui:field="form" styleName="{style.form}">


            <g:HTMLPanel styleName="{style.marginTop10}">

                <g:HTMLPanel ui:field="resetCodeGroup" styleName="form-group">
                    <label>Reset Code</label>
                    <g:TextBox styleName="form-control  {style.marginTop5}" ui:field="resetCode" enabled="false"/>
                </g:HTMLPanel>

                <g:HTMLPanel ui:field="newPasswordGroup" styleName="form-group">
                    <label>New Password</label>
                    <g:PasswordTextBox styleName="form-control input-lg" ui:field="newPassword" />

                    <label>Confirm new Password</label>
                    <g:PasswordTextBox styleName="form-control input-lg" ui:field="confirmPassword" />

                    <g:HTMLPanel ui:field="newPasswordNote" visible="false" styleName="{style.noteDetail}" />
                </g:HTMLPanel>

                <g:Button ui:field="submit" styleName="btn btn-lg btn-primary btn-block {style.marginBottomForm} {style.marginTop50}">
                    Submit
                </g:Button>


            </g:HTMLPanel>
        </g:FormPanel>

    </g:HTMLPanel>

</ui:UiBinder> 