<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:io.reflection.app.client.component">
	<ui:import field="io.reflection.app.client.res.Styles.STYLES_INSTANCE" />
	<ui:style gss="true">
	
	</ui:style>
	<g:HTMLPanel tag="form">
		<fieldset class="{STYLES_INSTANCE.reflectionMainStyle.connectAccountContent}">
			<h2
				class="{STYLES_INSTANCE.reflectionMainStyle.headingStyleHeadingFive} {STYLES_INSTANCE.reflectionMainStyle.accountFormHeading} {STYLES_INSTANCE.reflectionMainStyle.maintainAfterSubmit} {STYLES_INSTANCE.reflectionMainStyle.jsFadeContent}">Create New Password</h2>

			<c:PasswordField ui:field="newPassword" labelText="Enter a New Password" styleName="{STYLES_INSTANCE.reflectionMainStyle.jsRotateContent}"
				checkActive="true" />
			<c:PasswordField ui:field="confirmPassword" labelText="Confirm Password" styleName="{STYLES_INSTANCE.reflectionMainStyle.jsRotateContent}" />

			<c:FormButton ui:field="submit" styleName="{STYLES_INSTANCE.reflectionMainStyle.refButtonFullWidth}" text="Reset Password" />

		</fieldset>
	</g:HTMLPanel>

</ui:UiBinder> 