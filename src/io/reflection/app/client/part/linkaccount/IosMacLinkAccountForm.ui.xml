<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
    .noteDetail {
    	font-size: smaller;
    	margin-top: 5px;
    }
    
    .marginTop5 {
    	margin-top: 5px;
    }
    
    .inlineAnchor {
    	margin-left: 15px;
    	font-size: 11px;
    }
    </ui:style>
    <g:HTMLPanel>

        <g:HTMLPanel ui:field="mAccountUsernameGroup" styleName="form-group">
            <label>Account name</label>
            <g:TextBox styleName="form-control  {style.marginTop5}" ui:field="mAccountUsername" />
            <g:HTMLPanel styleName="{style.noteDetail}" ui:field="mAccountUsernameNote" visible="false" />
        </g:HTMLPanel>

        <g:HTMLPanel ui:field="mPasswordGroup" styleName="form-group">
            <label>Password</label>
            <g:PasswordTextBox styleName="form-control  {style.marginTop5}" ui:field="mPassword" />
            <g:HTMLPanel styleName="{style.noteDetail}" ui:field="mPasswordNote" visible="false" />
        </g:HTMLPanel>

        <g:HTMLPanel ui:field="mVendorIdGroup" styleName="form-group">
            <label>Vendor ID</label>
            <g:InlineHyperlink ui:field="whatsThis" styleName="{style.inlineAnchor}">What's this?</g:InlineHyperlink>
            <g:TextBox styleName="form-control {style.marginTop5}" ui:field="mVendorId" />
            <g:HTMLPanel styleName="{style.noteDetail}" ui:field="mVendorIdNote" visible="false" />
        </g:HTMLPanel>

    </g:HTMLPanel>
</ui:UiBinder> 