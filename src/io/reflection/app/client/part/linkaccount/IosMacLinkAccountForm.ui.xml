<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:io.reflection.app.client.component">

	<ui:import field="io.reflection.app.client.res.Styles.STYLES_INSTANCE" />

	<ui:style gss="true">
	
	</ui:style>
	<g:HTMLPanel tag="form">
		<fieldset class="{STYLES_INSTANCE.reflectionMainStyle.connectAccountContent}" style="visibility: visible; position: relative;">
			<h2 ui:field="title"></h2>

			<c:TextField ui:field="accountUsername" labelText="Account name" styleName="{STYLES_INSTANCE.reflectionMainStyle.jsRotateContent}" />

			<c:PasswordField ui:field="password" labelText="Account Password" styleName="{STYLES_INSTANCE.reflectionMainStyle.jsRotateContent}" />

			<c:TextField ui:field="vendorId" labelText="Vendor ID" infoHref="" infoLabelText="What's this?" styleName="{STYLES_INSTANCE.reflectionMainStyle.jsRotateContent}" />

			<c:FormButton ui:field="linkAccountBtn" styleName="{STYLES_INSTANCE.reflectionMainStyle.refButtonFullWidth} {STYLES_INSTANCE.reflectionMainStyle.maintainAfterSubmit}"
				text="Link this Account"></c:FormButton>

		</fieldset>
	</g:HTMLPanel>
</ui:UiBinder> 