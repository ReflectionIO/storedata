<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style gss="true">
    .container {
        height: 100px;
        padding-top: 30px;
    }
    
    .heading {
        display: inline-block;
    }
    
    .linkAccountPanel {
        display: inline-block;
    }
    
    .paragraph {
        display: inline-block;
        padding-left: 14px;
    }
    </ui:style>
    <g:HTMLPanel>
        <g:HTMLPanel styleName="{style.container}">
            <h6 class="{style.heading}">No Linked Accounts Found!</h6>
            <g:HTMLPanel styleName="{style.linkAccountPanel}">
                <p class="{style.paragraph}">
                    <g:InlineHyperlink ui:field="link">Link
                        an account</g:InlineHyperlink>
                </p>
            </g:HTMLPanel>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder> 