<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.form {
		padding-left: 55px;
		padding-right: 55px;
	}
	
	.formGroup {
		margin-bottom: 10px;
	}
	
	.marginFormControl {
		margin-top: 5px;
	}
	
	.marginTop20 {
		margin-top: 20px;
	}
	
	.noteDetail {
		font-size: smaller;
	}
	
	.checkbox {
		margin-top: 15px;
	}
	
	.button {
		margin-top: 40px;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:FormPanel styleName=" {style.form}">


			<g:HTMLPanel styleName="{style.marginTop20}">
				<h4 class="text-center">Request Invite</h4>
				<g:HTMLPanel styleName=" {style.marginTop20}">

					<g:HTMLPanel ui:field="mForenameGroup" styleName="form-group {style.formGroup}">
						<label
							style="font-weight: normal; font-size: 16px; font-family: Oxygen;">First name</label>
						<g:TextBox styleName="form-control {style.marginFormControl}"
							ui:field="mForename" />
						<g:HTMLPanel ui:field="mForenameNote" visible="false"
							styleName="{style.noteDetail}" />
					</g:HTMLPanel>

					<g:HTMLPanel ui:field="mSurnameGroup" styleName="form-group {style.formGroup}">
						<label
							style="font-weight: normal; font-size: 16px; font-family: Oxygen;">Last name</label>
						<g:TextBox styleName="form-control {style.marginFormControl}"
							ui:field="mSurname" />
						<g:HTMLPanel ui:field="mSurnameNote" visible="false"
							styleName="{style.noteDetail}" />
					</g:HTMLPanel>

					<g:HTMLPanel ui:field="mCompanyGroup" styleName="form-group {style.formGroup}">
						<label
							style="font-weight: normal; font-size: 16px; font-family: Oxygen;">Company</label>
						<g:TextBox styleName="form-control {style.marginFormControl}"
							ui:field="mCompany" />
						<g:HTMLPanel ui:field="mCompanyNote" visible="false"
							styleName="{style.noteDetail}" />
					</g:HTMLPanel>

					<g:HTMLPanel ui:field="mEmailGroup" styleName="form-group {style.formGroup}">
						<label
							style="font-weight: normal; font-size: 16px; font-family: Oxygen;">Email</label>
						<g:TextBox styleName="form-control {style.marginFormControl}"
							ui:field="mEmail" />
						<g:HTMLPanel ui:field="mEmailNote" visible="false"
							styleName="{style.noteDetail}" />
					</g:HTMLPanel>

					<g:HTMLPanel ui:field="mPasswordGroup" styleName="form-group {style.formGroup}">
						<label
							style="font-weight: normal; font-size: 16px; font-family: Oxygen;">Password</label>
						<g:PasswordTextBox styleName="form-control {style.marginFormControl}"
							ui:field="mPassword" />
						<g:HTMLPanel ui:field="mPasswordNote" visible="false"
							styleName="{style.noteDetail}" />
					</g:HTMLPanel>




					<g:HTMLPanel styleName="checkbox {style.checkbox}">
						<label>
							<g:CheckBox ui:field="mTermAndCond" />
							<span style="font-size: 14px">I agree to the</span>
							<g:InlineHyperlink ui:field="mTermAndCondLink">terms and
								conditions</g:InlineHyperlink>
						</label>
					</g:HTMLPanel>




					<g:Button ui:field="mRegister"
						styleName="btn btn-lg btn-primary btn-block {style.button}">
						Submit
					</g:Button>




				</g:HTMLPanel>
			</g:HTMLPanel>
		</g:FormPanel>
	</g:HTMLPanel>
</ui:UiBinder> 