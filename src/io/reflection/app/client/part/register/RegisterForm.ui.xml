<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
    
    </ui:style>
    <g:HTMLPanel>
        <g:FormPanel styleName="form">

            <g:HTMLPanel>
                <g:HTMLPanel ui:field="mForenameGroup" styleName="form-group">
                    <label>First name</label>
                    <g:TextBox styleName="form-control" ui:field="mForename" />
                    <g:HTMLPanel ui:field="mForenameNote" visible="false" styleName="noteDetail" />
                </g:HTMLPanel>

                <g:HTMLPanel ui:field="mSurnameGroup" styleName="form-group">
                    <label>Last name</label>
                    <g:TextBox styleName="form-control" ui:field="mSurname" />
                    <g:HTMLPanel ui:field="mSurnameNote" visible="false" styleName="noteDetail" />
                </g:HTMLPanel>

                <g:HTMLPanel ui:field="mCompanyGroup" styleName="form-group">
                    <label>Company</label>
                    <g:TextBox styleName="form-control" ui:field="mCompany" />
                    <g:HTMLPanel ui:field="mCompanyNote" visible="false" styleName="noteDetail" />
                </g:HTMLPanel>

                <g:HTMLPanel ui:field="mEmailGroup" styleName="form-group">
                    <label>Email</label>
                    <g:TextBox styleName="form-control" ui:field="mEmail" />
                    <g:HTMLPanel ui:field="mEmailNote" visible="false" styleName="noteDetail" />
                </g:HTMLPanel>

                <g:HTMLPanel ui:field="mPasswordGroup" styleName="form-group">
                    <label>Password</label>
                    <g:PasswordTextBox styleName="form-control" ui:field="mPassword" />
                    <label>Confirm Password</label>
                    <g:PasswordTextBox styleName="form-control" ui:field="confirmPassword" />
                    <g:HTMLPanel ui:field="mPasswordNote" visible="false" styleName="noteDetail" />
                </g:HTMLPanel>

                <g:HTMLPanel ui:field="termAndCondGroup">
                    <p class="p-small">
                        <g:CheckBox ui:field="mTermAndCond">
                            I agree to the
                            <a href="#terms">
                                <span class="p-small">terms and conditions</span>
                            </a>
                        </g:CheckBox>
                    </p>
                    <g:HTMLPanel ui:field="termAndCondNote" visible="false" styleName="noteDetail" />
                </g:HTMLPanel>

                <g:Button ui:field="mRegister" styleName="btn btn-lg btn-primary btn-block">
                    Submit
                </g:Button>

            </g:HTMLPanel>
        </g:FormPanel>
    </g:HTMLPanel>
</ui:UiBinder> 