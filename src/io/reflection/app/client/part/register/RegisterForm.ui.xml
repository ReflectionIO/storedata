<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:import field="io.reflection.app.client.page.PageType.TermsPageType" />

    <ui:style>
    .password {
        margin-top: 7px;
    }
    </ui:style>
    <g:HTMLPanel>
        <g:FormPanel styleName="form">

            <g:HTMLPanel>
                <g:HTMLPanel ui:field="forenameGroup" styleName="form-group">
                    <label>First name</label>
                    <g:TextBox styleName="form-control" ui:field="forename" />
                    <g:HTMLPanel ui:field="forenameNote" visible="false"
                        styleName="noteDetail" />
                </g:HTMLPanel>

                <g:HTMLPanel ui:field="surnameGroup" styleName="form-group">
                    <label>Last name</label>
                    <g:TextBox styleName="form-control" ui:field="surname" />
                    <g:HTMLPanel ui:field="surnameNote" visible="false"
                        styleName="noteDetail" />
                </g:HTMLPanel>

                <g:HTMLPanel ui:field="companyGroup" styleName="form-group">
                    <label>Company</label>
                    <g:TextBox styleName="form-control" ui:field="company" />
                    <g:HTMLPanel ui:field="companyNote" visible="false"
                        styleName="noteDetail" />
                </g:HTMLPanel>

                <g:HTMLPanel ui:field="emailGroup" styleName="form-group">
                    <label>Email</label>
                    <g:TextBox styleName="form-control" ui:field="email" />
                    <g:HTMLPanel ui:field="emailNote" visible="false"
                        styleName="noteDetail" />
                </g:HTMLPanel>

                <g:HTMLPanel ui:field="passwordGroup" styleName="form-group">
                    <label>Password</label>
                    <g:PasswordTextBox styleName="form-control"
                        ui:field="password" />
                    <label class="{style.password}">Confirm Password</label>
                    <g:PasswordTextBox styleName="form-control"
                        ui:field="confirmPassword" />
                    <g:HTMLPanel ui:field="passwordNote" visible="false"
                        styleName="noteDetail" />
                </g:HTMLPanel>

                <g:HTMLPanel ui:field="termAndCondGroup">
                    <g:CheckBox ui:field="termAndCond">
                        I agree to the
                        <a href="{TermsPageType.asHref}">
                            terms and conditions
                        </a>
                    </g:CheckBox>
                    <g:HTMLPanel ui:field="termAndCondNote" visible="false"
                        styleName="noteDetail" />
                </g:HTMLPanel>

                <g:Button ui:field="mRegister" styleName="btn btn-lg btn-primary btn-block">
                    Submit
                    <span class="icon-right-small" />
                </g:Button>

            </g:HTMLPanel>
        </g:FormPanel>
    </g:HTMLPanel>
</ui:UiBinder> 