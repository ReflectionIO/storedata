<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:io.reflection.app.client.component">

	<ui:import field="io.reflection.app.client.res.Styles.STYLES_INSTANCE" />

	<ui:style gss="true">
	
	</ui:style>
	<g:HTMLPanel tag="form">
		<c:TextField ui:field="forename" labelText="First Name" styleName="{STYLES_INSTANCE.reflectionMainStyle.jsRotateContent}" />
		<c:TextField ui:field="surname" labelText="Last Name" styleName="{STYLES_INSTANCE.reflectionMainStyle.jsRotateContent}" />
		<c:TextField ui:field="company" labelText="Your Company" styleName="{STYLES_INSTANCE.reflectionMainStyle.jsRotateContent}" />
		<c:TextField ui:field="email" labelText="Email" styleName="{STYLES_INSTANCE.reflectionMainStyle.jsRotateContent}" />

		<g:HTMLPanel ui:field="passwordGroup">
			<c:PasswordField ui:field="password" labelText="Password" checkActive="true" styleName="{STYLES_INSTANCE.reflectionMainStyle.jsRotateContent}" />
			<c:PasswordField ui:field="confirmPassword" labelText="Confirm Password" styleName="{STYLES_INSTANCE.reflectionMainStyle.jsRotateContent}" />
		</g:HTMLPanel>


		<g:HTMLPanel ui:field="termAndCondGroup" styleName="{STYLES_INSTANCE.reflectionMainStyle.formFieldCheckboxList} {STYLES_INSTANCE.reflectionMainStyle.jsFadeContent}">
			<ul>
				<li>
					<c:FormCheckbox ui:field="termAndCond" label="" />
					<div class="{STYLES_INSTANCE.reflectionMainStyle.generalErrorMessage}">
						<p ui:field="checkboxError"></p>
					</div>
				</li>
			</ul>
		</g:HTMLPanel>

		<c:LoadingButton ui:field="registerBtn"
			styleName="{STYLES_INSTANCE.reflectionMainStyle.refButtonFullWidth} {STYLES_INSTANCE.reflectionMainStyle.maintainAfterSubmit} {STYLES_INSTANCE.reflectionMainStyle.jsRotateContent}">
			Apply Now
		</c:LoadingButton>
	</g:HTMLPanel>


</ui:UiBinder> 