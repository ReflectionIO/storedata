<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="io.reflection.app.client.part.BackToTop.BackToTopStyle">
	.fix {
		bottom: 60px;
		right: 20px;
		position: fixed;
	}
	
	.link {
		padding-left: 6px;
		visibility: hidden;
		opacity: 0;
	}
	
	.show {
		visibility: visible;
		opacity: 1;
		transition: opacity 400 linear;
	}
	
	.hide {
		visibility: hidden;
		opacity: 0;
		transition: visibility 0 400, opacity 400 linear;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.fix}">
		<g:Anchor ui:field="link" styleName="btn btn-default {style.link}">
			<span class="icon-up" />
			Back to Top
		</g:Anchor>
	</g:HTMLPanel>
</ui:UiBinder> 