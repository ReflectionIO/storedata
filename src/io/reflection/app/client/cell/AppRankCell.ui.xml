<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
    <ui:with field="name" type="java.lang.String" />
    <ui:with field="smallImage" type="java.lang.String" />
    <ui:with field="creatorName" type="java.lang.String" />
    <ui:with field="itemId" type="java.lang.String" />
    <ui:with field="dailyData" type="java.lang.String" />
    <ui:with field="filter" type="java.lang.String" />
    <ui:with field="displayDailyData" type="java.lang.String" />

    <ui:style>
    .image {
    	width: 45px;
    	height: 45px;
    	float: left;
    }
    
    .description {
    	overflow: hidden;
    	float: left;
    }
    </ui:style>

    <div>
        <img class="img-rounded {style.image}" src="{smallImage}" />
        <div class="{style.description} col-md-9">
            <span>
                <a href="#item/view/{itemId}/{filter}" class="breakWords">
                    <ui:text from="{name}" />
                </a>
                <br />
            </span>
            <span class="text-muted breakWords">
                <ui:text from="{creatorName}" />
            </span>
            <br />
            <span style="display:{displayDailyData};">
                <i class="glyphicon glyphicon-align-right"></i>
                <ui:text from="{dailyData}" />
            </span>
        </div>
    </div>
</ui:UiBinder>