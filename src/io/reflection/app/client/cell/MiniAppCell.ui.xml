<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder">
    <ui:with field='styles' type='io.reflection.app.client.res.Styles' />

    <ui:with field="name" type="java.lang.String" />
    <ui:with field="smallImage" type="com.google.gwt.safehtml.shared.SafeUri" />
    <ui:with field="creatorName" type="java.lang.String" />
    <ui:with field="link" type="com.google.gwt.safehtml.shared.SafeUri" />

    <ui:style>
    .image {
    	width: 45px;
    	height: 45px;
    	float: left;
    }
    
    .description {
    	overflow: hidden;
    	float: left;
    }
    </ui:style>

    <div>
        <img class="img-rounded {style.image}" src="{smallImage}" />
        <div class="{style.description} col-md-9">
            <span>
                <a href="{link}" class="{styles.reflection.breakWords}">
                    <ui:text from="{name}" />
                </a>
                <br />
            </span>
            <span class="text-muted {styles.reflection.breakWords}">
                <ui:text from="{creatorName}" />
            </span>
        </div>
    </div>
</ui:UiBinder>