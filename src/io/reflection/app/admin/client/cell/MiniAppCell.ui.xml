<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>
    <ui:with field='name' type='java.lang.String' />
    <ui:with field='smallImage' type='java.lang.String' />
    <ui:with field='creatorName' type='java.lang.String' />
    <ui:with field='itemId' type='java.lang.String' />

    <ui:style>
        .image {
        	width: 45px;
        	height: 45px;
        	float: left;
        }
        
        .description {
            overflow: hidden;
            float: left;
        }
    </ui:style>

    <div>
        <img class="img-rounded {style.image}" src="{smallImage}" />
        <div class="{style.description} col-md-9">
            <span>
                <a href="#itemId={itemId}">
                    <ui:text from="{name}" />
                </a>
                <br />
            </span>
            <span class="text-muted">
                <ui:text from="{creatorName}" />
            </span>
        </div>
    </div>
</ui:UiBinder>