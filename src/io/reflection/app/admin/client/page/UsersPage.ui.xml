<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client"
    xmlns:p="urn:import:io.reflection.app.admin.client.part">
    <ui:style>
        /* Add CSS here. See the GWT docs on UI Binder for more details */
    </ui:style>
    <g:HTMLPanel>
        <!-- Add GWT widgets here. Enter < and hit Ctrl-Space to auto-complete widget names. The ui:field attribute binds an element to a field in the owner class. 
            See the GWT docs on UI Binder for more details. -->

        <h2>Users</h2>

        <g:HTMLPanel styleName="btn-group">
            <g:InlineHyperlink styleName="btn btn-default" text="Assign password" visible="false" ui:field="mAssignPassword" />
            <g:Button styleName="btn btn-default" text="Make admin" enabled="false" ui:field="mMakeAdmin" />
        </g:HTMLPanel>


        <c:CellTable ui:field="mUsers" styleName="table table-hover table-striped" />
        
        <!-- <c:SimplePager ui:field="mPager"/> -->
        <!-- <c:PageSizePager ui:field="mPager" /> -->
        
        <p:SimplePager ui:field="mPager" />
    </g:HTMLPanel>
</ui:UiBinder> 