<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.admin.client.part"
    xmlns:l="urn:import:io.reflection.app.admin.client.part.linkaccount">
    <ui:style>
        .toolbar_spacing {
			padding-top: 10px;
			padding-bottom: 10px;
		}
    </ui:style>
    <g:HTMLPanel>
        <h2>Linked Account(s)</h2>

        <g:HTMLPanel styleName="btn-group {style.toolbar_spacing}">
            <g:InlineHyperlink styleName="btn btn-default" text="iOS/Mac" ui:field="mIosMacLink" />
            <g:InlineHyperlink styleName="btn btn-default disabled" text="Google Play" ui:field="mPlay" />
            <g:InlineHyperlink styleName="btn btn-default disabled" text="Amazon" ui:field="mAmazon" />
            <g:InlineHyperlink styleName="btn btn-default disabled" text="Windows" ui:field="mWindowsPhone" />
        </g:HTMLPanel>

        <p:AlertBox ui:field="mAlertBox" visible="false" />

        <g:FormPanel ui:field="mForm" visible="false">
            <g:HTMLPanel styleName="col-sm-offset-4 col-sm-4">
                <l:IosMacLinkAccountForm ui:field="mIosMacForm" />
                
                <g:Button ui:field="mLinkAccount" styleName="btn btn-lg btn-primary btn-block" text="Link Account" />
            </g:HTMLPanel>
        </g:FormPanel>

    </g:HTMLPanel>
</ui:UiBinder> 