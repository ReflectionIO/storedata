<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p="urn:import:io.reflection.app.admin.client.part">
    <ui:style>
        @external form-control;
        .noteDetail {
        	font-size: smaller;
        	margin-top: 5px;
        }
        
        .passwordTop {
        	border-bottom-left-radius: 0;
        	border-bottom-right-radius: 0;
        	margin-bottom: -1px;
        	position: relative;
        }
        
        .passwordBottom {
        	border-top-left-radius: 0;
        	border-top-right-radius: 0;
        	position: relative;
        }
        
        .form-control:focus {
        	z-index: 2;
        }
    </ui:style>
    <g:HTMLPanel>
        <h2>Change Password</h2>
        
        <p:AlertBox ui:field="mAlertBox" visible="false" />
        
        <g:FormPanel ui:field="mForm">
            <g:HTMLPanel styleName="col-sm-offset-4 col-sm-4">

                <g:HTMLPanel ui:field="mPasswordGroup" styleName="form-group">
                    <label>Password</label>
                    <g:PasswordTextBox styleName="form-control input-lg" ui:field="mPassword" />
                    <g:HTMLPanel ui:field="mPasswordNote" visible="false" styleName="{style.noteDetail}" />
                </g:HTMLPanel>

                <g:HTMLPanel ui:field="mNewPasswordGroup" styleName="form-group">
                    <label>New Password</label>
                    <g:PasswordTextBox styleName="form-control input-lg {style.passwordTop}" ui:field="mNewPassword" />
                    <g:PasswordTextBox styleName="form-control input-lg {style.passwordBottom}" ui:field="mConfirmPassword" />
                    <g:HTMLPanel ui:field="mNewPasswordNote" visible="false" styleName="{style.noteDetail}" />
                </g:HTMLPanel>

                <g:Button ui:field="mChangePassword" styleName="btn btn-lg btn-primary btn-block" text="Apply" />

            </g:HTMLPanel>
        </g:FormPanel>
    </g:HTMLPanel>
</ui:UiBinder> 