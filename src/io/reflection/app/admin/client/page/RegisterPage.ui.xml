<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        @external form-control;
        
        .noteDetail {
        	font-size: smaller;
        	margin-top: 5px;
        }
        
        .passwordTop {
        	border-bottom-left-radius: 0;
        	border-bottom-right-radius: 0;
        	margin-bottom: -1px;
        	position: relative;
        }
        
        .passwordBottom {
        	border-top-left-radius: 0;
        	border-top-right-radius: 0;
        	position: relative;
        }
        
        .form-control:focus {
        	z-index: 2;
        }
        
    </ui:style>
    <g:HTMLPanel>
        <h2>Create Account</h2>
        <g:FormPanel>
            <g:HTMLPanel styleName="col-sm-offset-4 col-sm-4">
                <g:HTMLPanel ui:field="mForenameGroup" styleName="form-group">
                    <label>First name</label>
                    <g:TextBox styleName="form-control input-lg" ui:field="mForename" />
                    <g:HTMLPanel ui:field="mForenameNote" visible="false" styleName="{style.noteDetail}" />
                </g:HTMLPanel>

                <g:HTMLPanel ui:field="mSurnameGroup" styleName="form-group">
                    <label>Last name</label>
                    <g:TextBox styleName="form-control input-lg" ui:field="mSurname" />
                    <g:HTMLPanel ui:field="mSurnameNote" visible="false" styleName="{style.noteDetail}" />
                </g:HTMLPanel>

                <g:HTMLPanel ui:field="mCompanyGroup" styleName="form-group">
                    <label>Company</label>
                    <g:TextBox styleName="form-control input-lg" ui:field="mCompany" />
                    <g:HTMLPanel ui:field="mCompanyNote" visible="false" styleName="{style.noteDetail}" />
                </g:HTMLPanel>

                <g:HTMLPanel ui:field="mUsernameGroup" styleName="form-group">
                    <label>Username</label>
                    <g:TextBox styleName="form-control input-lg" ui:field="mUsername" />
                    <g:HTMLPanel ui:field="mUsernameNote" visible="false" styleName="{style.noteDetail}" />
                </g:HTMLPanel>

                <g:HTMLPanel ui:field="mPasswordGroup" styleName="form-group">
                    <label>Password</label>
                    <g:PasswordTextBox styleName="form-control input-lg {style.passwordTop}" ui:field="mPassword" />
                    <g:PasswordTextBox styleName="form-control input-lg {style.passwordBottom}" ui:field="mConfirmPassword" />
                    <g:HTMLPanel ui:field="mPasswordNote" visible="false" styleName="{style.noteDetail}" />
                </g:HTMLPanel>

                <g:Button ui:field="mRegister" styleName="btn btn-lg btn-primary btn-block" text="Sign up" />

            </g:HTMLPanel>
        </g:FormPanel>
    </g:HTMLPanel>
</ui:UiBinder> 