<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .noteDetail {
			font-size: smaller;
			margin-top: 5px;
		}
    </ui:style>
    <g:HTMLPanel>
        <h2>Sign In</h2>
        <g:FormPanel>
            <g:HTMLPanel styleName="col-sm-offset-4 col-sm-4">
                <g:HTMLPanel ui:field="mUsernameGroup" styleName="form-group">
                    <label>Username</label>
                    <g:TextBox styleName="form-control input-lg" ui:field="mUsername" />
                    <g:HTMLPanel ui:field="mUsernameNote" visible="false" styleName="{style.noteDetail}"/>
                </g:HTMLPanel>

                <g:HTMLPanel ui:field="mPasswordGroup" styleName="form-group">
                    <label>Password</label>
                    <g:PasswordTextBox styleName="form-control input-lg" ui:field="mPassword" />
                    <g:HTMLPanel ui:field="mPasswordNote" visible="false" styleName="{style.noteDetail}"/>
                </g:HTMLPanel>

                <g:CheckBox text="remember me" ui:field="mRememberMe" styleName="checkbox" />

                <g:Button ui:field="mLogin" styleName="btn btn-lg btn-primary btn-block" text="Sign in" />

                <br />

                <ul>
                    <li>
                        <g:InlineHyperlink ui:field="mRegister" text="Create Account" targetHistoryToken="register" />
                    </li>
                    <li>
                        <g:InlineHyperlink ui:field="mForgotPassword" text="Forgot Password" targetHistoryToken="forgotpassword" />
                    </li>
                </ul>

            </g:HTMLPanel>
        </g:FormPanel>
    </g:HTMLPanel>
</ui:UiBinder> 